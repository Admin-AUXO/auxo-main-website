---
import { Icon } from "astro-icon/components";

interface Credential {
  icon: string;
  label: string;
  description?: string;
}

const credentials: Credential[] = [
  {
    icon: "mdi:shield-check",
    label: "PDPL Compliant",
    description: "UAE Personal Data Protection Law compliance",
  },
  {
    icon: "mdi:security",
    label: "Security Best Practices",
    description: "Enterprise-grade security standards",
  },
  {
    icon: "mdi:certificate",
    label: "Proven Methodology",
    description: "Validated approach from years of experience",
  },
];
---

<div class="max-w-5xl mx-auto mb-8 sm:mb-12 md:mb-20">
  <div class="text-center mb-6 sm:mb-8 md:mb-12">
    <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-2 sm:mb-3 md:mb-4 text-primary transition-colors">
      Our Credentials
    </h2>
    <p class="text-sm sm:text-base text-secondary transition-colors">
      Trust through proven expertise and compliance
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
    {credentials.map((credential) => (
      <div class="bg-card border border-theme rounded-xl p-4 sm:p-6 text-center hover:border-accent-green transition-all group">
        <div class="w-16 h-16 bg-accent-green/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4 group-hover:bg-accent-green/20 transition-colors">
          <Icon
            name={credential.icon}
            class="w-8 h-8 text-accent-green transition-colors"
          />
        </div>
        <h3 class="font-bold mb-2 text-base sm:text-lg text-primary transition-colors">
          {credential.label}
        </h3>
        {credential.description && (
          <p class="text-xs sm:text-sm text-secondary transition-colors">
            {credential.description}
          </p>
        )}
      </div>
    ))}
  </div>
</div>

