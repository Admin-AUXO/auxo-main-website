---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Breadcrumbs } from "astro-breadcrumbs";
import PageContainer from "../../components/layouts/PageContainer.astro";
import ContentWrapper from "../../components/layouts/ContentWrapper.astro";
import { services } from "../../data/collections/services";
import { getUseCases } from "../../data/collections/servicesUseCases";
import { Icon } from "astro-icon/components";
import { generateServiceBreadcrumbs } from "../../utils/breadcrumbs";
import ServiceSummary from "../../components/sections/services/ServiceSummary.astro";
import ServiceBusinessImpact from "../../components/sections/services/ServiceBusinessImpact.astro";
import ServiceStartupAdvantage from "../../components/sections/services/ServiceStartupAdvantage.astro";
import ServiceTimeline from "../../components/sections/services/ServiceTimeline.astro";
import ExecutiveTimeCommitment from "../../components/sections/services/ExecutiveTimeCommitment.astro";

const base = import.meta.env.BASE_URL;

export async function getStaticPaths() {
  return services.map((service) => ({
    params: { id: service.id },
    props: { service },
  }));
}

const { service } = Astro.props;
const useCases = getUseCases(service.id);

// Generate formatted breadcrumbs
const breadcrumbItems = generateServiceBreadcrumbs(
  Astro.url.pathname,
  service.title,
);

// Get first business impact as expected impact summary
const expectedImpact =
  service.businessImpact && service.businessImpact.length > 0
    ? service.businessImpact[0]
    : undefined;
---

<BaseLayout
  title={`${service.title} | AUXO Data Labs`}
  description={service.description}
>
  <PageContainer maxWidth="5xl" paddingTop="pt-24" paddingBottom="pb-16">
    <!-- Breadcrumb with Structured Data -->
    <ContentWrapper maxWidth="5xl" class="mb-8">
      <Breadcrumbs
        class="text-sm breadcrumb-theme"
        separator="chevron"
        crumbs={breadcrumbItems}
      />
    </ContentWrapper>

    <!-- Header -->
    <ContentWrapper maxWidth="5xl" class="mb-12 sm:mb-16">
      <div class="flex items-center space-x-4 mb-6">
        <div
          class="w-16 h-16 bg-accent-green/10 rounded-xl flex items-center justify-center hover:bg-accent-green/20 transition-all duration-300 hover:scale-105"
        >
          <Icon
            name={service.icon}
            class="w-8 h-8 text-accent-green transition-colors"
          />
        </div>
        <div class="flex-1">
          <div
            class="text-sm text-accent-green transition-colors font-semibold mb-1"
          >
            Service
          </div>
          <h1
            class="text-4xl md:text-5xl font-bold text-primary transition-colors mb-4"
          >
            {service.title}
          </h1>
          <!-- Badges Row -->
          <div class="flex flex-wrap items-center gap-2 sm:gap-3 mb-4">
            {
              service.timeline && (
                <div class="bg-surface/80 backdrop-blur-sm text-secondary text-xs sm:text-sm font-medium px-3 py-1.5 sm:px-4 sm:py-2 rounded-full border border-theme flex items-center gap-1.5 min-h-[44px]">
                  <Icon
                    name="mdi:clock"
                    class="w-4 h-4 text-accent-green flex-shrink-0"
                  />
                  <span>{service.timeline}</span>
                </div>
              )
            }
            {
              service.complexity && (
                <div class="bg-surface/80 backdrop-blur-sm text-secondary text-xs sm:text-sm font-medium px-3 py-1.5 sm:px-4 sm:py-2 rounded-full border border-theme flex items-center gap-1.5 min-h-[44px]">
                  {service.complexity === "Beginner-Friendly" && (
                    <Icon
                      name="mdi:check-circle"
                      class="w-4 h-4 text-accent-green flex-shrink-0"
                    />
                  )}
                  {service.complexity === "Intermediate" && (
                    <Icon
                      name="mdi:minus"
                      class="w-4 h-4 text-accent-green flex-shrink-0"
                    />
                  )}
                  {service.complexity === "Enterprise-Level" && (
                    <Icon
                      name="mdi:star"
                      class="w-4 h-4 text-accent-green flex-shrink-0"
                    />
                  )}
                  <span>{service.complexity} Service</span>
                </div>
              )
            }
            <div
              class="bg-accent-green/20 text-accent-green text-xs sm:text-sm font-semibold px-3 py-1.5 sm:px-4 sm:py-2 rounded-full border border-accent-green/30 backdrop-blur-sm flex items-center gap-1.5 min-h-[44px]"
            >
              <Icon
                name="mdi:account-group"
                class="w-4 h-4 text-accent-green flex-shrink-0"
              />
              <span>Founder-Led</span>
            </div>
          </div>
        </div>
      </div>
      <p
        class="text-lg sm:text-xl text-secondary transition-colors leading-relaxed"
      >
        {service.description}
      </p>
    </ContentWrapper>

    <!-- Quick Summary Box -->
    <ContentWrapper maxWidth="5xl" class="mb-8 sm:mb-12">
      <ServiceSummary
        timeline={service.timeline}
        involvement="Minimal"
        expectedImpact={expectedImpact}
      />
    </ContentWrapper>

    <!-- Two Column Layout -->
    <ContentWrapper
      maxWidth="5xl"
      class="grid grid-cols-1 lg:grid-cols-3 gap-8 sm:gap-10 lg:gap-12"
    >
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-12">
        <!-- Business Impact Section (Before Features) -->
        {
          service.businessImpact && service.businessImpact.length > 0 && (
            <ServiceBusinessImpact service={service} />
          )
        }

        <!-- Features -->
        <div class="bg-card border border-theme rounded-2xl p-6 sm:p-8">
          <h2
            class="text-xl sm:text-2xl font-bold mb-5 sm:mb-6 flex items-center text-primary transition-colors"
          >
            <Icon
              name="mdi:star"
              class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green transition-colors mr-2 sm:mr-3 flex-shrink-0"
            />
            Key Features
          </h2>
          <ul class="space-y-2 sm:space-y-2.5">
            {
              service.features.map((feature, index) => {
                // Categorize features based on keywords
                const lowerFeature = feature.toLowerCase();
                let category = "Core Feature";
                let categoryIcon = "mdi:star";

                if (
                  lowerFeature.includes("advanced") ||
                  lowerFeature.includes("predictive") ||
                  lowerFeature.includes("ml") ||
                  lowerFeature.includes("ai")
                ) {
                  category = "Advanced Feature";
                  categoryIcon = "mdi:rocket";
                } else if (
                  lowerFeature.includes("automated") ||
                  lowerFeature.includes("real-time") ||
                  lowerFeature.includes("streaming")
                ) {
                  category = "Automation Feature";
                  categoryIcon = "mdi:lightning-bolt";
                } else if (
                  lowerFeature.includes("compliance") ||
                  lowerFeature.includes("security") ||
                  lowerFeature.includes("governance")
                ) {
                  category = "Governance Feature";
                  categoryIcon = "mdi:shield-check";
                } else if (index === 0 || index === 1) {
                  category = "Core Feature";
                  categoryIcon = "mdi:star";
                }

                return (
                  <li class="flex items-start gap-3 p-2 sm:p-3 rounded-lg hover:bg-surface/50 active:bg-surface/70 transition-all duration-300 group min-h-[44px]">
                    <div class="w-6 h-6 sm:w-7 sm:h-7 bg-accent-green/20 rounded-full flex items-center justify-center mt-0.5 flex-shrink-0 group-hover:bg-accent-green/30 transition-colors">
                      <Icon
                        name="mdi:check"
                        class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green transition-colors"
                      />
                    </div>
                    <div class="flex-1">
                      <div class="flex items-start gap-2 flex-wrap">
                        <span class="text-sm sm:text-base text-primary transition-colors leading-relaxed flex-1">
                          {feature}
                        </span>
                        <span class="bg-surface text-secondary text-xs font-medium px-2 py-1 rounded-full border border-theme flex items-center gap-1 flex-shrink-0">
                          <Icon
                            name={categoryIcon}
                            class="w-3 h-3 text-accent-green"
                          />
                          <span class="hidden sm:inline">{category}</span>
                        </span>
                      </div>
                    </div>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <!-- Startup Advantage Section -->
        <ServiceStartupAdvantage />

        <!-- Deliverables -->
        <div class="bg-card border border-theme rounded-2xl p-6 sm:p-8">
          <h2
            class="text-xl sm:text-2xl font-bold mb-5 sm:mb-6 flex items-center text-primary transition-colors"
          >
            <Icon
              name="mdi:package-variant"
              class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green transition-colors mr-2 sm:mr-3 flex-shrink-0"
            />
            What You'll Get
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
            {
              service.deliverables.map((deliverable, index) => {
                // Categorize deliverables by type
                const lowerDeliverable = deliverable.toLowerCase();
                let deliverableType = "Document";
                let deliverableIcon = "mdi:file-document";

                if (
                  lowerDeliverable.includes("dashboard") ||
                  lowerDeliverable.includes("visualization") ||
                  lowerDeliverable.includes("report")
                ) {
                  deliverableType = "Dashboard";
                  deliverableIcon = "mdi:chart-bar";
                } else if (
                  lowerDeliverable.includes("training") ||
                  lowerDeliverable.includes("session") ||
                  lowerDeliverable.includes("workshop")
                ) {
                  deliverableType = "Training";
                  deliverableIcon = "mdi:book-open";
                } else if (
                  lowerDeliverable.includes("model") ||
                  lowerDeliverable.includes("framework") ||
                  lowerDeliverable.includes("infrastructure")
                ) {
                  deliverableType = "Solution";
                  deliverableIcon = "mdi:tools";
                } else if (
                  lowerDeliverable.includes("documentation") ||
                  lowerDeliverable.includes("document") ||
                  lowerDeliverable.includes("strategy") ||
                  lowerDeliverable.includes("roadmap")
                ) {
                  deliverableType = "Document";
                  deliverableIcon = "mdi:file-document";
                } else if (
                  lowerDeliverable.includes("presentation") ||
                  lowerDeliverable.includes("summary")
                ) {
                  deliverableType = "Presentation";
                  deliverableIcon = "mdi:post";
                }

                // Make first deliverable larger/more prominent
                const isPrimary = index === 0;

                return (
                  <div
                    class={`flex items-start gap-3 p-3 sm:p-4 rounded-lg border transition-all duration-300 hover:scale-[1.02] hover:shadow-md min-h-[44px] ${
                      isPrimary
                        ? "bg-gradient-to-br from-accent-green/10 to-accent-green/5 border-accent-green/30 sm:col-span-2"
                        : "bg-surface border-theme/50 hover:border-accent-green/50"
                    }`}
                  >
                    <div
                      class={`flex-shrink-0 mt-0.5 ${
                        isPrimary ? "w-6 h-6" : "w-5 h-5"
                      }`}
                    >
                      <Icon
                        name={deliverableIcon}
                        class={`${isPrimary ? "w-6 h-6" : "w-5 h-5"} text-accent-green transition-colors`}
                      />
                    </div>
                    <div class="flex-1">
                      <div class="flex items-start gap-2 flex-wrap mb-1">
                        <span
                          class={`${isPrimary ? "text-sm sm:text-base font-semibold" : "text-xs sm:text-sm"} text-primary transition-colors leading-relaxed flex-1`}
                        >
                          {deliverable}
                        </span>
                        <span
                          class={`bg-card text-secondary text-xs font-medium px-2 py-0.5 rounded-full border border-theme flex items-center gap-1 flex-shrink-0 ${
                            isPrimary ? "" : "hidden sm:flex"
                          }`}
                        >
                          <Icon
                            name={deliverableIcon}
                            class="w-3 h-3 text-accent-green"
                          />
                          <span class="hidden sm:inline">
                            {deliverableType}
                          </span>
                        </span>
                      </div>
                    </div>
                  </div>
                );
              })
            }
          </div>
        </div>

        <!-- Timeline & Engagement Section -->
        {
          service.timeline && (
            <>
              <ServiceTimeline timeline={service.timeline} />
              <ExecutiveTimeCommitment />
            </>
          )
        }

        <!-- Use Cases -->
        <div
          class="bg-gradient-to-br from-accent-green/10 to-accent-green/20 border border-accent-green/20 rounded-2xl p-6 sm:p-8"
        >
          <h2
            class="text-xl sm:text-2xl font-bold mb-5 sm:mb-6 flex items-center text-primary transition-colors"
          >
            <Icon
              name="mdi:lightbulb"
              class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green transition-colors mr-2 sm:mr-3 flex-shrink-0"
            />
            Common Use Cases
          </h2>
          <div class="space-y-3 sm:space-y-4">
            {
              useCases && useCases.length > 0 ? (
                useCases.map((useCase) => {
                  // Infer industry from use case content
                  const lowerText = (
                    useCase.title +
                    " " +
                    useCase.description
                  ).toLowerCase();
                  let industry = "";
                  let industryIcon = "mdi:briefcase";

                  if (
                    lowerText.includes("retail") ||
                    lowerText.includes("e-commerce") ||
                    lowerText.includes("store")
                  ) {
                    industry = "Retail";
                    industryIcon = "mdi:store";
                  } else if (
                    lowerText.includes("healthcare") ||
                    lowerText.includes("hospital") ||
                    lowerText.includes("medical")
                  ) {
                    industry = "Healthcare";
                    industryIcon = "mdi:hospital";
                  } else if (
                    lowerText.includes("finance") ||
                    lowerText.includes("banking") ||
                    lowerText.includes("financial")
                  ) {
                    industry = "Finance";
                    industryIcon = "mdi:currency-usd";
                  } else if (
                    lowerText.includes("manufacturing") ||
                    lowerText.includes("factory") ||
                    lowerText.includes("production")
                  ) {
                    industry = "Manufacturing";
                    industryIcon = "mdi:factory";
                  } else if (
                    lowerText.includes("logistics") ||
                    lowerText.includes("supply chain") ||
                    lowerText.includes("warehouse")
                  ) {
                    industry = "Logistics";
                    industryIcon = "mdi:truck-fast";
                  } else if (
                    lowerText.includes("professional services") ||
                    lowerText.includes("consulting")
                  ) {
                    industry = "Professional Services";
                    industryIcon = "mdi:briefcase";
                  }

                  return (
                    <div class="bg-card border border-theme rounded-lg p-4 sm:p-5 hover:border-accent-green/50 transition-colors">
                      <div class="flex items-start gap-3">
                        <div class="w-8 h-8 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
                          <Icon
                            name="mdi:lightbulb"
                            class="w-4 h-4 text-accent-green transition-colors"
                          />
                        </div>
                        <div class="flex-1">
                          <div class="flex items-start gap-2 flex-wrap mb-1">
                            <h3 class="font-semibold text-sm sm:text-base text-primary transition-colors flex-1">
                              {useCase.title}
                            </h3>
                            {industry && (
                              <span class="bg-surface text-secondary text-xs font-medium px-2 py-1 rounded-full border border-theme flex items-center gap-1 flex-shrink-0">
                                <Icon
                                  name={industryIcon}
                                  class="w-3 h-3 text-accent-green"
                                />
                                <span class="hidden sm:inline">{industry}</span>
                              </span>
                            )}
                          </div>
                          <p class="text-xs sm:text-sm text-secondary transition-colors leading-relaxed">
                            {useCase.description}
                          </p>
                        </div>
                      </div>
                    </div>
                  );
                })
              ) : (
                <p class="text-sm text-secondary transition-colors">
                  No specific use cases found for this service.
                </p>
              )
            }
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-24 space-y-5 sm:space-y-6">
          <!-- Founder Access Highlight -->
          <div
            class="bg-accent-green/10 border border-accent-green/30 rounded-xl p-4 sm:p-5"
          >
            <div class="flex items-start gap-3">
              <Icon
                name="mdi:account-group"
                class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green transition-colors flex-shrink-0 mt-0.5"
              />
              <div>
                <h3
                  class="font-bold mb-1 text-sm sm:text-base text-primary transition-colors"
                >
                  Work directly with founders
                </h3>
                <p
                  class="text-xs text-secondary transition-colors leading-relaxed"
                >
                  No junior consultants. No account managers. Direct access
                  throughout the project.
                </p>
              </div>
            </div>
          </div>

          <!-- Quick Stats Card -->
          <div class="bg-card border border-theme rounded-2xl p-5 sm:p-6">
            <h3
              class="font-bold mb-3 sm:mb-4 text-base sm:text-lg text-primary transition-colors flex items-center gap-2"
            >
              <Icon
                name="mdi:chart-bar"
                class="w-5 h-5 text-accent-green transition-colors"
              />
              Quick Stats
            </h3>
            <div class="space-y-3">
              {
                service.timeline && (
                  <div class="flex items-center justify-between pb-2 border-b border-theme">
                    <span class="text-xs sm:text-sm text-secondary transition-colors">
                      Timeline
                    </span>
                    <span class="text-xs sm:text-sm font-semibold text-primary transition-colors">
                      {service.timeline}
                    </span>
                  </div>
                )
              }
              {
                service.complexity && (
                  <div class="flex items-center justify-between pb-2 border-b border-theme">
                    <span class="text-xs sm:text-sm text-secondary transition-colors">
                      Complexity
                    </span>
                    <span class="text-xs sm:text-sm font-semibold text-primary transition-colors">
                      {service.complexity}
                    </span>
                  </div>
                )
              }
              <div
                class="flex items-center justify-between pb-2 border-b border-theme"
              >
                <span
                  class="text-xs sm:text-sm text-secondary transition-colors"
                  >Involvement</span
                >
                <span
                  class="text-xs sm:text-sm font-semibold text-primary transition-colors"
                  >Minimal</span
                >
              </div>
              <div class="flex items-center justify-between">
                <span
                  class="text-xs sm:text-sm text-secondary transition-colors"
                  >Founder-Led</span
                >
                <Icon
                  name="mdi:check-circle"
                  class="w-4 h-4 text-accent-green transition-colors"
                />
              </div>
            </div>
          </div>

          <!-- Pricing Indicator -->
          <div class="bg-card border border-theme rounded-2xl p-5 sm:p-6">
            <div class="flex items-start justify-between mb-3">
              <h3
                class="font-bold text-base sm:text-lg text-primary transition-colors flex items-center gap-2"
              >
                <Icon
                  name="mdi:currency-usd"
                  class="w-5 h-5 text-accent-green transition-colors"
                />
                Pricing
              </h3>
              <div class="group relative">
                <Icon
                  name="mdi:information"
                  class="w-4 h-4 text-secondary transition-colors cursor-help"
                />
                <div
                  class="absolute right-0 top-6 w-48 bg-card border border-theme rounded-lg p-3 shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10"
                >
                  <p class="text-xs text-secondary leading-relaxed">
                    Project-based pricing tailored to your needs. Request a
                    quote for a customized estimate.
                  </p>
                </div>
              </div>
            </div>
            <p
              class="text-xs sm:text-sm text-secondary mb-4 leading-relaxed transition-colors"
            >
              Custom pricing based on your project scope and requirements
            </p>
            <a
              href={`${base}contact/`}
              class="block w-full py-2.5 bg-surface border border-theme font-semibold rounded-lg hover:bg-surface/80 hover:border-accent-green/50 active:bg-surface/70 transition-colors text-center text-xs sm:text-sm min-h-[44px] flex items-center justify-center touch-manipulation"
            >
              Request Quote
            </a>
          </div>

          <!-- CTA Card -->
          <div class="bg-card border border-theme rounded-2xl p-5 sm:p-6">
            <h3
              class="font-bold mb-3 sm:mb-4 text-base sm:text-lg text-primary transition-colors"
            >
              Ready to Get Started?
            </h3>
            <p
              class="text-xs sm:text-sm text-secondary mb-5 sm:mb-6 leading-relaxed transition-colors"
            >
              Schedule a free consultation to discuss your needs
            </p>
            <a
              href={`${base}contact/`}
              class="block w-full py-3 sm:py-3 bg-accent-green font-semibold rounded-lg hover:bg-accent-green/90 active:bg-accent-green/80 transition-colors text-center text-sm sm:text-base min-h-[44px] flex items-center justify-center touch-manipulation"
            >
              Let's Talk
            </a>
            <p
              class="text-xs text-secondary text-center mt-3 transition-colors"
            >
              No obligation. Just honest advice.
            </p>
          </div>

          <!-- Quick Decision Guide -->
          <div class="bg-card border border-theme rounded-2xl p-5 sm:p-6">
            <h3
              class="font-bold mb-3 sm:mb-4 text-base sm:text-lg text-primary transition-colors"
            >
              Is this right for you?
            </h3>
            <div class="space-y-3">
              <div class="flex items-start gap-3">
                <Icon
                  name="mdi:check-circle"
                  class="w-5 h-5 text-accent-green transition-colors flex-shrink-0 mt-0.5"
                />
                <span class="text-xs sm:text-sm text-primary transition-colors">
                  Do you need faster insights?
                </span>
              </div>
              <div class="flex items-start gap-3">
                <Icon
                  name="mdi:check-circle"
                  class="w-5 h-5 text-accent-green transition-colors flex-shrink-0 mt-0.5"
                />
                <span class="text-xs sm:text-sm text-primary transition-colors">
                  Want direct founder access?
                </span>
              </div>
              <div class="flex items-start gap-3">
                <Icon
                  name="mdi:check-circle"
                  class="w-5 h-5 text-accent-green transition-colors flex-shrink-0 mt-0.5"
                />
                <span class="text-xs sm:text-sm text-primary transition-colors">
                  Prefer agile methodology?
                </span>
              </div>
              <div class="flex items-start gap-3">
                <Icon
                  name="mdi:check-circle"
                  class="w-5 h-5 text-accent-green transition-colors flex-shrink-0 mt-0.5"
                />
                <span class="text-xs sm:text-sm text-primary transition-colors">
                  Value transparency?
                </span>
              </div>
            </div>
            <p
              class="text-xs text-secondary mt-4 text-center transition-colors"
            >
              If you answered yes, let's talk!
            </p>
          </div>

          <!-- Related Services -->
          <div class="bg-card border border-theme rounded-2xl p-5 sm:p-6">
            <h3
              class="font-bold mb-3 sm:mb-4 text-base sm:text-lg text-primary transition-colors"
            >
              Related Services
            </h3>
            <div class="space-y-2 sm:space-y-3">
              {
                services
                  .filter((s) => s.id !== service.id)
                  .slice(0, 3)
                  .map((s) => (
                    <a
                      href={`${base}services/${s.id}/`}
                      class="block p-3 sm:p-3 bg-surface rounded-lg hover:bg-surface/80 active:bg-surface/70 transition-colors group touch-manipulation min-h-[44px] flex items-center"
                    >
                      <Icon
                        name={s.icon}
                        class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green transition-colors mr-2 sm:mr-3 flex-shrink-0"
                      />
                      <span class="text-xs sm:text-sm font-medium group-hover:text-accent-green transition-colors transition-colors">
                        {s.title}
                      </span>
                    </a>
                  ))
              }
            </div>
            <a
              href={`${base}services/`}
              class="block mt-4 text-xs sm:text-sm text-accent-green transition-colors hover:underline py-1 touch-manipulation"
            >
              View All Services â†’
            </a>
          </div>

          <!-- Related Resources -->
