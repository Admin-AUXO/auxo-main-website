---
import { Icon } from "astro-icon/components";
import { siteData } from "../../data/config/site";

---

<section
  class="relative z-20 w-full bg-gradient-to-r from-accent-green/5 via-accent-green/5 to-accent-green/5 border-b border-accent-green/10 backdrop-blur-sm py-3 animate-fade-in"
>
  <div class="container mx-auto px-4 sm:px-6">
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6 text-center sm:text-left"
    >
      <!-- Combined Experience -->
      <div class="flex items-center gap-2 sm:gap-3">
        <div
          class="w-8 h-8 sm:w-9 sm:h-9 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0"
        >
          <Icon
            name="mdi:account-group"
            class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green"
          />
        </div>
        <div class="flex flex-col sm:flex-row sm:items-center sm:gap-2">
          <span
            class="text-sm sm:text-base font-semibold text-primary transition-colors"
          >
            {siteData.stats.yearsExperience} Years Combined Experience
          </span>
          <span class="hidden sm:inline text-tertiary">â€¢</span>
        </div>
      </div>

      <!-- Fresh Perspective -->
      <div class="flex items-center gap-2 sm:gap-3">
        <div
          class="w-8 h-8 sm:w-9 sm:h-9 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0"
        >
          <Icon
            name="mdi:lightbulb"
            class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green"
          />
        </div>
        <span class="text-sm sm:text-base text-secondary transition-colors">
          Fresh perspective, proven methodology
        </span>
      </div>

      <!-- PDPL Compliance -->
      <div class="flex items-center gap-2 sm:gap-3">
        <div
          class="w-8 h-8 sm:w-9 sm:h-9 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0"
        >
          <Icon
            name="mdi:shield-check"
            class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green"
          />
        </div>
        <span class="text-sm sm:text-base text-secondary transition-colors">
          PDPL Compliant
        </span>
      </div>
    </div>
  </div>
</section>
