---
import BaseLayout from "../layouts/BaseLayout.astro";
import MultiStepForm from "../components/MultiStepForm.astro";
import { siteData } from "../data/config/site";
import { contactContent } from "../data/content/contact";
import { commonText } from "../data/shared/common";
import { Icon } from "astro-icon/components";

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Contact Us - Get Started with Data Analytics | AUXO Data Labs"
  description="Ready to transform your data into insights? As a startup, we move fast with personal attention. Contact AUXO Data Labs for a free consultationâ€”responses within 24 hours."
>
  <div class="pt-20 sm:pt-24 pb-12 sm:pb-16">
    <div class="container mx-auto px-4 sm:px-6">
      <!-- Header -->
      <div class="max-w-3xl mx-auto text-center mb-8 sm:mb-12 md:mb-16">
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-3 sm:mb-4">
          {contactContent.hero.title}
          <span class="text-accent-green transition-colors">
            {contactContent.hero.titleHighlight}</span
          >
        </h1>
        <p class="text-base sm:text-lg md:text-xl text-secondary transition-colors">
          {contactContent.hero.subtitle}
        </p>
      </div>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 sm:gap-10 md:gap-12 mb-8 sm:mb-12 md:mb-16">
        <!-- Contact Information Column -->
        <div class="lg:col-span-1 mb-6 lg:mb-0">
          <div class="lg:sticky lg:top-24">
            <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6">
              {contactContent.sidebar.title}
            </h2>

            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div
                  class="w-10 h-10 bg-accent-green/10 rounded-lg flex items-center justify-center flex-shrink-0 transition-colors"
                >
                  <Icon name="mdi:email" class="w-5 h-5 text-accent-green transition-colors" />
                </div>
                <div>
                  <h3 class="font-semibold mb-1 text-primary transition-colors">{commonText.labels.email}</h3>
                  <a
                    href={`mailto:${siteData.email}`}
                    class="text-secondary hover:text-accent-green transition-colors"
                  >
                    {siteData.email}
                  </a>
                </div>
              </div>

              <!-- Phone -->
              {
                siteData.phone && (
                  <div class="flex items-start space-x-4">
                    <div class="w-10 h-10 bg-accent-green/10 rounded-lg flex items-center justify-center flex-shrink-0 transition-colors">
                      <Icon name="mdi:phone" class="w-5 h-5 text-accent-green transition-colors" />
                    </div>
                    <div>
                      <h3 class="font-semibold mb-1 text-primary transition-colors">
                        {commonText.labels.phone}
                      </h3>
                      <a
                        href={`tel:${siteData.phone}`}
                        class="text-secondary hover:text-accent-green transition-colors"
                      >
                        {siteData.phone}
                      </a>
                    </div>
                  </div>
                )
              }

              <!-- Location -->
              <div class="flex items-start space-x-4">
                <div
                  class="w-10 h-10 bg-accent-green/10 rounded-lg flex items-center justify-center flex-shrink-0 transition-colors"
                >
                  <Icon name="mdi:map-marker" class="w-5 h-5 text-accent-green transition-colors" />
                </div>
                <div>
                  <h3 class="font-semibold mb-1 text-primary transition-colors">
                    {commonText.labels.location}
                  </h3>
                  <p class="text-secondary transition-colors">
                    {siteData.address.city}<br />
                    {siteData.address.country}
                  </p>
                </div>
              </div>

              <!-- Social -->
              <div class="flex items-start space-x-4">
                <div
                  class="w-10 h-10 bg-accent-green/10 rounded-lg flex items-center justify-center flex-shrink-0 transition-colors"
                >
                  <Icon
                    name="mdi:share-variant"
                    class="w-5 h-5 text-accent-green transition-colors"
                  />
                </div>
                <div>
                  <h3 class="font-semibold mb-2 text-primary transition-colors">
                    {commonText.labels.followUs}
                  </h3>
                  <div class="flex gap-3">
                    <a
                      href={siteData.social.linkedin}
                      class="w-8 h-8 bg-surface rounded-lg flex items-center justify-center hover:bg-accent-green hover:text-black dark:hover:text-white transition-colors min-h-[44px] min-w-[44px]"
                    >
                      <Icon name="mdi:linkedin" class="w-4 h-4" />
                    </a>
                    <a
                      href={siteData.social.twitter}
                      class="w-8 h-8 bg-surface rounded-lg flex items-center justify-center hover:bg-accent-green hover:text-black dark:hover:text-white transition-colors min-h-[44px] min-w-[44px]"
                    >
                      <Icon name="mdi:twitter" class="w-4 h-4" />
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Quick Info Box -->
            <div
              class="mt-8 p-6 bg-gradient-to-br from-accent-green/10 to-accent-green/20 border border-accent-green/20 rounded-lg transition-colors"
            >
              <h3 class="font-bold mb-2 text-primary transition-colors">
                {contactContent.sidebar.info.fastResponse.title}
              </h3>
              <p class="text-sm text-secondary transition-colors">
                {contactContent.sidebar.info.fastResponse.description}
              </p>
            </div>
          </div>
        </div>

        <!-- Form Column -->
        <div class="lg:col-span-2">
          <div class="bg-card/50 border border-theme rounded-2xl p-8 transition-colors">
            <MultiStepForm />
          </div>
        </div>
      </div>

      <!-- Additional Contact Options -->
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {
            contactContent.additionalOptions.map((option) => (
              <div class="text-center p-6 bg-card border border-theme rounded-lg hover:border-accent-green transition-colors">
                <Icon
                  name={option.icon}
                  class="w-12 h-12 text-accent-green mx-auto mb-4 transition-colors"
                />
                <h3 class="font-bold mb-2 text-primary transition-colors">{option.title}</h3>
                <p class="text-sm text-secondary mb-4 transition-colors">{option.description}</p>
                {option.action.type === "button" ? (
                  <button
                    id={option.action.id}
                    class="text-accent-green hover:underline text-sm focus:outline-none focus:ring-2 focus:ring-accent-green/50 rounded px-2 transition-colors min-h-[44px]"
                  >
                    {option.action.text}
                  </button>
                ) : option.action.href === 'brochure.pdf' ? (
                  <a
                    href={`${base}${option.action.href}`}
                    class="text-accent-green hover:underline text-sm transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {option.action.text}
                  </a>
                ) : (
                  <a
                    href={`${base}${option.action.href}`}
                    class="text-accent-green hover:underline text-sm transition-colors"
                  >
                    {option.action.text}
                  </a>
                )}
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Schedule call button handler
  const scheduleBtn = document.getElementById("schedule-btn");

  scheduleBtn?.addEventListener("click", () => {
    // TODO: Replace with actual Calendly link or booking system
    const calendlyURL = "https://calendly.com/auxodata"; // Placeholder - unused for now
    void calendlyURL; // Suppress unused variable warning

    // For now, show alert to configure
    const proceed = confirm(
      "Scheduling system not configured.\n\nWould you like to contact us via email instead?",
    );
    if (proceed) {
      window.location.href =
        "mailto:hello@auxodata.com?subject=Schedule a Consultation";
    }
  });
</script>
