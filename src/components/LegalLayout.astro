---
import { Icon } from "astro-icon/components";
import { legalContent } from "../data/content/legal";

interface Props {
  title: string;
  lastUpdated: string;
  effectiveDate?: string;
  summary?: string;
}

const { title, lastUpdated, effectiveDate, summary } = Astro.props;
const base = import.meta.env.BASE_URL;

// Generate table of contents from slot content
const legalPages = legalContent.navigation.pages.map((page) => ({
  name: page.name,
  href: `${base}${page.href}`,
}));
---

<div class="max-w-7xl mx-auto">
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
    <!-- Sidebar Navigation -->
    <aside class="lg:col-span-1">
      <div class="sticky top-24 space-y-6">
        <!-- Legal Pages Navigation -->
        <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6">
          <h3 class="font-bold text-white mb-4 flex items-center gap-2">
            <Icon name="mdi:file-document" class="w-5 h-5 text-lime-400" />
            {legalContent.navigation.title}
          </h3>
          <nav class="space-y-2">
            {
              legalPages.map((page) => (
                <a
                  href={page.href}
                  class={`block px-3 py-2 rounded-lg text-sm transition-colors ${
                    page.name === title
                      ? "bg-lime-400/10 text-lime-400 font-semibold"
                      : "text-gray-400 hover:text-lime-400 hover:bg-zinc-800"
                  }`}
                >
                  {page.name}
                </a>
              ))
            }
          </nav>
        </div>

        <!-- Quick Actions -->
        <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6">
          <h3 class="font-bold text-white mb-4 flex items-center gap-2">
            <Icon name="mdi:help-circle" class="w-5 h-5 text-lime-400" />
            {legalContent.sidebar.needHelp.title}
          </h3>
          <div class="space-y-3 text-sm">
            <a
              href={`${base}contact`}
              class="flex items-center gap-2 text-gray-400 hover:text-lime-400 transition-colors"
            >
              <Icon name="mdi:email-outline" class="w-4 h-4" />
              {legalContent.sidebar.needHelp.contactUs}
            </a>
            <a
              href={`mailto:${legalContent.sidebar.needHelp.privacyEmail}`}
              class="flex items-center gap-2 text-gray-400 hover:text-lime-400 transition-colors"
            >
              <Icon name="mdi:shield-check" class="w-4 h-4" />
              {legalContent.sidebar.needHelp.privacyTeam}
            </a>
          </div>
        </div>

        <!-- Print/Download -->
        <button
          onclick="window.print()"
          class="w-full bg-zinc-800 hover:bg-zinc-700 text-white px-4 py-3 rounded-lg text-sm font-semibold transition-colors flex items-center justify-center gap-2"
        >
          <Icon name="mdi:download" class="w-4 h-4" />
          {legalContent.sidebar.printSave}
        </button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="lg:col-span-3">
      <!-- Header -->
      <div class="mb-8">
        <div
          class="inline-block px-3 py-1 bg-lime-400/10 border border-lime-400/20 rounded-full mb-4"
        >
          <span
            class="text-lime-400 text-xs font-semibold uppercase tracking-wide"
            >Legal Document</span
          >
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-400">
          <span class="flex items-center gap-2">
            <Icon name="mdi:calendar-clock" class="w-4 h-4 text-lime-400" />
            Last Updated: <strong class="text-white">{lastUpdated}</strong>
          </span>
          {
            effectiveDate && (
              <span class="flex items-center gap-2">
                <Icon name="mdi:calendar-check" class="w-4 h-4 text-lime-400" />
                Effective: <strong class="text-white">{effectiveDate}</strong>
              </span>
            )
          }
        </div>

        {
          summary && (
            <div class="mt-6 p-4 bg-lime-400/5 border-l-4 border-lime-400 rounded-r-lg">
              <p class="text-gray-300 leading-relaxed">
                <strong class="text-white">Summary:</strong> {summary}
              </p>
            </div>
          )
        }
      </div>

      <!-- Content -->
      <div class="prose prose-invert prose-lime max-w-none">
        <div class="bg-zinc-900 border border-zinc-800 rounded-2xl p-8 md:p-12">
          <slot />
        </div>
      </div>

      <!-- Footer CTA -->
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-6 bg-lime-400/10 border border-lime-400/20 rounded-xl">
          <Icon name="mdi:email-outline" class="w-8 h-8 text-lime-400 mb-3" />
          <h3 class="font-bold text-white mb-2">
            {legalContent.footer.questions.title}
          </h3>
          <p class="text-sm text-gray-400 mb-4">
            {legalContent.footer.questions.description}
          </p>
          <a
            href={`${base}contact`}
            class="inline-flex items-center text-lime-400 hover:text-lime-300 font-semibold text-sm"
          >
            {legalContent.footer.questions.cta}
            <Icon name="mdi:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>

        <div class="p-6 bg-zinc-800 border border-zinc-700 rounded-xl">
          <Icon name="mdi:shield-check" class="w-8 h-8 text-lime-400 mb-3" />
          <h3 class="font-bold text-white mb-2">
            {legalContent.footer.dataProtection.title}
          </h3>
          <p class="text-sm text-gray-400 mb-4">
            {legalContent.footer.dataProtection.description}
          </p>
          <a
            href={`mailto:${legalContent.footer.dataProtection.email}`}
            class="inline-flex items-center text-lime-400 hover:text-lime-300 font-semibold text-sm"
          >
            {legalContent.footer.dataProtection.email}
            <Icon name="mdi:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>
      </div>
    </main>
  </div>
</div>

<style is:global>
  /* Base prose styling */
  .prose {
    color: #e5e5e5;
  }

  /* H2 Headings - Main sections */
  .prose h2 {
    color: #a3e635;
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .prose h2:first-child {
    margin-top: 0;
  }

  /* H3 Headings - Subsections */
  .prose h3 {
    color: #ffffff;
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  /* Paragraphs - with indentation */
  .prose p {
    color: #e5e5e5;
    line-height: 1.75;
    margin-bottom: 1.25rem;
    text-indent: 2rem !important;
  }

  /* Lists */
  .prose ul,
  .prose ol {
    margin-top: 0.75rem;
    margin-bottom: 1.25rem;
    margin-left: 2rem;
    padding-left: 1.5rem;
  }

  .prose ul {
    list-style-type: disc !important;
  }

  .prose ol {
    list-style-type: decimal !important;
  }

  .prose li {
    color: #d4d4d4;
    line-height: 1.7;
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }

  .prose li::marker {
    color: #a3e635;
  }

  /* Strong text */
  .prose strong {
    color: #ffffff;
    font-weight: 600;
  }

  /* Links */
  .prose a {
    color: #a3e635;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: #bef264;
  }
</style>
