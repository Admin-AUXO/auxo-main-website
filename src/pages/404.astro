---
import BaseLayout from "../layouts/BaseLayout.astro";
import { commonText } from "../data/content/shared/common";
import { Icon } from "astro-icon/components";

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="404 - Page Not Found | AUXO Data Labs"
  description="The page you're looking for doesn't exist. Return to AUXO Data Labs homepage or explore our services."
>
  <div class="min-h-screen flex items-center justify-center px-4 py-16">
    <div class="max-w-2xl w-full text-center">
      <!-- 404 Graphic -->
      <div class="mb-8 relative">
        <!-- Alert Icon above 404 -->
        <div class="flex justify-center mb-4">
          <div class="relative">
            <div class="w-24 h-24 bg-accent-green/10 rounded-full flex items-center justify-center border-4 border-accent-green">
              <Icon
                name="mdi:alert-circle"
                class="w-12 h-12 text-accent-green transition-colors"
              />
            </div>
          </div>
        </div>
        <div
          class="text-9xl font-bold text-accent-green transition-colors select-none"
        >
          404
        </div>
      </div>

      <!-- Error Message -->
      <h1 class="text-4xl md:text-5xl font-bold text-primary mb-4">
        {commonText.errors.pageNotFound}
      </h1>
      <p class="text-xl text-secondary transition-colors mb-8 leading-relaxed">
        {commonText.errors.pageNotFoundDescription}
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href={base}
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-accent-green text-on-accent font-bold rounded-lg hover:bg-accent-green/90 transition-colors active:scale-95 focus:outline-none focus:ring-2 focus:ring-accent-green/50 focus:ring-offset-2 focus:ring-offset-black"
        >
          <Icon name="mdi:home" class="w-5 h-5" />
          {commonText.buttons.returnHome}
        </a>
        <a
          href={`${base}contact/`}
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-surface text-primary font-bold rounded-lg hover:bg-surface/70 transition-all transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-accent-green/50 focus:ring-offset-2 focus:ring-offset-black"
        >
          <Icon name="mdi:email-outline" class="w-5 h-5" />
          {commonText.cta.contactUs}
        </a>
      </div>

      <!-- Helpful Links -->
      <div class="pt-8">
        <h2 class="text-lg font-semibold text-primary mb-4">
          Explore AUXO Data Labs
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
          <a
            href={`${base}services/`}
            class="flex flex-col items-center gap-2 p-4 bg-card rounded-lg hover:bg-surface transition-colors group"
          >
            <Icon
              name="mdi:briefcase"
              class="w-6 h-6 text-accent-green transition-colors group-hover:scale-110 transition-transform"
            />
            <span
              class="text-secondary transition-colors group-hover:text-primary transition-colors"
              >Services</span
            >
          </a>
          <a
            href={`${base}about/`}
            class="flex flex-col items-center gap-2 p-4 bg-card rounded-lg hover:bg-surface transition-colors group"
          >
            <Icon
              name="mdi:information"
              class="w-6 h-6 text-accent-green transition-colors group-hover:scale-110 transition-transform"
            />
            <span
              class="text-secondary transition-colors group-hover:text-primary transition-colors"
              >About Us</span
            >
          </a>
          <a
            href={`${base}blog/`}
            class="flex flex-col items-center gap-2 p-4 bg-card rounded-lg hover:bg-surface transition-colors group"
          >
            <Icon
              name="mdi:post"
              class="w-6 h-6 text-accent-green transition-colors group-hover:scale-110 transition-transform"
            />
            <span
              class="text-secondary transition-colors group-hover:text-primary transition-colors"
              >Blog</span
            >
          </a>
          <a
            href={`${base}tools/maturity-calculator/`}
            class="flex flex-col items-center gap-2 p-4 bg-card rounded-lg hover:bg-surface transition-colors group"
          >
            <Icon
              name="mdi:calculator"
              class="w-6 h-6 text-accent-green transition-colors group-hover:scale-110 transition-transform"
            />
            <span
              class="text-secondary transition-colors group-hover:text-primary transition-colors"
              >Assessment</span
            >
          </a>
        </div>
      </div>

      <!-- Search Suggestion -->
      <div class="mt-8 text-sm text-tertiary transition-colors">
        <p>
          Lost? Try starting from our <a
            href={base}
            class="text-accent-green transition-colors hover:underline"
            >homepage</a
          > or <a
            href={`${base}contact/`}
            class="text-accent-green transition-colors hover:underline"
            >contact us</a
          > for assistance.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
