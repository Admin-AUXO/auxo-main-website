---
import { Icon } from "astro-icon/components";
import { aboutContent } from "../../../data/content/about";

const { title, titleHighlight, subtitle, comparisons, labels } = aboutContent.whyDifferent;
---

<div class="max-w-6xl mx-auto mb-16 sm:mb-20 px-4 sm:px-0">
  <div class="text-center mb-12 sm:mb-16 animate-fade-in">
    <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.1] tracking-tight" style="font-family: var(--font-display);">
      {title} <span class="text-gradient-green block mt-2"
        >{titleHighlight}</span
      >
    </h2>
    <p class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-normal" style="font-family: var(--font-body);">
      {subtitle}
    </p>
  </div>

  <div class="bg-card border border-theme rounded-xl sm:rounded-2xl p-3 sm:p-4 md:p-6 lg:p-8 overflow-x-auto">
    <div class="min-w-full">
      <!-- Header -->
      <div class="grid grid-cols-3 gap-2 sm:gap-3 md:gap-4 mb-3 sm:mb-4 pb-2 sm:pb-3 md:pb-4 border-b border-theme">
        <div class="font-bold text-xs sm:text-sm md:text-base text-primary transition-colors">
          {labels.feature}
        </div>
        <div class="font-bold text-xs sm:text-sm md:text-base text-secondary transition-colors text-center">
          {labels.them}
        </div>
        <div class="font-bold text-xs sm:text-sm md:text-base text-accent-green transition-colors text-center">
          {labels.us}
        </div>
      </div>

      <!-- Comparison Rows -->
      <div class="space-y-2 sm:space-y-3 md:space-y-4">
        {comparisons.map((comparison) => (
          <div class="grid grid-cols-3 gap-2 sm:gap-3 md:gap-4 py-2 sm:py-2.5 md:py-3 lg:py-4 border-b border-theme/50 last:border-0">
            <div class="font-semibold text-xs sm:text-sm md:text-base text-primary transition-colors">
              {comparison.feature}
            </div>
            <div class="flex items-start sm:items-center justify-center gap-1 sm:gap-2">
              <Icon name="mdi:close" class="w-3.5 h-3.5 sm:w-4 sm:h-4 md:w-5 md:h-5 text-secondary transition-colors flex-shrink-0 mt-0.5 sm:mt-0" />
              <span class="text-xs sm:text-sm text-secondary transition-colors text-center leading-tight">
                {comparison.them}
              </span>
            </div>
            <div class="flex items-start sm:items-center justify-center gap-1 sm:gap-2">
              <Icon name="mdi:check-circle" class="w-3.5 h-3.5 sm:w-4 sm:h-4 md:w-5 md:h-5 text-accent-green transition-colors flex-shrink-0 mt-0.5 sm:mt-0" />
              <span class="text-xs sm:text-sm text-primary transition-colors text-center leading-tight">
                {comparison.us}
              </span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

