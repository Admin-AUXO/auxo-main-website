---
import { Icon } from "astro-icon/components";
import { formatDateLong } from "../../utils/date";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog"> & { readTime?: number };
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
const base = import.meta.env.BASE_URL;
const slug = post.id.replace(/\.mdx?$/, "");

// Check if post is new (published in last 7 days)
const isNewPost = post.data.publishDate && 
  (Date.now() - post.data.publishDate.getTime()) < 7 * 24 * 60 * 60 * 1000;
---

{featured ? (
  <div class="max-w-6xl mx-auto mb-6">
    <a
      href={`${base}blog/${slug}/`}
      class="group block bg-gradient-to-br from-card to-card/80 border-2 border-theme rounded-2xl overflow-hidden hover:border-accent-green transition-all duration-300"
      aria-label={`Read ${post.data.title}`}
    >
      <div class="grid grid-cols-1 md:grid-cols-2 gap-0">
        <div class="aspect-video md:aspect-auto bg-gradient-to-br from-accent-green/20 to-accent-green/30 flex items-center justify-center">
          {post.data.image ? (
            <img
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-full object-cover"
              loading="eager"
            />
          ) : (
            <Icon name="mdi:post" class="w-24 h-24 text-accent-green transition-colors" />
          )}
        </div>

        <div class="p-8 md:p-12 flex flex-col justify-center">
          <div class="flex flex-wrap items-center gap-2 mb-4">
            <div class="inline-flex items-center gap-1.5 px-3 py-1 bg-accent-green text-xs font-bold rounded-full transition-colors">
              <Icon name="mdi:star" class="w-3 h-3" />
              FEATURED
            </div>
            {isNewPost && (
              <div class="inline-flex items-center gap-1.5 px-3 py-1 bg-accent-green/20 border border-accent-green/40 text-accent-green text-xs font-semibold rounded-full transition-colors">
                NEW
              </div>
            )}
          </div>

          <h2 class="text-3xl font-bold mb-4 group-hover:text-accent-green transition-colors text-primary">
            {post.data.title}
          </h2>

          <p class="text-secondary mb-6 transition-colors">
            {post.data.description}
          </p>

          {/* All category tags */}
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-4">
              {post.data.tags.map((tag: string) => (
                <span class="px-2.5 py-1 bg-accent-green/10 text-accent-green text-xs rounded-full border border-accent-green/20 font-medium transition-colors">
                  #{tag}
                </span>
              ))}
            </div>
          )}

          <div class="flex flex-wrap items-center gap-2 text-sm text-tertiary transition-colors">
            <div class="flex items-center gap-1.5">
              <Icon name="mdi:calendar" class="w-4 h-4 text-accent-green" />
              <span>{formatDateLong(post.data.publishDate)}</span>
            </div>
            <span>•</span>
            <div class="flex items-center gap-1.5">
              <Icon name="mdi:account" class="w-4 h-4 text-accent-green" />
              <span>{post.data.author}</span>
            </div>
            {post.readTime && post.readTime > 0 && (
              <>
                <span>•</span>
                <div class="flex items-center gap-1.5">
                  <Icon name="mdi:clock" class="w-4 h-4 text-accent-green" />
                  <span>{post.readTime} min read</span>
                </div>
              </>
            )}
          </div>
        </div>
      </div>
    </a>
  </div>
) : (
  <a
    href={`${base}blog/${slug}/`}
    class="group bg-card border border-theme rounded-xl overflow-hidden hover:border-accent-green transition-all duration-300 hover:-translate-y-1"
    aria-label={`Read ${post.data.title}`}
  >
    <div class="aspect-video bg-gradient-to-br from-accent-green/20 to-accent-green/30 flex items-center justify-center">
      {post.data.image ? (
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      ) : (
        <Icon name="mdi:post" class="w-12 h-12 text-accent-green transition-colors" />
      )}
    </div>

    <div class="p-6">
      <div class="flex flex-wrap items-center gap-2 mb-3">
        {post.data.tags && post.data.tags.length > 0 && (
          <>
            {post.data.tags.slice(0, 3).map((tag: string) => (
              <span class="px-2 py-1 bg-accent-green/10 text-accent-green text-xs rounded-full border border-accent-green/20 font-medium transition-colors">
                #{tag}
              </span>
            ))}
            {post.data.tags.length > 3 && (
              <span class="px-2 py-1 bg-surface text-tertiary text-xs rounded-full border border-theme">
                +{post.data.tags.length - 3}
              </span>
            )}
          </>
        )}
        {isNewPost && (
          <div class="inline-flex items-center gap-1 px-2 py-1 bg-accent-green/20 border border-accent-green/40 text-accent-green text-xs font-semibold rounded-full">
            NEW
          </div>
        )}
      </div>

      <h3 class="text-xl font-bold mb-3 group-hover:text-accent-green transition-colors line-clamp-2 text-primary">
        {post.data.title}
      </h3>

      <p class="text-sm text-secondary mb-4 line-clamp-2 transition-colors">
        {post.data.description}
      </p>

      <div class="flex flex-wrap items-center gap-2 text-xs text-tertiary transition-colors">
        <div class="flex items-center gap-1">
          <Icon name="mdi:calendar" class="w-3.5 h-3.5 text-accent-green" />
          <span>{formatDateLong(post.data.publishDate)}</span>
        </div>
        <span>•</span>
        <div class="flex items-center gap-1">
          <Icon name="mdi:account" class="w-3.5 h-3.5 text-accent-green" />
          <span>{post.data.author}</span>
        </div>
        {post.readTime && post.readTime > 0 && (
          <>
            <span>•</span>
            <div class="flex items-center gap-1">
              <Icon name="mdi:clock" class="w-3.5 h-3.5 text-accent-green" />
              <span>{post.readTime} min</span>
            </div>
          </>
        )}
      </div>
    </div>
  </a>
)}

