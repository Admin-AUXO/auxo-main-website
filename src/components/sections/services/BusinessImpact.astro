---
import { Icon } from "astro-icon/components";

interface BusinessImpactItem {
  icon: string;
  title: string;
  description?: string;
}

interface Props {
  impacts: BusinessImpactItem[];
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
}

const { 
  impacts, 
  title = "What This Means for Your Business",
  titleHighlight,
  subtitle = "Business outcomes, not just technical features"
} = Astro.props;
---

<div class="max-w-6xl mx-auto">
  {(title || titleHighlight || subtitle) && (
    <div class="text-center mb-12 sm:mb-16">
      {(title || titleHighlight) && (
        <h2
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.3] tracking-tight"
          style="font-family: var(--font-display);"
        >
          {title} {titleHighlight && <span class="text-gradient-green block mt-2 pb-1"
            >{titleHighlight}</span
          >}
        </h2>
      )}
      {subtitle && (
        <p
          class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-normal"
          style="font-family: var(--font-body);"
        >
          {subtitle}
        </p>
      )}
    </div>
  )}

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-5">
    {impacts.map((impact) => (
      <div class="bg-card border-2 border-theme rounded-xl p-4 sm:p-6 hover:border-accent-green/60 transition-all duration-normal hover:shadow-lg">
        <div class="flex flex-col items-center text-center">
          <div class="w-12 h-12 sm:w-14 sm:h-14 bg-accent-green/20 rounded-lg flex items-center justify-center mb-3 sm:mb-4">
            <Icon 
              name={impact.icon} 
              class="w-6 h-6 sm:w-7 sm:h-7 text-accent-green transition-colors" 
            />
          </div>
          <h3 class="text-sm sm:text-base font-semibold text-primary mb-2 transition-colors">
            {impact.title}
          </h3>
          {impact.description && (
            <p class="text-xs sm:text-sm text-secondary leading-relaxed transition-colors">
              {impact.description}
            </p>
          )}
        </div>
      </div>
    ))}
  </div>
</div>
