---
import { Icon } from "astro-icon/components";
import { formatDateLong } from "../../utils/date";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
const base = import.meta.env.BASE_URL;
const slug = post.id.replace(/\.mdx?$/, "");
---

{featured ? (
  <div class="max-w-6xl mx-auto mb-16">
    <a
      href={`${base}blog/${slug}`}
      class="group block bg-gradient-to-br from-card to-card/80 border-2 border-theme rounded-2xl overflow-hidden hover:border-accent-green transition-all duration-300"
      aria-label={`Read ${post.data.title}`}
    >
      <div class="grid grid-cols-1 md:grid-cols-2 gap-0">
        <div class="aspect-video md:aspect-auto bg-gradient-to-br from-accent-green/20 to-accent-green/30 flex items-center justify-center">
          {post.data.image ? (
            <img
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-full object-cover"
              loading="eager"
            />
          ) : (
            <Icon name="mdi:post" class="w-24 h-24 text-accent-green transition-colors" />
          )}
        </div>

        <div class="p-8 md:p-12 flex flex-col justify-center">
          <div class="inline-block px-3 py-1 bg-accent-green text-black dark:text-white text-xs font-bold rounded-full mb-4 w-fit transition-colors">
            FEATURED
          </div>

          <h2 class="text-3xl font-bold mb-4 group-hover:text-accent-green transition-colors text-primary">
            {post.data.title}
          </h2>

          <p class="text-secondary mb-6 transition-colors">
            {post.data.description}
          </p>

          <div class="flex items-center text-sm text-tertiary transition-colors">
            <span>{formatDateLong(post.data.publishDate)}</span>
            <span class="mx-2">•</span>
            <span>{post.data.author}</span>
            {post.data.tags && post.data.tags.length > 0 && (
              <>
                <span class="mx-2">•</span>
                <span class="text-accent-green transition-colors">#{post.data.tags[0]}</span>
              </>
            )}
          </div>
        </div>
      </div>
    </a>
  </div>
) : (
  <a
    href={`${base}blog/${slug}`}
    class="group bg-card border border-theme rounded-xl overflow-hidden hover:border-accent-green transition-all duration-300 hover:-translate-y-1"
    aria-label={`Read ${post.data.title}`}
  >
    <div class="aspect-video bg-gradient-to-br from-accent-green/20 to-accent-green/30 flex items-center justify-center">
      {post.data.image ? (
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      ) : (
        <Icon name="mdi:post" class="w-12 h-12 text-accent-green transition-colors" />
      )}
    </div>

    <div class="p-6">
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-3">
          {post.data.tags.slice(0, 2).map((tag: string) => (
            <span class="px-2 py-1 bg-accent-green/10 text-accent-green text-xs rounded transition-colors">
              #{tag}
            </span>
          ))}
        </div>
      )}

      <h3 class="text-xl font-bold mb-3 group-hover:text-accent-green transition-colors line-clamp-2 text-primary">
        {post.data.title}
      </h3>

      <p class="text-sm text-secondary mb-4 line-clamp-2 transition-colors">
        {post.data.description}
      </p>

      <div class="flex items-center text-xs text-tertiary transition-colors">
        <span>{formatDateLong(post.data.publishDate)}</span>
        <span class="mx-2">•</span>
        <span>{post.data.author}</span>
      </div>
    </div>
  </a>
)}

