---
import { siteData } from "../data/config/site";
import { services } from "../data/collections/services";
import { Icon } from "astro-icon/components";

const base = import.meta.env.BASE_URL;
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: base, label: "Home" },
  { href: `${base}about/`, label: "About" },
  { href: `${base}services/`, label: "Services" },
  { href: `${base}case-studies/`, label: "Cases" },
  { href: `${base}blog/`, label: "Blog" },
  { href: `${base}contact/`, label: "Contact" },
];

const resourceLinks = [
  { href: `${base}tools/maturity-calculator/`, label: "Calculator" },
];

const legalLinks = [
  { href: `${base}legal/privacy-policy/`, label: "Privacy" },
  { href: `${base}legal/terms/`, label: "Terms" },
  { href: `${base}legal/cookie-policy/`, label: "Cookies" },
];

const featuredServices = services.slice(0, 6);
---

<footer class="bg-zinc-950 border-t border-gray-800 relative z-10">
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 sm:py-12 lg:py-16 space-y-10 sm:space-y-12 lg:space-y-16"
  >
    <div
      class="grid gap-8 sm:gap-10 lg:gap-12 xl:gap-16 lg:grid-cols-[minmax(0,2fr)_minmax(0,3fr)]"
    >
      <section class="space-y-6 text-center lg:text-left">
        <div class="flex items-center justify-center lg:justify-start gap-3">
          <img
            src={`${base}logo.svg`}
            alt="AUXO Data Labs Logo"
            class="h-8 w-8 sm:h-10 sm:w-10 flex-shrink-0"
          />
          <span class="text-white text-lg font-semibold tracking-tight"
            >Data Labs</span
          >
        </div>

        <div class="space-y-3 text-gray-300">
          <p
            class="text-xs sm:text-sm italic leading-relaxed max-w-md mx-auto lg:mx-0"
          >
            {siteData.tagline}
          </p>
          <p class="hidden md:block text-sm leading-relaxed max-w-lg">
            Transforming data into <span class="font-medium text-white"
              >actionable insights</span
            > for businesses across the UAE.
          </p>
        </div>

        <div class="space-y-3 text-sm sm:text-base text-gray-300">
          <div
            class="flex flex-wrap items-center justify-center lg:justify-start gap-3"
          >
            <Icon
              name="mdi:email"
              class="w-5 h-5 text-lime-400 flex-shrink-0"
            />
            <a
              href={`mailto:${siteData.email}`}
              class="text-gray-200 hover:text-lime-400 transition-colors break-all"
              >{siteData.email}</a
            >
          </div>
          {
            siteData.phone && (
              <div
                class="flex flex-wrap items-center justify-center lg:justify-start gap-3"
              >
                <Icon
                  name="mdi:phone"
                  class="w-5 h-5 text-lime-400 flex-shrink-0"
                />
                <a
                  href={`tel:${siteData.phone}`}
                  class="text-gray-200 hover:text-lime-400 transition-colors break-words"
                >
                  {siteData.phone}
                </a>
              </div>
            )
          }
          <div
            class="flex flex-wrap items-center justify-center lg:justify-start gap-3"
          >
            <Icon
              name="mdi:map-marker"
              class="w-5 h-5 text-lime-400 flex-shrink-0"
            />
            <span class="text-gray-200 break-words">
              {siteData.address.city}, {siteData.address.country}
            </span>
          </div>
        </div>

        <div class="flex justify-center lg:justify-start gap-2 sm:gap-3 flex-wrap">
          <a
            href={siteData.social.linkedin}
            class="w-9 h-9 sm:w-10 sm:h-10 bg-zinc-800 rounded-lg flex items-center justify-center hover:bg-lime-400 hover:text-black transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-lime-400 focus-visible:ring-offset-2 focus-visible:ring-offset-zinc-950"
            aria-label="Follow AUXO Data Labs on LinkedIn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name="mdi:linkedin" class="w-4 h-4 sm:w-5 sm:h-5" />
          </a>
          <a
            href={siteData.social.twitter}
            class="w-9 h-9 sm:w-10 sm:h-10 bg-zinc-800 rounded-lg flex items-center justify-center hover:bg-lime-400 hover:text-black transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-lime-400 focus-visible:ring-offset-2 focus-visible:ring-offset-zinc-950"
            aria-label="Follow AUXO Data Labs on Twitter"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name="mdi:twitter" class="w-4 h-4 sm:w-5 sm:h-5" />
          </a>
        </div>
      </section>

      <section
        class="grid gap-8 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3 text-center sm:text-left"
      >
        <div class="space-y-4 sm:space-y-5">
          <h4 class="text-xs sm:text-xs font-bold tracking-[0.2em] text-gray-100 uppercase">
            Quick Links
          </h4>
          <nav>
            <ul class="space-y-2 sm:space-y-2 text-sm sm:text-sm font-medium text-gray-400">
              {quickLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="block py-1.5 sm:py-1 hover:text-lime-400 active:text-lime-400 transition-colors touch-manipulation min-h-[32px] sm:min-h-0 flex items-center justify-center sm:justify-start"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>

        <div class="space-y-6 sm:space-y-6">
          <div class="space-y-4">
            <h4
              class="text-xs font-bold tracking-[0.2em] text-gray-100 uppercase"
            >
              Resources
            </h4>
            <ul class="space-y-2 sm:space-y-2 text-sm font-medium text-gray-400">
              {resourceLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="block py-1.5 sm:py-1 hover:text-lime-400 active:text-lime-400 transition-colors touch-manipulation min-h-[32px] sm:min-h-0 flex items-center justify-center sm:justify-start"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div class="space-y-4 sm:space-y-5">
            <h4
              class="text-xs sm:text-xs font-bold tracking-[0.2em] text-gray-100 uppercase"
            >
              Legal
            </h4>
            <ul class="space-y-2 sm:space-y-2 text-sm font-medium text-gray-400">
              {legalLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="block py-1.5 sm:py-1 hover:text-lime-400 active:text-lime-400 transition-colors touch-manipulation min-h-[32px] sm:min-h-0 flex items-center justify-center sm:justify-start"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <div class="space-y-4 sm:space-y-5 sm:col-span-2 lg:col-span-1">
          <h4 class="text-xs sm:text-xs font-bold tracking-[0.2em] text-gray-100 uppercase">
            Services
          </h4>
          <ul class="space-y-2 sm:space-y-2 text-sm font-medium text-gray-400">
            {featuredServices.map((service) => (
              <li>
                <a
                  href={`${base}services/${service.id}/`}
                  class="block py-1.5 sm:py-1 hover:text-lime-400 active:text-lime-400 transition-colors touch-manipulation min-h-[32px] sm:min-h-0 flex items-center justify-center sm:justify-start"
                >
                  {service.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </section>
    </div>

    <section
      class="border-t border-gray-800 pt-8 sm:pt-10 lg:pt-12 max-w-lg"
    >
      <h4 class="text-xs sm:text-xs font-bold tracking-[0.2em] text-gray-100 uppercase mb-3 sm:mb-4">
        Stay Updated
      </h4>
      <p class="mt-3 sm:mt-3 text-sm sm:text-sm text-gray-400 leading-relaxed">
        Subscribe to our newsletter for <em>insights and updates</em>.
      </p>
      <form id="newsletter-form" class="mt-4 sm:mt-5 space-y-3 sm:space-y-3">
        <div class="flex flex-col sm:flex-row gap-2.5 sm:gap-2">
          <input
            id="newsletter-email"
            type="email"
            placeholder="Enter your email"
            class="flex-1 px-4 sm:px-3 py-3 sm:py-2.5 bg-zinc-900 border border-zinc-700 rounded-lg text-sm sm:text-sm text-gray-100 placeholder:text-gray-500 focus:outline-none focus:border-lime-400 focus:ring-2 focus:ring-lime-400/30 transition-all min-h-[44px] sm:min-h-[38px]"
            required
            aria-label="Email address for newsletter"
          />
          <button
            type="submit"
            class="px-6 sm:px-5 py-3 sm:py-2.5 bg-lime-400 text-black font-semibold rounded-lg hover:bg-lime-500 active:bg-lime-600 transition-all text-sm sm:text-sm whitespace-nowrap disabled:opacity-60 disabled:cursor-not-allowed min-h-[44px] sm:min-h-[38px] touch-manipulation"
          >
            Subscribe
          </button>
        </div>
        <label class="flex items-start gap-2 cursor-pointer">
          <input
            type="checkbox"
            id="newsletter-consent"
            required
            class="mt-0.5 w-4 h-4 text-lime-400 bg-zinc-900 border-zinc-700 rounded focus:ring-lime-400 focus:ring-2"
          />
          <span class="text-xs text-gray-400 leading-relaxed">
            I consent to receive marketing emails.
            <a
              href={`${base}legal/privacy-policy/`}
              class="text-lime-400 hover:underline"
              >Privacy</a
            >
          </span>
        </label>
        <p id="newsletter-message" class="text-xs hidden"></p>
      </form>
    </section>

    <div
      class="border-t border-gray-800 pt-6 flex flex-col sm:flex-row items-center justify-between gap-3 text-gray-500 text-xs font-medium"
    >
      <p class="text-center sm:text-left">
        Â© {currentYear} AUXO Data Labs. All rights reserved.
      </p>
      <div class="flex flex-wrap items-center justify-center gap-3">
        <span class="flex items-center gap-1.5">
          <Icon
            name="mdi:map-marker"
            class="w-3.5 h-3.5 text-lime-400 flex-shrink-0"
          />
          Dubai, UAE
        </span>
        <span class="flex items-center gap-1.5 hidden sm:flex">
          <Icon
            name="mdi:shield-check"
            class="w-3.5 h-3.5 text-lime-400 flex-shrink-0"
          />
          PDPL Compliant
        </span>
      </div>
    </div>
  </div>
</footer>

<script>
  // Optimized newsletter form handler with better error handling
  (function initNewsletterForm() {
    const newsletterForm = document.getElementById("newsletter-form");
    if (!newsletterForm) return;

    const newsletterEmail = document.getElementById(
      "newsletter-email",
    ) as HTMLInputElement | null;
    const newsletterMessage = document.getElementById("newsletter-message");
    const consentCheckbox = document.getElementById(
      "newsletter-consent",
    ) as HTMLInputElement | null;
    const submitBtn = newsletterForm.querySelector(
      'button[type="submit"]',
    ) as HTMLButtonElement | null;

    const showMessage = (text: string, isError = false) => {
      if (!newsletterMessage) return;
      newsletterMessage.textContent = text;
      newsletterMessage.className = `text-xs mt-2 ${isError ? "text-red-400" : "text-lime-400"}`;
      newsletterMessage.classList.remove("hidden");
      if (!isError) {
        setTimeout(() => {
          newsletterMessage?.classList.add("hidden");
        }, 8000);
      }
    };

    const handleNewsletterSubmit = async (e: Event) => {
      e.preventDefault();

      if (!newsletterEmail || !newsletterMessage || !consentCheckbox) return;

      const email = newsletterEmail.value.trim();

      // Validate consent
      if (!consentCheckbox.checked) {
        showMessage("Please consent to receive marketing emails", true);
        return;
      }

      // Validate email
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        showMessage("Please enter a valid email address", true);
        return;
      }

      // Disable submit button
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = "Subscribing...";
      }

      try {
        const response = await fetch(
          `${import.meta.env.BASE_URL}api/newsletter`,
          {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              email,
              consent: consentCheckbox.checked,
              timestamp: new Date().toISOString(),
            }),
          },
        );

        const data = await response.json();

        if (!response.ok) {
          showMessage(data.error || "Subscription failed. Please try again.", true);
          return;
        }

        showMessage(
          data.message ||
            "Thank you! Please check your email to confirm your subscription.",
          false,
        );
        newsletterEmail.value = "";
        consentCheckbox.checked = false;
      } catch (error) {
        if (import.meta.env.DEV) {
          console.error("Newsletter subscription error:", error);
        }
        showMessage("An error occurred. Please try again later.", true);
      } finally {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = "Subscribe";
        }
      }
    };

    newsletterForm.addEventListener("submit", handleNewsletterSubmit);

    // Cleanup on Astro view transitions
    document.addEventListener("astro:before-swap", () => {
      newsletterForm.removeEventListener("submit", handleNewsletterSubmit);
    });
  })();
</script>
