---
import { Icon } from "astro-icon/components";
import {
  homepageContent,
  type HomepageContent,
} from "../../../data/content/homepage";
import Button from "../../ui/Button.astro";
import Card from "../../ui/Card.astro";
import SectionContainer from "../../layouts/SectionContainer.astro";
import { getBaseUrl, createUrl } from "../../../utils/url";

const content: HomepageContent["finalCta"] = homepageContent.finalCta;
const base = getBaseUrl();
---

<SectionContainer
  id="final-cta"
  padding="xl"
  class="relative min-h-[60vh] flex items-center"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full">
    <div class="max-w-5xl mx-auto">
      <Card
        accentBorder
        padding="xl"
        class="text-center bg-card/80 backdrop-blur-lg border-2 border-accent-green/40 shadow-2xl"
      >
        <h2
          class="text-4xl sm:text-5xl md:text-6xl font-extrabold mb-8 text-primary transition-colors leading-tight tracking-tight"
          style="font-family: var(--font-display);"
        >
          {content.title}
        </h2>
        <p
          class="text-lg sm:text-xl md:text-2xl text-secondary mb-10 max-w-3xl mx-auto leading-relaxed transition-colors font-normal"
          style="font-family: var(--font-body);"
        >
          {content.subtitle}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <Button
            variant="primary"
            size="lg"
            href={createUrl(content.ctaHref)}
            class="font-bold shadow-lg shadow-accent-green/20"
          >
            {content.ctaText}
            <Icon name="mdi:arrow-right" class="w-5 h-5" />
          </Button>
          <Button
            variant="outline"
            size="lg"
            href={createUrl(content.secondaryCtaHref)}
            class="font-bold"
          >
            {content.secondaryCtaText}
            <Icon name="mdi:chart-line" class="w-5 h-5" />
          </Button>
        </div>

        <div
          class="flex flex-wrap justify-center gap-6 sm:gap-8 text-sm text-secondary font-medium"
        >
          {
            content.benefits.map((benefit) => (
          <div class="flex items-center gap-2">
            <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green" />
                <span style="font-family: var(--font-body);">{benefit}</span>
          </div>
            ))
          }
        </div>
      </Card>
    </div>
  </div>
</SectionContainer>
