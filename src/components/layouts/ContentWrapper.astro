---
// Content wrapper for blog posts, articles, and text-heavy pages
export interface Props {
  class?: string;
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '4xl' | '5xl';
}

const {
  class: className = '',
  maxWidth = '4xl',
} = Astro.props;

const maxWidthClasses = {
  sm: 'max-w-sm',
  md: 'max-w-md',
  lg: 'max-w-lg',
  xl: 'max-w-xl',
  '2xl': 'max-w-2xl',
  '4xl': 'max-w-4xl',
  '5xl': 'max-w-5xl',
};
---

<div class={`${maxWidthClasses[maxWidth]} mx-auto ${className}`}>
  <slot />
</div>

