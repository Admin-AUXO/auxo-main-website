---
import BaseLayout from "../layouts/BaseLayout.astro";
import MultiStepForm from "../components/ui/MultiStepForm.astro";
import PageContainer from "../components/layouts/PageContainer.astro";
import ContentWrapper from "../components/layouts/ContentWrapper.astro";
import Button from "../components/ui/Button.astro";
import Card from "../components/ui/Card.astro";
import { siteData } from "../data/config/site";
import { contactContent } from "../data/content/contact";
import { commonText } from "../data/shared/common";
import { Icon } from "astro-icon/components";

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Contact Us - Get Started with Data Analytics | AUXO Data Labs"
  description="Ready to transform your data into insights? As a startup, we move fast with personal attention. Contact AUXO Data Labs for a free consultation—responses within 24 hours."
>
  <PageContainer
    maxWidth="7xl"
    paddingTop="pt-20 sm:pt-24"
    paddingBottom="pb-12 sm:pb-16"
  >
    <!-- Header -->
    <ContentWrapper maxWidth="3xl" class="text-center mb-6 sm:mb-8 md:mb-12">
      <h1
        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-2 sm:mb-3 md:mb-4"
      >
        {contactContent.hero.title}
        <span class="text-accent-green transition-colors">
          {contactContent.hero.titleHighlight}</span
        >
      </h1>
      <p
        class="text-sm sm:text-base md:text-lg lg:text-xl text-secondary transition-colors mb-4 sm:mb-6"
      >
        {contactContent.hero.subtitle}
      </p>

      {/* What You'll Get */}
      {
        contactContent.hero.benefits &&
          contactContent.hero.benefits.length > 0 && (
            <div class="bg-accent-green/10 border border-accent-green/30 rounded-xl p-4 sm:p-6 text-left max-w-2xl mx-auto">
              <h3 class="font-bold mb-2 sm:mb-3 text-sm sm:text-base text-primary transition-colors flex items-center">
                <Icon
                  name="mdi:star-four-points"
                  class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-accent-green"
                />
                What You'll Get:
              </h3>
              <ul class="space-y-1.5 sm:space-y-2">
                {contactContent.hero.benefits.map((benefit) => (
                  <li class="flex items-start text-xs sm:text-sm text-secondary transition-colors">
                    <Icon
                      name="mdi:check-circle"
                      class="w-4 h-4 text-accent-green mr-2 flex-shrink-0 mt-0.5"
                    />
                    <span>{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          )
      }
    </ContentWrapper>

    <!-- Two Column Layout -->
    <ContentWrapper
      maxWidth="7xl"
      class="grid grid-cols-1 lg:grid-cols-3 gap-6 sm:gap-8 md:gap-10 lg:gap-12 mb-6 sm:mb-8 md:mb-12"
    >
      <!-- Contact Information Column -->
      <div class="lg:col-span-1 mb-4 lg:mb-0 order-2 lg:order-1">
        <div class="lg:sticky lg:top-24">
          <h2
            class="text-lg sm:text-xl md:text-2xl font-bold mb-3 sm:mb-4 md:mb-6"
          >
            {contactContent.sidebar.title}
          </h2>

          <div class="space-y-4 sm:space-y-6">
            <!-- Email -->
            <div class="flex items-start space-x-4">
              <div
                class="w-10 h-10 bg-accent-green/10 rounded-lg flex items-center justify-center flex-shrink-0 transition-colors"
              >
                <Icon
                  name="mdi:email"
                  class="w-5 h-5 text-accent-green transition-colors"
                />
              </div>
              <div>
                <h3 class="font-semibold mb-1 text-primary transition-colors">
                  {commonText.labels.email}
                </h3>
                <a
                  href={`mailto:${siteData.email}`}
                  class="text-secondary hover:text-accent-green transition-colors"
                >
                  {siteData.email}
                </a>
              </div>
            </div>

            <!-- Phone -->
            {
              siteData.phone && (
                <div class="flex items-start space-x-4">
                  <div class="w-10 h-10 bg-accent-green/10 rounded-lg flex items-center justify-center flex-shrink-0 transition-colors">
                    <Icon
                      name="mdi:phone"
                      class="w-5 h-5 text-accent-green transition-colors"
                    />
                  </div>
                  <div>
                    <h3 class="font-semibold mb-1 text-primary transition-colors">
                      {commonText.labels.phone}
                    </h3>
                    <a
                      href={`tel:${siteData.phone}`}
                      class="text-secondary hover:text-accent-green transition-colors"
                    >
                      {siteData.phone}
                    </a>
                  </div>
                </div>
              )
            }

            <!-- Location -->
            <div class="flex items-start space-x-4">
              <div
                class="w-10 h-10 bg-accent-green/10 rounded-lg flex items-center justify-center flex-shrink-0 transition-colors"
              >
                <Icon
                  name="mdi:map-marker"
                  class="w-5 h-5 text-accent-green transition-colors"
                />
              </div>
              <div>
                <h3 class="font-semibold mb-1 text-primary transition-colors">
                  {commonText.labels.location}
                </h3>
                <p class="text-secondary transition-colors">
                  {siteData.address.city}<br />
                  {siteData.address.country}
                </p>
              </div>
            </div>

            <!-- Social -->
            <div class="flex items-start space-x-4">
              <div
                class="w-10 h-10 bg-accent-green/10 rounded-lg flex items-center justify-center flex-shrink-0 transition-colors"
              >
                <Icon
                  name="mdi:share-variant"
                  class="w-5 h-5 text-accent-green transition-colors"
                />
              </div>
              <div>
                <h3 class="font-semibold mb-2 text-primary transition-colors">
                  {commonText.labels.followUs}
                </h3>
                <div class="flex gap-3">
                  <a
                    href={siteData.social.linkedin}
                    class="w-8 h-8 bg-surface rounded-lg flex items-center justify-center hover:bg-accent-green hover:text-black dark:hover:text-white transition-colors min-h-[44px] min-w-[44px] touch-manipulation"
                  >
                    <Icon name="mdi:linkedin" class="w-4 h-4" />
                  </a>
                  <a
                    href={siteData.social.twitter}
                    class="w-8 h-8 bg-surface rounded-lg flex items-center justify-center hover:bg-accent-green hover:text-black dark:hover:text-white transition-colors min-h-[44px] min-w-[44px] touch-manipulation"
                  >
                    <Icon name="mdi:twitter" class="w-4 h-4" />
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Info Box -->
          <div
            class="mt-4 sm:mt-6 lg:mt-8 p-4 sm:p-6 bg-gradient-to-br from-accent-green/10 to-accent-green/20 border border-accent-green/20 rounded-lg transition-colors"
          >
            <h3
              class="font-bold mb-1.5 sm:mb-2 text-sm sm:text-base text-primary transition-colors"
            >
              {contactContent.sidebar.info.fastResponse.title}
            </h3>
            <p class="text-xs sm:text-sm text-secondary transition-colors">
              {contactContent.sidebar.info.fastResponse.description}
            </p>
          </div>

          <!-- Quick Actions Section -->
          <div
            class="mt-4 sm:mt-6 lg:mt-8 p-4 sm:p-6 bg-card border border-theme rounded-lg"
          >
            <h3
              class="font-bold mb-3 sm:mb-4 text-sm sm:text-base md:text-lg text-primary transition-colors flex items-center"
            >
              <Icon
                name="mdi:lightning-bolt"
                class="w-4 h-4 sm:w-5 sm:h-5 mr-2 text-accent-green"
              />
              Quick Actions
            </h3>
            <div class="space-y-2 sm:space-y-3">
              <a
                href={`mailto:${siteData.email}`}
                class="flex items-center gap-2 sm:gap-3 px-3 sm:px-4 py-2 bg-accent-green/10 hover:bg-accent-green/20 border border-accent-green/30 rounded-lg text-xs sm:text-sm text-accent-green font-medium transition-colors group min-h-[44px] active:bg-accent-green/30"
              >
                <Icon
                  name="mdi:email"
                  class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                />
                <span>Email Now</span>
              </a>
              {
                siteData.phone && (
                  <a
                    href={`tel:${siteData.phone}`}
                    class="flex items-center gap-2 sm:gap-3 px-3 sm:px-4 py-2 bg-accent-green/10 hover:bg-accent-green/20 border border-accent-green/30 rounded-lg text-xs sm:text-sm text-accent-green font-medium transition-colors group min-h-[44px] active:bg-accent-green/30"
                  >
                    <Icon
                      name="mdi:phone"
                      class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                    />
                    <span>Call Now</span>
                  </a>
                )
              }
            </div>
          </div>

          <!-- Quick Links Section - Hidden on mobile, shown on tablet+ -->
          <div
            class="hidden sm:block mt-4 sm:mt-6 lg:mt-8 p-4 sm:p-6 bg-card border border-theme rounded-lg"
          >
            <h3
              class="font-bold mb-3 sm:mb-4 text-sm sm:text-base md:text-lg text-primary transition-colors"
            >
              Before you reach out, you might want to:
            </h3>
            <div class="space-y-2 sm:space-y-3">
              <a
                href={`${base}about/`}
                class="flex items-center gap-2 sm:gap-3 text-xs sm:text-sm text-secondary hover:text-accent-green transition-colors group min-h-[44px] active:text-accent-green"
              >
                <Icon
                  name="mdi:account-group"
                  class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                />
                <span class="group-hover:underline">See how we work</span>
              </a>
              <a
                href={`${base}tools/maturity-calculator/`}
                class="flex items-center gap-2 sm:gap-3 text-xs sm:text-sm text-secondary hover:text-accent-green transition-colors group min-h-[44px] active:text-accent-green"
              >
                <Icon
                  name="mdi:calculator"
                  class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                />
                <span class="group-hover:underline"
                  >Take maturity assessment</span
                >
              </a>
              <a
                href={`${base}services/`}
                class="flex items-center gap-2 sm:gap-3 text-xs sm:text-sm text-secondary hover:text-accent-green transition-colors group min-h-[44px] active:text-accent-green"
              >
                <Icon
                  name="mdi:briefcase"
                  class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                />
                <span class="group-hover:underline">Explore our services</span>
              </a>
              <a
                href={`${base}faq/`}
                class="flex items-center gap-2 sm:gap-3 text-xs sm:text-sm text-secondary hover:text-accent-green transition-colors group min-h-[44px] active:text-accent-green"
              >
                <Icon
                  name="mdi:help-circle"
                  class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                />
                <span class="group-hover:underline">Check our FAQ</span>
              </a>
            </div>
          </div>

          <!-- Response Time Badge -->
          <div
            class="mt-4 sm:mt-6 lg:mt-8 p-3 sm:p-4 bg-accent-green/10 border border-accent-green/30 rounded-lg text-center"
          >
            <div class="flex items-center justify-center gap-2 mb-1.5 sm:mb-2">
              <Icon
                name="mdi:clock"
                class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green"
              />
              <span class="text-xs sm:text-sm font-semibold text-accent-green"
                >24-hour response guarantee</span
              >
            </div>
            <p class="text-xs text-secondary transition-colors">
              Usually faster. We respect your time.
            </p>
          </div>
        </div>
      </div>

      <!-- Form Column -->
      <div class="lg:col-span-2 space-y-4 sm:space-y-6 order-1 lg:order-2">
        <!-- Response Time Promise Badge -->
        <div
          class="flex items-center justify-center sm:justify-start gap-2 sm:gap-3"
        >
          <div
            class="bg-accent-green/10 border border-accent-green/30 rounded-full px-3 sm:px-4 py-1.5 sm:py-2 flex items-center gap-1.5 sm:gap-2"
          >
            <Icon
              name="mdi:clock"
              class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green"
            />
            <span class="text-xs sm:text-sm font-semibold text-accent-green"
              >We respond within 24 hours. Usually faster.</span
            >
          </div>
        </div>

        <!-- What to Expect Section -->
        <div
          class="bg-accent-green/10 border border-accent-green/30 rounded-xl p-4 sm:p-6 md:p-8"
        >
          <div class="flex items-start gap-3 sm:gap-4 mb-3 sm:mb-4">
            <div
              class="flex-shrink-0 w-8 h-8 sm:w-10 sm:h-10 bg-accent-green/20 rounded-lg flex items-center justify-center"
            >
              <Icon
                name="mdi:check-circle"
                class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green"
              />
            </div>
            <div class="flex-1">
              <h3
                class="text-lg sm:text-xl font-bold mb-2 sm:mb-3 text-primary transition-colors"
              >
                Your Free Consultation Includes:
              </h3>
              <ul class="space-y-1.5 sm:space-y-2">
                <li class="flex items-start gap-2">
                  <Icon
                    name="mdi:check"
                    class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green flex-shrink-0 mt-0.5"
                  />
                  <span
                    class="text-xs sm:text-sm text-secondary transition-colors"
                    >Custom assessment of your data needs</span
                  >
                </li>
                <li class="flex items-start gap-2">
                  <Icon
                    name="mdi:check"
                    class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green flex-shrink-0 mt-0.5"
                  />
                  <span
                    class="text-xs sm:text-sm text-secondary transition-colors"
                    >Personalized recommendations</span
                  >
                </li>
                <li class="flex items-start gap-2">
                  <Icon
                    name="mdi:check"
                    class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green flex-shrink-0 mt-0.5"
                  />
                  <span
                    class="text-xs sm:text-sm text-secondary transition-colors"
                    >Implementation roadmap</span
                  >
                </li>
                <li class="flex items-start gap-2">
                  <Icon
                    name="mdi:check"
                    class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green flex-shrink-0 mt-0.5"
                  />
                  <span
                    class="text-xs sm:text-sm text-secondary transition-colors"
                    >No obligation, just honest advice</span
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Startup Advantage Callout -->
        <div
          class="bg-card border border-accent-green/30 rounded-lg p-3 sm:p-4 md:p-6"
        >
          <div class="flex items-start gap-2 sm:gap-3">
            <Icon
              name="mdi:rocket"
              class="w-4 h-4 sm:w-5 sm:w-6 sm:h-6 text-accent-green flex-shrink-0 mt-0.5"
            />
            <div>
              <p
                class="text-xs sm:text-sm md:text-base text-primary font-medium transition-colors"
              >
                Talk directly with founders. No account managers. No sales
                pitches.
              </p>
            </div>
          </div>
        </div>

        <!-- Form -->
        <div
          class="bg-card/50 border border-theme rounded-2xl p-4 sm:p-6 md:p-8 transition-colors"
        >
          <MultiStepForm />
        </div>

        <!-- Privacy Note -->
        <div class="text-center">
          <p
            class="text-xs text-secondary flex items-center justify-center gap-1.5 sm:gap-2 transition-colors"
          >
            <Icon
              name="mdi:shield-check"
              class="w-3 h-3 sm:w-4 sm:h-4 text-accent-green"
            />
            <span
              >Your information is confidential. We never share details. PDPL
              compliant.</span
            >
          </p>
        </div>

        <!-- What Happens Next Section -->
        <div class="bg-card border-2 border-theme rounded-xl p-4 sm:p-6 md:p-8">
          <h3
            class="text-lg sm:text-xl font-bold mb-3 sm:mb-4 text-primary transition-colors flex items-center gap-1.5 sm:gap-2"
          >
            <Icon
              name="mdi:arrow-right"
              class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green"
            />
            What Happens Next
          </h3>

          {/* Visual Timeline */}
          <div class="relative mb-4 sm:mb-6 pl-6 sm:pl-8">
            <div
              class="absolute left-3 sm:left-4 top-0 bottom-0 w-0.5 bg-accent-green/20"
            >
            </div>

            <div class="space-y-4 sm:space-y-6">
              <div class="relative flex items-start gap-3 sm:gap-4">
                <div
                  class="absolute left-[-1.5rem] sm:left-[-2rem] top-0 w-6 h-6 sm:w-8 sm:h-8 bg-accent-green/20 rounded-full flex items-center justify-center font-bold text-xs sm:text-sm text-accent-green border-2 border-accent-green z-10"
                >
                  1
                </div>
                <div class="flex-1">
                  <div
                    class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2 mb-1"
                  >
                    <h4
                      class="text-sm sm:text-base font-semibold text-primary transition-colors"
                    >
                      We'll review your message
                    </h4>
                    <span
                      class="text-xs bg-accent-green/10 text-accent-green px-2 py-0.5 rounded-full font-medium self-start sm:self-auto"
                    >
                      Within 24 hours
                    </span>
                  </div>
                  <p
                    class="text-xs sm:text-sm text-secondary transition-colors"
                  >
                    A founder will personally review your inquiry
                  </p>
                </div>
              </div>

              <div class="relative flex items-start gap-3 sm:gap-4">
                <div
                  class="absolute left-[-1.5rem] sm:left-[-2rem] top-0 w-6 h-6 sm:w-8 sm:h-8 bg-accent-green/20 rounded-full flex items-center justify-center font-bold text-xs sm:text-sm text-accent-green border-2 border-accent-green z-10"
                >
                  2
                </div>
                <div class="flex-1">
                  <div
                    class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2 mb-1"
                  >
                    <h4
                      class="text-sm sm:text-base font-semibold text-primary transition-colors"
                    >
                      Founder will reach out
                    </h4>
                    <span
                      class="text-xs bg-accent-green/10 text-accent-green px-2 py-0.5 rounded-full font-medium self-start sm:self-auto"
                    >
                      Same day or next
                    </span>
                  </div>
                  <p
                    class="text-xs sm:text-sm text-secondary transition-colors"
                  >
                    Via your preferred method (email, phone, or video call)
                  </p>
                </div>
              </div>

              <div class="relative flex items-start gap-3 sm:gap-4">
                <div
                  class="absolute left-[-1.5rem] sm:left-[-2rem] top-0 w-6 h-6 sm:w-8 sm:h-8 bg-accent-green/20 rounded-full flex items-center justify-center font-bold text-xs sm:text-sm text-accent-green border-2 border-accent-green z-10"
                >
                  3
                </div>
                <div class="flex-1">
                  <div
                    class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2 mb-1"
                  >
                    <h4
                      class="text-sm sm:text-base font-semibold text-primary transition-colors"
                    >
                      Free consultation call
                    </h4>
                    <span
                      class="text-xs bg-accent-green/10 text-accent-green px-2 py-0.5 rounded-full font-medium self-start sm:self-auto"
                    >
                      30-45 minutes
                    </span>
                  </div>
                  <p
                    class="text-xs sm:text-sm text-secondary transition-colors"
                  >
                    Understand your needs and answer questions
                  </p>
                </div>
              </div>

              <div class="relative flex items-start gap-3 sm:gap-4">
                <div
                  class="absolute left-[-1.5rem] sm:left-[-2rem] top-0 w-6 h-6 sm:w-8 sm:h-8 bg-accent-green/20 rounded-full flex items-center justify-center font-bold text-xs sm:text-sm text-accent-green border-2 border-accent-green z-10"
                >
                  4
                </div>
                <div class="flex-1">
                  <div
                    class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2 mb-1"
                  >
                    <h4
                      class="text-sm sm:text-base font-semibold text-primary transition-colors"
                    >
                      Personalized recommendations
                    </h4>
                    <span
                      class="text-xs bg-accent-green/10 text-accent-green px-2 py-0.5 rounded-full font-medium self-start sm:self-auto"
                    >
                      Actionable steps
                    </span>
                  </div>
                  <p
                    class="text-xs sm:text-sm text-secondary transition-colors"
                  >
                    Clear next steps with no obligation
                  </p>
                </div>
              </div>
            </div>
          </div>

          {/* What to Prepare Checklist */}
          <div
            class="bg-accent-green/5 border border-accent-green/20 rounded-lg p-3 sm:p-4"
          >
            <h4
              class="text-sm sm:text-base font-semibold mb-2 text-primary transition-colors flex items-center"
            >
              <Icon
                name="mdi:check-circle"
                class="w-4 h-4 sm:w-5 sm:h-5 mr-1.5 sm:mr-2 text-accent-green"
              />
              What to Prepare (Optional):
            </h4>
            <ul
              class="space-y-1 text-xs sm:text-sm text-secondary transition-colors"
            >
              <li class="flex items-start">
                <Icon
                  name="mdi:check"
                  class="w-3 h-3 sm:w-4 sm:h-4 text-accent-green mr-1.5 sm:mr-2 flex-shrink-0 mt-0.5"
                />
                <span>Current data challenges or goals</span>
              </li>
              <li class="flex items-start">
                <Icon
                  name="mdi:check"
                  class="w-3 h-3 sm:w-4 sm:h-4 text-accent-green mr-1.5 sm:mr-2 flex-shrink-0 mt-0.5"
                />
                <span>Existing analytics tools (if any)</span>
              </li>
              <li class="flex items-start">
                <Icon
                  name="mdi:check"
                  class="w-3 h-3 sm:w-4 sm:h-4 text-accent-green mr-1.5 sm:mr-2 flex-shrink-0 mt-0.5"
                />
                <span>Key business questions you want answered</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </ContentWrapper>

    <!-- Additional Contact Options -->
    <ContentWrapper maxWidth="4xl" class="mt-6 sm:mt-8 md:mt-12">
      <div class="text-center mb-6 sm:mb-8">
        <h2
          class="text-xl sm:text-2xl font-bold mb-1.5 sm:mb-2 text-primary transition-colors"
        >
          Other Ways to Connect
        </h2>
        <p class="text-sm sm:text-base text-secondary transition-colors">
          Choose the method that works best for you
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6">
        {
          contactContent.additionalOptions.map((option) => (
            <Card interactive hoverEffect accentBorder padding="md" class="text-center group">
              <div class="w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 bg-accent-green/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4 group-hover:bg-accent-green/20 transition-colors">
                <Icon
                  name={option.icon}
                  class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 text-accent-green transition-colors"
