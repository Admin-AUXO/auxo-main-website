---
// Reusable section container with consistent vertical spacing
export interface Props {
  class?: string;
  id?: string;
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  background?: 'default' | 'dark' | 'darker';
}

const {
  class: className = '',
  id,
  padding = 'md',
  background = 'default',
} = Astro.props;

const paddingClasses = {
  sm: 'py-6 sm:py-8 md:py-12',
  md: 'py-10 sm:py-12 md:py-16 lg:py-20 xl:py-28',
  lg: 'py-12 sm:py-16 md:py-20 lg:py-24 xl:py-32',
  xl: 'py-16 sm:py-20 md:py-24 lg:py-32 xl:py-40',
};

const backgroundClasses = {
  default: '',
  dark: 'bg-zinc-900/30',
  darker: 'bg-zinc-950',
};
---

<section
  id={id}
  class={`${paddingClasses[padding]} ${backgroundClasses[background]} ${className}`}
>
  <slot />
</section>

