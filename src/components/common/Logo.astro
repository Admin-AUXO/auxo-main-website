---
/**
 * Logo Component
 * Reusable logo component used in Navigation and Footer
 */
import { getBaseUrl } from "../../utils/url";

interface Props {
    size?: "sm" | "md" | "lg";
    showText?: boolean;
    href?: string;
    class?: string;
}

const {
    size = "md",
    showText = true,
    href,
    class: className = "",
} = Astro.props;

const defaultHref = getBaseUrl();

const sizeClasses = {
    sm: "h-9 w-9 sm:h-10 sm:w-10",
    md: "h-10 w-10 sm:h-11 sm:w-11 lg:h-12 lg:w-12",
    lg: "h-14 w-14 lg:h-16 lg:w-16",
};

const logoSize = sizeClasses[size];
---

<a
    href={href || defaultHref}
    class={`flex items-center space-x-2.5 sm:space-x-3 group relative touch-manipulation flex-shrink-0 z-content pointer-events-auto ${className}`}
    aria-label="AUXO Data Labs Home"
    data-nav-home
>
    <div class="relative">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 40 40"
            fill="none"
            class={`${logoSize} transition-transform duration-normal group-hover:scale-110 group-hover:rotate-3`}
            aria-label="AUXO Data Labs Logo"
        >
            <!-- 2x2 Grid - Sharp corners -->
            <!-- Top-left - A -->
            <rect
                x="0"
                y="0"
                width="18"
                height="18"
                fill="var(--accent-green)"
                class="transition-colors duration-normal"></rect>
            <text
                x="9"
                y="14"
                text-anchor="middle"
                font-family="var(--font-brand)"
                font-weight="900"
                font-size="13"
                fill="var(--logo-text-color)"
                class="transition-colors duration-normal">A</text
            >

            <!-- Top-right - U -->
            <rect
                x="22"
                y="0"
                width="18"
                height="18"
                fill="var(--accent-green)"
                class="transition-colors duration-normal"></rect>
            <text
                x="31"
                y="14"
                text-anchor="middle"
                font-family="var(--font-brand)"
                font-weight="900"
                font-size="13"
                fill="var(--logo-text-color)"
                class="transition-colors duration-normal">U</text
            >

            <!-- Bottom-left - X -->
            <rect
                x="0"
                y="22"
                width="18"
                height="18"
                fill="var(--accent-green)"
                class="transition-colors duration-normal"></rect>
            <text
                x="9"
                y="36"
                text-anchor="middle"
                font-family="var(--font-brand)"
                font-weight="900"
                font-size="13"
                fill="var(--logo-text-color)"
                class="transition-colors duration-normal">X</text
            >

            <!-- Bottom-right - O -->
            <rect
                x="22"
                y="22"
                width="18"
                height="18"
                fill="var(--accent-green)"
                class="transition-colors duration-normal"></rect>
            <text
                x="31"
                y="36"
                text-anchor="middle"
                font-family="var(--font-brand)"
                font-weight="900"
                font-size="13"
                fill="var(--logo-text-color)"
                class="transition-colors duration-normal">O</text
            >
        </svg>
        <div
            class="absolute inset-0 bg-accent-green/20 rounded-full blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-normal"
        >
        </div>
    </div>
    {
        showText && (
            <div class="flex flex-col hidden sm:flex items-center">
                <span
                    class="text-primary text-lg sm:text-xl lg:text-2xl font-extrabold tracking-tight leading-tight transition-colors text-center"
                    style="font-family: var(--font-display);"
                >
                    Data Labs
                </span>
                <span
                    class="text-accent-green text-xs sm:text-sm font-semibold italic leading-tight transition-colors text-center"
                    style="font-family: var(--font-display);"
                >
                    Look Beyond Data
                </span>
            </div>
        )
    }
</a>
