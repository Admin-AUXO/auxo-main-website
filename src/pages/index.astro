---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/common/Navigation.astro";
import { siteData } from "../data/config/site";
import { homepageContent } from "../data/content/homepage";
import { services } from "../data/collections/services";

// Section Components
import HeroSection from "../components/sections/home/HeroSection.astro";
import SectionContainer from "../components/layouts/SectionContainer.astro";
import Button from "../components/ui/Button.astro";
import Card from "../components/ui/Card.astro";
import Panel from "../components/ui/Panel.astro";
import { Icon } from "astro-icon/components";

// Blog
import { getCollection } from "astro:content";
import BlogPostCard from "../components/sections/blog/BlogPostCard.astro";
import { calculateReadTime } from "../utils/content";

// Styles
import "../styles/homepage.css";

const base = import.meta.env.BASE_URL;

// Get recent blog posts (max 3)
let recentPosts: any[] = [];
try {
  const allPosts = await getCollection("blog", ({ data }) => {
    return data.draft !== true;
  });
  const sortedPosts = allPosts
    .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
    .slice(0, 3);
  recentPosts = sortedPosts.map((post) => ({
    ...post,
    readTime: calculateReadTime(post.body),
  }));
} catch (e) {
  // No blog posts yet
}
---

<BaseLayout
  title="Data Analytics Consultancy Dubai, UAE | AUXO Data Labs"
  description={siteData.description}
  showNav={false}
  showParticles={true}
  hideFooterNewsletter={true}
>
  <Navigation />

  <!-- Hero Section - Awareness (Keep as is) -->
  <HeroSection />

  <!-- Full-Width Background Section -->
  <div class="w-full bg-card transition-colors">
    <!-- Featured Services Grid - Interest (Magazine Style) -->
    <SectionContainer id="services" padding="lg" class="relative">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <!-- Section Header with Enhanced Typography -->
          <div class="text-center mb-16 sm:mb-20 animate-fade-in">
            <div
              class="inline-block mb-6 px-5 py-2.5 bg-accent-green/10 border border-accent-green/30 rounded-full backdrop-blur-sm"
            >
              <span
                class="text-accent-green text-xs font-bold tracking-wider uppercase"
                >Our Services</span
              >
            </div>
            <h2
              class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.1] tracking-tight"
              style="font-family: var(--font-display);"
            >
              Transform Your <span class="text-gradient-green block mt-2"
                >Data Into Decisions</span
              >
            </h2>
            <p
              class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-medium"
            >
              Enterprise-grade analytics delivered with startup speed. From
              strategy to AI—we make data intelligence accessible.
            </p>
          </div>

          <!-- Services Grid - Enhanced Magazine Layout -->
          <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 mb-16"
          >
            {
              services.slice(0, 6).map((service, index) => (
                <div
                  class="group relative overflow-hidden animate-fade-in"
                  style={`animation-delay: ${index * 100}ms`}
                >
                  <Card
                    interactive
                    hoverEffect
                    class="h-full border-2 hover:border-accent-green/50 transition-all duration-300"
                  >
                    <a
                      href={`${base}services/${service.id}/`}
                      class="block h-full"
                      aria-label={`Learn more about ${service.title}`}
                    >
                      <div class="flex flex-col h-full">
                        <div class="flex items-start gap-4 mb-5">
                          <div class="w-14 h-14 bg-gradient-to-br from-accent-green/20 to-accent-green/10 rounded-2xl flex items-center justify-center group-hover:from-accent-green/30 group-hover:to-accent-green/20 transition-all duration-300 flex-shrink-0 shadow-lg shadow-accent-green/10">
                            <Icon
                              name={service.icon}
                              class="w-7 h-7 text-accent-green group-hover:scale-110 transition-transform"
                            />
                          </div>
                          <div class="flex-1 pt-1">
                            <h3
                              class="text-xl font-bold mb-2 text-primary group-hover:text-accent-green transition-colors leading-tight"
                              style="font-family: var(--font-display);"
                            >
                              {service.title}
                            </h3>
                            {service.timeline && (
                              <div class="flex items-center gap-2 text-xs text-secondary font-medium">
                                <Icon
                                  name="mdi:clock-outline"
                                  class="w-3.5 h-3.5"
                                />
                                <span>{service.timeline}</span>
                              </div>
                            )}
                          </div>
                        </div>

                        <p class="text-sm text-secondary mb-6 leading-relaxed transition-colors flex-1 font-normal">
                          {service.description}
                        </p>

                        <div class="flex items-center gap-2 text-accent-green font-bold text-sm group-hover:gap-3 transition-all uppercase tracking-wide">
                          <span>Learn more</span>
                          <Icon
                            name="mdi:arrow-right"
                            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                          />
                        </div>
                      </div>
                    </a>
                  </Card>
                </div>
              ))
            }
          </div>

          <!-- View All Services CTA -->
          <div class="text-center animate-fade-in">
            <Button
              variant="outline"
              size="lg"
              href={`${base}services/`}
              class="font-bold"
            >
              View All Services
              <Icon name="mdi:arrow-right" class="w-5 h-5" />
            </Button>
          </div>
        </div>
      </div>
    </SectionContainer>
  </div>

  <!-- Startup Advantages - Consideration (Magazine Feature) -->
  <SectionContainer id="startup-advantages" padding="lg" class="relative">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <!-- Magazine-Style Header with Enhanced Typography -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 lg:gap-16 mb-20">
          <div class="lg:col-span-1">
            <div
              class="inline-block mb-6 px-5 py-2.5 bg-accent-green/10 border border-accent-green/30 rounded-full backdrop-blur-sm"
            >
              <span
                class="text-accent-green text-xs font-bold tracking-wider uppercase"
                >Why Choose Us</span
              >
            </div>
            <h2
              class="text-4xl sm:text-5xl md:text-6xl font-extrabold mb-6 text-primary transition-colors leading-tight tracking-tight"
              style="font-family: var(--font-display);"
            >
              The <span class="text-gradient-green">Startup Advantage</span>
            </h2>
            <p
              class="text-base sm:text-lg text-secondary leading-relaxed transition-colors font-normal"
            >
              Big consultancies vs. startup agility—here's what makes AUXO
              different.
            </p>
          </div>

          <!-- Large Feature Card -->
          <div class="lg:col-span-2">
            <Card
              accentBorder
              padding="lg"
              class="bg-gradient-to-br from-accent-green/10 via-accent-green/5 to-transparent border-2 border-accent-green/30 shadow-xl"
            >
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {
                  homepageContent.startupAdvantages.advantages.map(
                    (advantage, index) => (
                      <div
                        class="flex items-start gap-5 animate-fade-in group/adv"
                        style={`animation-delay: ${index * 100}ms`}
                      >
                        <div class="w-14 h-14 bg-gradient-to-br from-accent-green/25 to-accent-green/15 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover/adv:from-accent-green/35 group-hover/adv:to-accent-green/25 transition-all duration-300 shadow-lg shadow-accent-green/10">
                          <Icon
                            name={advantage.icon}
                            class="w-7 h-7 text-accent-green group-hover/adv:scale-110 transition-transform"
                          />
                        </div>
                        <div class="flex-1 pt-1">
                          <h3
                            class="font-bold text-xl mb-3 text-primary transition-colors leading-tight"
                            style="font-family: var(--font-display);"
                          >
                            {advantage.title}
                          </h3>
                          <p class="text-sm text-secondary mb-3 leading-relaxed transition-colors font-normal">
                            {advantage.description}
                          </p>
                          {advantage.metric && (
                            <div class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-accent-green/15 border border-accent-green/30 rounded-lg text-xs font-bold text-accent-green uppercase tracking-wide">
                              <Icon name="mdi:chart-line" class="w-3.5 h-3.5" />
                              {advantage.metric}
                            </div>
                          )}
                        </div>
                      </div>
                    ),
                  )
                }
              </div>
            </Card>
          </div>
        </div>

        <!-- Comparison Card - Enhanced -->
        <Card padding="lg" class="border-2 shadow-lg">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <!-- Them -->
            <div class="p-8 border-r-0 md:border-r-2 border-theme">
              <div class="flex items-center gap-4 mb-8">
                <div
                  class="w-14 h-14 bg-surface rounded-xl flex items-center justify-center shadow-md"
                >
                  <Icon
                    name="mdi:office-building"
                    class="w-7 h-7 text-secondary"
                  />
                </div>
                <h3
                  class="text-2xl font-bold text-primary transition-colors"
                  style="font-family: var(--font-display);"
                >
                  Big Consultancies
                </h3>
              </div>
              <ul class="space-y-4">
                {
                  [
                    "Slow processes",
                    "Junior consultants",
                    "High costs",
                    "Multiple layers",
                  ].map((item) => (
                    <li class="flex items-start gap-3">
                      <Icon
                        name="mdi:close"
                        class="w-5 h-5 text-secondary flex-shrink-0 mt-1"
                      />
                      <span class="text-base text-secondary transition-colors font-normal leading-relaxed">
                        {item}
                      </span>
                    </li>
                  ))
                }
              </ul>
            </div>

            <!-- Us -->
            <div
              class="p-8 bg-gradient-to-br from-accent-green/15 via-accent-green/10 to-accent-green/5 border-2 border-accent-green/40 rounded-2xl shadow-lg"
            >
              <div class="flex items-center gap-4 mb-8">
                <div
                  class="w-14 h-14 bg-gradient-to-br from-accent-green/30 to-accent-green/20 rounded-xl flex items-center justify-center shadow-lg shadow-accent-green/20"
                >
                  <Icon name="mdi:rocket" class="w-7 h-7 text-accent-green" />
                </div>
                <h3
                  class="text-2xl font-bold text-primary transition-colors"
                  style="font-family: var(--font-display);"
                >
                  AUXO Data Labs
                </h3>
              </div>
              <ul class="space-y-4">
                {
                  [
                    "Fast results",
                    "Direct founder access",
                    "Startup-friendly pricing",
                    "No bureaucracy",
                  ].map((item) => (
                    <li class="flex items-start gap-3">
                      <Icon
                        name="mdi:check-circle"
                        class="w-5 h-5 text-accent-green flex-shrink-0 mt-1"
                      />
                      <span class="text-base text-primary font-semibold transition-colors leading-relaxed">
                        {item}
                      </span>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </SectionContainer>

  <!-- Full-Width Background Section -->
  <div class="w-full bg-card transition-colors">
    <!-- Value Proposition Section - Replacing Problems -->
    <SectionContainer id="value-proposition" padding="lg">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-16 sm:mb-20 animate-fade-in">
            <div
              class="inline-block mb-6 px-5 py-2.5 bg-accent-green/10 border border-accent-green/30 rounded-full backdrop-blur-sm"
            >
              <span
                class="text-accent-green text-xs font-bold tracking-wider uppercase"
                >What We Deliver</span
              >
            </div>
            <h2
              class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.1] tracking-tight"
              style="font-family: var(--font-display);"
            >
              Turn Data Into <span class="text-gradient-green block mt-2"
                >Competitive Advantage</span
              >
            </h2>
            <p
              class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-medium"
            >
              We help organizations unlock the full potential of their data with
              actionable insights, strategic guidance, and cutting-edge
              analytics solutions.
            </p>
          </div>

          <!-- Value Props Grid - Enhanced -->
          <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8"
          >
            {
              [
                {
                  icon: "mdi:chart-line",
                  title: "Actionable Insights",
                  description:
                    "Transform raw data into clear, strategic insights that drive business decisions and measurable outcomes.",
                },
                {
                  icon: "mdi:rocket",
                  title: "Faster Time to Value",
                  description:
                    "Get results in weeks, not months. Our agile approach delivers quick wins while building long-term capabilities.",
                },
                {
                  icon: "mdi:shield-check",
                  title: "Compliance & Security",
                  description:
                    "Built-in data governance and compliance frameworks ensure your analytics meet UAE PDPL and GDPR requirements.",
                },
                {
                  icon: "mdi:lightbulb",
                  title: "Strategic Guidance",
                  description:
                    "Expert consulting to help you build a data strategy aligned with your business objectives and growth plans.",
                },
                {
                  icon: "mdi:chart-bar",
                  title: "Scalable Solutions",
                  description:
                    "From startup dashboards to enterprise analytics—solutions that grow with your business needs.",
                },
                {
                  icon: "mdi:account-group",
                  title: "Direct Expert Access",
                  description:
                    "Work directly with founders and senior team members—no account managers or junior consultants.",
                },
              ].map((value, index) => (
                <div
                  class="animate-fade-in group"
                  style={`animation-delay: ${index * 100}ms`}
                >
                  <Card
                    hoverEffect
                    class="h-full border-2 hover:border-accent-green/50 transition-all duration-300"
                  >
                    <div class="flex items-start gap-5">
                      <div class="w-14 h-14 bg-gradient-to-br from-accent-green/20 to-accent-green/10 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:from-accent-green/30 group-hover:to-accent-green/20 transition-all duration-300 shadow-lg shadow-accent-green/10">
                        <Icon
                          name={value.icon}
                          class="w-7 h-7 text-accent-green group-hover:scale-110 transition-transform"
                        />
                      </div>
                      <div class="flex-1 pt-1">
                        <h3
                          class="font-bold text-xl mb-3 text-primary transition-colors leading-tight"
                          style="font-family: var(--font-display);"
                        >
                          {value.title}
                        </h3>
                        <p class="text-sm text-secondary leading-relaxed transition-colors font-normal">
                          {value.description}
                        </p>
                      </div>
                    </div>
                  </Card>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </SectionContainer>
  </div>

  <!-- Methodology - Consideration -->
  <SectionContainer id="methodology" padding="lg" class="relative">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16 sm:mb-20 animate-fade-in">
          <div
            class="inline-block mb-6 px-5 py-2.5 bg-accent-green/10 border border-accent-green/30 rounded-full backdrop-blur-sm"
          >
            <span
              class="text-accent-green text-xs font-bold tracking-wider uppercase"
              >Our Process</span
            >
          </div>
          <h2
            class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.1] tracking-tight"
            style="font-family: var(--font-display);"
          >
            {homepageContent.methodology.title}
            <span class="text-gradient-green block mt-2"
              >{homepageContent.methodology.titleHighlight}</span
            >
          </h2>
          <p
            class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-medium"
          >
            {homepageContent.methodology.subtitle}
          </p>
        </div>

        <!-- Methodology Steps - Enhanced -->
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8"
        >
          {
            homepageContent.methodology.steps.map((step, index) => (
              <div
                class="relative group animate-fade-in"
                style={`animation-delay: ${index * 150}ms`}
              >
                <Card
                  accentBorder
                  hoverEffect
                  class="h-full border-2 hover:border-accent-green/50 transition-all duration-300 shadow-lg"
                >
                  <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-10 bg-card border-2 border-accent-green/40 rounded-full px-4 py-1.5 shadow-lg">
                    <span class="text-xs font-bold text-accent-green uppercase tracking-wide">
                      Step {step.number}
                    </span>
                  </div>
                  <div class="pt-6">
                    <div class="w-16 h-16 bg-gradient-to-br from-accent-green/20 to-accent-green/10 rounded-2xl flex items-center justify-center mb-5 group-hover:from-accent-green/30 group-hover:to-accent-green/20 transition-all duration-300 shadow-lg shadow-accent-green/10">
                      <Icon
                        name={step.icon}
                        class="w-8 h-8 text-accent-green group-hover:scale-110 transition-transform"
                      />
                    </div>
                    <h3
                      class="font-bold text-xl mb-4 text-primary transition-colors leading-tight"
                      style="font-family: var(--font-display);"
                    >
                      {step.title}
                    </h3>
                    <p class="text-sm text-secondary leading-relaxed mb-5 transition-colors font-normal">
                      {step.description}
                    </p>
                    {step.details && step.details.length > 0 && (
                      <ul class="space-y-2.5">
                        {step.details.slice(0, 3).map((detail) => (
                          <li class="flex items-start gap-2.5 text-xs text-secondary leading-relaxed">
                            <Icon
                              name="mdi:check"
                              class="w-4 h-4 text-accent-green flex-shrink-0 mt-0.5"
                            />
                            <span class="font-normal">{detail}</span>
                          </li>
                        ))}
                      </ul>
                    )}
                  </div>
                </Card>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </SectionContainer>

  <!-- Full-Width Background Section -->
  <div class="w-full bg-card transition-colors">
    <!-- Partnership Section - Replacing Launch Offer -->
    <SectionContainer id="partnership" padding="lg">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16 sm:mb-20 animate-fade-in">
            <div
              class="inline-block mb-6 px-5 py-2.5 bg-accent-green/10 border border-accent-green/30 rounded-full backdrop-blur-sm"
            >
              <span
                class="text-accent-green text-xs font-bold tracking-wider uppercase"
                >Working With AUXO</span
              >
            </div>
            <h2
              class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.1] tracking-tight"
              style="font-family: var(--font-display);"
            >
              Built for <span class="text-gradient-green block mt-2"
                >Partnership</span
              >
            </h2>
            <p
              class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-medium"
            >
              We're building something new—a consultancy that combines
              enterprise expertise with startup agility. Join us as we reshape
              data analytics in the UAE.
            </p>
          </div>

          <!-- Benefits Grid - Enhanced -->
          <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 mb-12"
          >
            {
              [
                {
                  icon: "mdi:account-group",
                  title: "Direct Access",
                  description:
                    "Work directly with founders and senior team members on every project.",
                },
                {
                  icon: "mdi:rocket",
                  title: "Agile Delivery",
                  description:
                    "Fast results through iterative sprints and continuous improvement.",
                },
                {
                  icon: "mdi:lightbulb",
                  title: "Latest Technology",
                  description:
                    "Cutting-edge tools and methodologies, unburdened by legacy systems.",
                },
                {
                  icon: "mdi:handshake",
                  title: "Transparent Pricing",
                  description:
                    "Clear, startup-friendly pricing with no hidden costs or long-term contracts.",
                },
              ].map((benefit, index) => (
                <div
                  class="text-center animate-fade-in group"
                  style={`animation-delay: ${index * 100}ms`}
                >
                  <Panel
                    elevated
                    padding="lg"
                    class="h-full border-2 hover:border-accent-green/50 transition-all duration-300 shadow-lg"
                  >
                    <div class="w-16 h-16 bg-gradient-to-br from-accent-green/20 to-accent-green/10 rounded-2xl flex items-center justify-center mx-auto mb-5 group-hover:from-accent-green/30 group-hover:to-accent-green/20 transition-all duration-300 shadow-lg shadow-accent-green/10">
                      <Icon
                        name={benefit.icon}
                        class="w-8 h-8 text-accent-green group-hover:scale-110 transition-transform"
                      />
                    </div>
                    <h3
                      class="font-bold text-xl mb-3 text-primary transition-colors leading-tight"
                      style="font-family: var(--font-display);"
                    >
                      {benefit.title}
                    </h3>
                    <p class="text-sm text-secondary transition-colors font-normal leading-relaxed">
                      {benefit.description}
                    </p>
                  </Panel>
                </div>
              ))
            }
          </div>

          <!-- CTA -->
          <div class="text-center">
            <Button
              variant="primary"
              size="lg"
              href={`${base}contact/`}
              class="mb-4 font-bold shadow-lg shadow-accent-green/20"
            >
              Get Started
              <Icon name="mdi:arrow-right" class="w-5 h-5" />
            </Button>
            <p
              class="text-xs text-secondary transition-colors font-medium uppercase tracking-wide"
            >
              Free consultation • No obligation • Transparent process
            </p>
          </div>
        </div>
      </div>
    </SectionContainer>
  </div>

  <!-- Blog Preview - Interest -->
  {
    recentPosts.length > 0 && (
      <SectionContainer id="blog-preview" padding="lg" class="relative">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16 sm:mb-20 animate-fade-in">
              <div class="inline-block mb-6 px-5 py-2.5 bg-accent-green/10 border border-accent-green/30 rounded-full backdrop-blur-sm">
                <span class="text-accent-green text-xs font-bold tracking-wider uppercase">
                  Latest Insights
                </span>
              </div>
              <h2
                class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.1] tracking-tight"
                style="font-family: var(--font-display);"
              >
                {homepageContent.blog.title}{" "}
                <span class="text-gradient-green">
                  {homepageContent.blog.titleHighlight}
                </span>
              </h2>
              <p class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-medium">
                {homepageContent.blog.subtitle}
              </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8 mb-12">
