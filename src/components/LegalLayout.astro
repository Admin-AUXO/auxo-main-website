---
interface Props {
  title: string;
  lastUpdated: string;
}

const { title, lastUpdated } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <p class="text-gray-400">Last Updated: {lastUpdated}</p>
  </div>

  <div class="prose prose-invert prose-lime max-w-none">
    <div class="bg-zinc-900 border border-zinc-800 rounded-2xl p-8 md:p-12">
      <slot />
    </div>
  </div>

  <div class="mt-12 p-6 bg-lime-400/10 border border-lime-400/20 rounded-lg">
    <h3 class="font-bold mb-2">Questions About This Policy?</h3>
    <p class="text-sm text-gray-400 mb-4">
      If you have any questions or concerns about this policy, please don't hesitate to contact us.
    </p>
    <a href={`${base}contact`} class="inline-flex items-center text-lime-400 hover:underline font-semibold">
      Contact Us â†’
    </a>
  </div>
</div>

<style>
  .prose {
    color: #e5e5e5;
  }
  .prose h2 {
    color: #A3E635;
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .prose h3 {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  .prose ul, .prose ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }
  .prose li {
    margin-bottom: 0.5rem;
    color: #d4d4d4;
  }
  .prose strong {
    color: #ffffff;
    font-weight: 600;
  }
  .prose a {
    color: #A3E635;
    text-decoration: underline;
  }
  .prose a:hover {
    color: #bef264;
  }
</style>
