---
import { Icon } from "astro-icon/components";

interface Value {
  icon: string;
  title: string;
  description: string;
  demonstration?: string;
}

interface Props {
  values: Value[];
  title: string;
  titleHighlight: string;
  subtitle: string;
}

const { values, title, titleHighlight, subtitle } = Astro.props;
---

<div class="max-w-6xl mx-auto mb-16 sm:mb-20 px-4 sm:px-0">
  <div class="text-center mb-12 sm:mb-16 animate-fade-in">
    <h2
      class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.3] tracking-tight"
      style="font-family: var(--font-display);"
    >
      {title} <span class="text-gradient-green block mt-2 pb-1"
        >{titleHighlight}</span
      >
    </h2>
    <p
      class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-normal italic"
      style="font-family: var(--font-body);"
    >
      {subtitle}
    </p>
  </div>

  <div class="space-y-3 sm:space-y-4 md:space-y-6 lg:space-y-8">
    {values.map((value) => (
      <div class="bg-card border border-theme rounded-xl p-4 sm:p-5 md:p-6 lg:p-8 hover:border-accent-green transition-all">
        <!-- Mobile: Icon+Title on left, Description on right (vertically centered) | Desktop: Original layout (Icon left, Title+Description right) -->
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 md:gap-6">
          <!-- Mobile: Icon with title below (column) | Desktop: Icon only (original) -->
          <div class="flex flex-col items-center sm:items-start md:flex-col md:items-start flex-shrink-0">
            <div class="w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 bg-accent-green/10 rounded-xl flex items-center justify-center mb-2 sm:mb-2 md:mb-0">
              <Icon
                name={value.icon}
                class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 text-accent-green transition-colors"
              />
            </div>
            <!-- Mobile: Title below icon | Hidden on desktop (title goes in right column) -->
            <h3 class="font-bold text-sm sm:text-base md:hidden text-primary transition-colors text-center sm:text-left">
              {value.title}
            </h3>
          </div>
          <!-- Mobile: Description on right, vertically centered | Desktop: Title + Description + Demonstration (original) -->
          <div class="flex-1 flex items-center sm:items-start md:items-start">
            <div class="w-full">
              <!-- Desktop: Title here (original) -->
              <h3 class="font-bold mb-1.5 sm:mb-2 hidden md:block md:text-lg lg:text-xl text-primary transition-colors">
                {value.title}
              </h3>
              <p class="text-xs sm:text-sm md:text-base text-secondary mb-2 sm:mb-3 md:mb-4 transition-colors leading-relaxed">
                {value.description}
              </p>
              <!-- Desktop: "How we demonstrate this" here (original) -->
              {value.demonstration && (
                <div class="hidden md:block bg-surface/50 border border-accent-green/20 rounded-lg p-2.5 sm:p-3 md:p-4">
                  <div class="flex items-start gap-1.5 sm:gap-2">
                    <Icon name="mdi:check-circle" class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green transition-colors flex-shrink-0 mt-0.5" />
                    <div class="flex-1 min-w-0">
                      <p class="text-xs sm:text-sm font-semibold text-primary mb-1 transition-colors">
                        How we demonstrate this:
                      </p>
                      <p class="text-xs sm:text-sm md:text-base text-secondary transition-colors leading-relaxed">
                        {value.demonstration}
                      </p>
                    </div>
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
        <!-- Mobile: "How we demonstrate this" full width under icon/title -->
        {value.demonstration && (
          <div class="bg-surface/50 border border-accent-green/20 rounded-lg p-2.5 sm:p-3 md:hidden w-full mt-3">
            <div class="flex items-start gap-1.5 sm:gap-2">
              <Icon name="mdi:check-circle" class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green transition-colors flex-shrink-0 mt-0.5" />
              <div class="flex-1 min-w-0">
                <p class="text-xs sm:text-sm font-semibold text-primary mb-1 transition-colors">
                  How we demonstrate this:
                </p>
                <p class="text-xs sm:text-sm text-secondary transition-colors leading-relaxed">
                  {value.demonstration}
                </p>
              </div>
            </div>
          </div>
        )}
      </div>
    ))}
  </div>
</div>

