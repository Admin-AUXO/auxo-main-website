---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageContainer from '../../components/layouts/PageContainer.astro';
import SectionContainer from '../../components/layouts/SectionContainer.astro';
import BlogPostCard from '../../components/sections/blog/BlogPostCard.astro';
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';
import { commonText } from '../../data/content/shared/common';
import { blogPageContent } from '../../data/content/blog';
import { calculateReadTime } from '../../utils/content';

const base = import.meta.env.BASE_URL;

// Get all blog posts (excluding drafts)
const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});
const sortedPosts = posts.sort((a, b) =>
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

// Calculate read times for all posts
const postsWithReadTime = sortedPosts.map(post => ({
  ...post,
  readTime: calculateReadTime(post.body)
}));

// Featured post (most recent)
const featuredPost = postsWithReadTime[0];
const recentPosts = postsWithReadTime.slice(1);

// Get popular posts (most recent 4 posts as trending)
const popularPosts = postsWithReadTime.slice(0, 4);

---

<BaseLayout
  title="Blog - Data Analytics Insights | AUXO Data Labs"
  description="Explore the latest insights, trends, and best practices in data analytics, business intelligence, and data science from the experts at AUXO Data Labs."
  hideFooterNewsletter={true}
>
  <PageContainer maxWidth="7xl" paddingTop="pt-24" paddingBottom="pb-16">
      <!-- Header -->
      <div class="max-w-3xl mx-auto text-center mb-12 sm:mb-16">
        <div class="inline-block px-5 py-2.5 bg-accent-green/10 border border-accent-green rounded-full backdrop-blur-sm mb-6">
          <span class="text-accent-green text-xs font-bold tracking-wider uppercase transition-colors" style="font-family: var(--font-body);">{blogPageContent.hero.badge}</span>
        </div>
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.1] tracking-tight" style="font-family: var(--font-display);">
          {blogPageContent.hero.title} <span class="text-gradient-green block mt-2">{blogPageContent.hero.titleHighlight}</span>
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-normal" style="font-family: var(--font-body);">
          {blogPageContent.hero.subtitle}
        </p>
      </div>

      {sortedPosts.length > 0 ? (
        <>
          <!-- Featured Post -->
          {featuredPost && (
            <div>
              <BlogPostCard post={featuredPost} featured={true} />
            </div>
          )}

          <!-- Popular Posts Section -->
          {popularPosts.length > 0 && (
            <div class="max-w-6xl mx-auto mb-16 sm:mb-20">
              <div class="flex items-center gap-3 mb-6 sm:mb-8">
                <Icon name="mdi:trending-up" class="w-8 h-8 text-accent-green transition-colors" />
                <h2 class="text-2xl sm:text-3xl font-bold text-primary transition-colors">{blogPageContent.popularPosts.title}</h2>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 blog-posts-container">
                {popularPosts.slice(1, 5).map((post) => (
                  <div>
                    <BlogPostCard post={post} featured={false} />
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Recent Posts Grid -->
          {recentPosts.length > 0 && (
            <div class="max-w-6xl mx-auto mb-16 sm:mb-20">
              <h2 class="text-2xl sm:text-3xl font-bold mb-6 sm:mb-8 text-primary transition-colors">{blogPageContent.recentPosts.title}</h2>

              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 blog-posts-container">
                {recentPosts.map((post) => (
                  <div>
                    <BlogPostCard post={post} featured={false} />
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Related Content Section -->
          <SectionContainer class="mb-16 sm:mb-20">
            <div class="max-w-6xl mx-auto">
              <h2 class="text-2xl sm:text-3xl font-bold mb-6 sm:mb-8 text-primary transition-colors">{blogPageContent.relatedContent.title}</h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {blogPageContent.relatedContent.links.map((link) => (
                  <a
                    href={`${base}${link.href}/`}
                    class="group bg-card border-2 border-theme rounded-xl p-6 hover:border-accent-green transition-all duration-300 hover:-translate-y-1"
                  >
                    <div class="flex items-center gap-3 mb-4">
                      <Icon name={link.icon} class="w-8 h-8 text-accent-green transition-colors" />
                      <h3 class="text-xl font-bold text-primary group-hover:text-accent-green transition-colors">{link.title}</h3>
                    </div>
                    <p class="text-secondary mb-4 transition-colors">{link.description}</p>
                    <span class="text-accent-green font-semibold group-hover:gap-3 transition-all inline-flex items-center gap-2 min-h-[44px]">
                      {link.linkText}
                      <Icon name="mdi:arrow-right" class="w-5 h-5" />
                    </span>
                  </a>
                ))}
              </div>
            </div>
          </SectionContainer>
        </>
      ) : (
        <div class="max-w-2xl mx-auto text-center py-16">
          <!-- Empty State -->
          <div class="w-24 h-24 bg-card rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="mdi:book-open" class="w-12 h-12 text-tertiary transition-colors" />
          </div>
          <h2 class="text-2xl font-bold mb-4 text-primary transition-colors">{blogPageContent.empty.title}</h2>
          <p class="text-secondary mb-8 transition-colors">
            {blogPageContent.empty.description}
          </p>
          
          <!-- What to Expect Section -->
          <div class="bg-card border border-theme rounded-lg p-6 mb-8 text-left">
            <h3 class="text-lg font-semibold mb-4 text-primary transition-colors flex items-center gap-2">
              <Icon name="mdi:lightbulb" class="w-5 h-5 text-accent-green" />
              {blogPageContent.empty.whatToExpect.title}
            </h3>
            <div class="space-y-2">
              {blogPageContent.empty.whatToExpect.items.map((item) => (
                <div class="flex items-start gap-2">
                  <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                  <span class="text-sm text-secondary transition-colors">{item}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
            <a
              href={`${base}contact/`}
              class="px-6 py-3 bg-accent-green font-semibold rounded-lg hover:bg-accent-green/90 transition-colors inline-flex items-center justify-center min-h-[44px] min-w-[44px]"
            >
              {commonText.buttons.subscribe}
            </a>
            <a
              href={`${base}${blogPageContent.empty.ctaHref}/`}
              class="px-6 py-3 bg-surface text-primary font-semibold rounded-lg hover:bg-surface/80 transition-colors inline-flex items-center justify-center min-h-[44px] min-w-[44px] border border-theme"
            >
              {blogPageContent.empty.ctaText}
            </a>
          </div>

          <!-- Explore Services Section -->
          <div class="bg-card border border-theme rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4 text-primary transition-colors">{blogPageContent.empty.exploreServices.title}</h3>
            <p class="text-sm text-secondary mb-4 transition-colors">
              {blogPageContent.empty.exploreServices.description}
            </p>
            <a
              href={`${base}${blogPageContent.empty.exploreServices.href}/`}
              class="inline-flex items-center gap-2 text-accent-green hover:text-accent-green/80 font-semibold text-sm transition-colors min-h-[44px]"
            >
              {blogPageContent.empty.exploreServices.linkText}
              <Icon name="mdi:arrow-right" class="w-4 h-4" />
            </a>
          </div>
        </div>
      )}

      <!-- Newsletter Signup -->
      <SectionContainer class="mt-8">
        <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-r from-accent-green/10 to-accent-green/20 border-2 border-accent-green/20 rounded-2xl p-8 md:p-12 text-center transition-colors">
          <Icon name="mdi:email-newsletter" class="w-16 h-16 text-accent-green mx-auto mb-4 transition-colors" />
          <div class="inline-block px-4 py-2 bg-accent-green/20 border border-accent-green/40 rounded-full mb-4">
            <span class="text-accent-green text-sm font-semibold transition-colors">{commonText.newsletter.subscriberCount}</span>
          </div>
          <h2 class="text-3xl font-bold mb-4 text-primary transition-colors">{commonText.newsletter.title}</h2>
          <p class="text-secondary mb-6 max-w-2xl mx-auto transition-colors">
            {commonText.newsletter.subtitle}
          </p>
          <div class="bg-card/50 border border-accent-green/20 rounded-lg p-6 mb-8 max-w-2xl mx-auto text-left">
            <p class="text-sm font-semibold mb-3 text-primary transition-colors">{commonText.newsletter.whatYoullReceive}</p>
            <div class="space-y-2">
              {commonText.newsletter.benefits.map((benefit) => (
                <div class="flex items-start gap-2">
                  <Icon name="mdi:check" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                  <span class="text-sm text-secondary transition-colors">{benefit}</span>
                </div>
              ))}
            </div>
          </div>
          <div class="flex items-center justify-center gap-2 mb-6 text-sm text-secondary">
            <Icon name="mdi:calendar-clock" class="w-5 h-5 text-accent-green" />
            <span>{commonText.newsletter.frequency}</span>
          </div>
          <form id="blog-newsletter-form" class="flex flex-col gap-4 max-w-md mx-auto">
            <div class="flex flex-col sm:flex-row gap-4">
              <input
                type="email"
                id="blog-newsletter-email"
                placeholder={commonText.newsletter.emailPlaceholder}
                class="flex-1 px-4 py-3 bg-card border border-theme rounded-lg focus:outline-none focus:border-accent-green transition-colors text-primary"
                required
              />
              <button
                type="submit"
                id="blog-newsletter-btn"
                class="px-6 py-3 bg-accent-green font-semibold rounded-lg hover:bg-accent-green/90 transition-colors whitespace-nowrap min-h-[44px]"
              >
                {commonText.newsletter.subscribe}
              </button>
            </div>
            <label class="flex items-start gap-2 cursor-pointer group text-left">
              <input
                type="checkbox"
                id="blog-newsletter-consent"
                required
                class="mt-0.5 w-4 h-4 text-accent-green bg-card border-theme rounded focus:ring-accent-green/50 focus:ring-2 transition-colors"
              />
              <span class="text-xs text-secondary leading-tight group-hover:text-primary transition-colors">
                {commonText.newsletter.consent}
                <a href={`${base}legal/privacy-policy/`} class="text-accent-green hover:underline transition-colors"> {commonText.newsletter.privacyLink}</a>
              </span>
            </label>
            <p id="blog-newsletter-message" class="text-sm"></p>
          </form>
        </div>
      </SectionContainer>
      
  </PageContainer>
</BaseLayout>
