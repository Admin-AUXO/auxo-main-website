---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';
import { commonText } from '../../data/shared/common';
import { blogPageContent } from '../../data/content/blog';

const base = import.meta.env.BASE_URL;

// Get all blog posts (excluding drafts)
const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});
const sortedPosts = posts.sort((a, b) =>
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

// Featured post (most recent)
const featuredPost = sortedPosts[0];
const recentPosts = sortedPosts.slice(1);

// Helper to format date
function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(new Date(date));
}

// Helper to calculate read time - kept for potential future use
// eslint-disable-next-line @typescript-eslint/no-unused-vars
function calculateReadTime(_content: string) {
  const wordsPerMinute = 200;
  const wordCount = _content.trim().split(/\s+/).length;
  return Math.ceil(wordCount / wordsPerMinute);
}
---

<BaseLayout
  title="Blog - Data Analytics Insights | AUXO Data Labs"
  description="Explore the latest insights, trends, and best practices in data analytics, business intelligence, and data science from the experts at AUXO Data Labs."
>
  <div class="pt-24 pb-16">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="max-w-3xl mx-auto text-center mb-16">
        <div class="inline-block px-4 py-2 bg-lime-400/10 border border-lime-400/20 rounded-full mb-4">
          <span class="text-lime-400 text-sm font-semibold">{blogPageContent.hero.badge}</span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          {blogPageContent.hero.title}
          <span class="text-lime-400"> {blogPageContent.hero.titleHighlight}</span>
        </h1>
        <p class="text-xl text-gray-400">
          {blogPageContent.hero.subtitle}
        </p>
      </div>

      {sortedPosts.length > 0 ? (
        <>
          <!-- Featured Post -->
          {featuredPost && (
            <div class="max-w-6xl mx-auto mb-16">
              <a
                href={`${base}blog/${featuredPost.id.replace(/\.mdx?$/, '')}`}
                class="group block bg-gradient-to-br from-zinc-900 to-zinc-950 border-2 border-zinc-800 rounded-2xl overflow-hidden hover:border-lime-400 transition-all duration-300"
              >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-0">
                  <div class="aspect-video md:aspect-auto bg-gradient-to-br from-lime-400/20 to-green-500/20 flex items-center justify-center">
                    {featuredPost.data.image ? (
                      <img
                        src={featuredPost.data.image}
                        alt={featuredPost.data.title}
                        class="w-full h-full object-cover"
                      />
                    ) : (
                      <Icon name="mdi:post" class="w-24 h-24 text-lime-400" />
                    )}
                  </div>

                  <div class="p-8 md:p-12 flex flex-col justify-center">
                    <div class="inline-block px-3 py-1 bg-lime-400 text-black text-xs font-bold rounded-full mb-4 w-fit">
                      {blogPageContent.featured.badge}
                    </div>

                    <h2 class="text-3xl font-bold mb-4 group-hover:text-lime-400 transition-colors">
                      {featuredPost.data.title}
                    </h2>

                    <p class="text-gray-400 mb-6">
                      {featuredPost.data.description}
                    </p>

                    <div class="flex items-center text-sm text-gray-500">
                      <span>{formatDate(featuredPost.data.publishDate)}</span>
                      <span class="mx-2">•</span>
                      <span>{featuredPost.data.author}</span>
                      {featuredPost.data.tags && featuredPost.data.tags.length > 0 && (
                        <>
                          <span class="mx-2">•</span>
                          <span class="text-lime-400">#{featuredPost.data.tags[0]}</span>
                        </>
                      )}
                    </div>
                  </div>
                </div>
              </a>
            </div>
          )}

          <!-- Recent Posts Grid -->
          {recentPosts.length > 0 && (
            <div class="max-w-6xl mx-auto">
              <h2 class="text-2xl font-bold mb-8">{blogPageContent.recentPosts.title}</h2>

              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {recentPosts.map((post) => (
                  <a
                    href={`${base}blog/${post.id.replace(/\.mdx?$/, '')}`}
                    class="group bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden hover:border-lime-400 transition-all duration-300 hover:-translate-y-1"
                  >
                    <div class="aspect-video bg-gradient-to-br from-lime-400/20 to-green-500/20 flex items-center justify-center">
                      {post.data.image ? (
                        <img
                          src={post.data.image}
                          alt={post.data.title}
                          class="w-full h-full object-cover"
                        />
                      ) : (
                        <Icon name="mdi:post" class="w-12 h-12 text-lime-400" />
                      )}
                    </div>

                    <div class="p-6">
                      {post.data.tags && post.data.tags.length > 0 && (
                        <div class="flex flex-wrap gap-2 mb-3">
                          {post.data.tags.slice(0, 2).map((tag: string) => (
                            <span class="px-2 py-1 bg-lime-400/10 text-lime-400 text-xs rounded">
                              #{tag}
                            </span>
                          ))}
                        </div>
                      )}

                      <h3 class="text-xl font-bold mb-3 group-hover:text-lime-400 transition-colors line-clamp-2">
                        {post.data.title}
                      </h3>

                      <p class="text-sm text-gray-400 mb-4 line-clamp-2">
                        {post.data.description}
                      </p>

                      <div class="flex items-center text-xs text-gray-500">
                        <span>{formatDate(post.data.publishDate)}</span>
                        <span class="mx-2">•</span>
                        <span>{post.data.author}</span>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}
        </>
      ) : (
        <div class="max-w-2xl mx-auto text-center py-16">
          <!-- Empty State -->
          <div class="w-24 h-24 bg-zinc-900 rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="mdi:book-open" class="w-12 h-12 text-gray-600" />
          </div>
          <h2 class="text-2xl font-bold mb-4">{blogPageContent.empty.title}</h2>
          <p class="text-gray-400 mb-8">
            {blogPageContent.empty.description}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={`${base}contact`}
              class="px-6 py-3 bg-lime-400 text-black font-semibold rounded-lg hover:bg-lime-500 transition-colors inline-flex items-center justify-center"
            >
              {commonText.buttons.subscribe}
            </a>
            <a
              href={`${base}${blogPageContent.empty.ctaHref}`}
              class="px-6 py-3 bg-zinc-800 text-white font-semibold rounded-lg hover:bg-zinc-700 transition-colors inline-flex items-center justify-center"
            >
              {blogPageContent.empty.ctaText}
            </a>
          </div>
        </div>
      )}

      <!-- Newsletter Signup -->
      <div class="max-w-4xl mx-auto mt-20">
        <div class="bg-gradient-to-r from-lime-400/10 to-green-500/10 border-2 border-lime-400/20 rounded-2xl p-8 md:p-12 text-center">
          <Icon name="mdi:email-newsletter" class="w-16 h-16 text-lime-400 mx-auto mb-4" />
          <h2 class="text-3xl font-bold mb-4">{commonText.newsletter.title}</h2>
          <p class="text-gray-400 mb-8 max-w-2xl mx-auto">
            {commonText.newsletter.subtitle}
          </p>
          <form id="blog-newsletter-form" class="flex flex-col gap-4 max-w-md mx-auto">
            <div class="flex flex-col sm:flex-row gap-4">
              <input
                type="email"
                id="blog-newsletter-email"
                placeholder={commonText.newsletter.emailPlaceholder}
                class="flex-1 px-4 py-3 bg-zinc-900 border border-zinc-700 rounded-lg focus:outline-none focus:border-lime-400"
                required
              />
              <button
                type="submit"
                id="blog-newsletter-btn"
                class="px-6 py-3 bg-lime-400 text-black font-semibold rounded-lg hover:bg-lime-500 transition-colors whitespace-nowrap"
              >
                {commonText.newsletter.subscribe}
              </button>
            </div>
            <label class="flex items-start gap-2 cursor-pointer group text-left">
              <input
                type="checkbox"
                id="blog-newsletter-consent"
                required
                class="mt-0.5 w-4 h-4 text-lime-400 bg-zinc-900 border-zinc-700 rounded focus:ring-lime-400 focus:ring-2"
              />
              <span class="text-xs text-gray-400 leading-tight group-hover:text-gray-300 transition-colors">
                {commonText.newsletter.consent}
                <a href={`${base}legal/privacy-policy`} class="text-lime-400 hover:underline"> {commonText.newsletter.privacyLink}</a>
              </span>
            </label>
            <p id="blog-newsletter-message" class="text-sm"></p>
          </form>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script is:inline define:vars={{ newsletterText: commonText.newsletter }}>
  const form = document.getElementById('blog-newsletter-form');
  const emailInput = document.getElementById('blog-newsletter-email');
  const consentCheckbox = document.getElementById('blog-newsletter-consent');
  const button = document.getElementById('blog-newsletter-btn');
  const message = document.getElementById('blog-newsletter-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput?.value;
    const consent = consentCheckbox?.checked;

    if (!email || !consent) return;

    button.disabled = true;
    button.textContent = newsletterText.subscribing;

    try {
      const response = await fetch(`${import.meta.env.BASE_URL}api/newsletter/`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          email,
          consent,
          timestamp: new Date().toISOString()
        })
      });

      const data = await response.json();

      if (!response.ok) {
        const errorMessage = data.error || newsletterText.error;
        message.textContent = errorMessage;
        message.className = 'text-sm text-red-400';
        return;
      }

      message.textContent = data.message || newsletterText.success;
      message.className = 'text-sm text-lime-400';
      form.reset();

      // Hide message after 8 seconds
      setTimeout(() => {
        message.textContent = '';
      }, 8000);

    } catch (error) {
      console.error('Newsletter subscription error:', error);
      message.textContent = 'An error occurred. Please try again later.';
      message.className = 'text-sm text-red-400';
    } finally {
      button.disabled = false;
      button.textContent = newsletterText.subscribe;
    }
  });
</script>
