---
import { Icon } from "astro-icon/components";

interface ServiceSummaryProps {
  timeline?: string;
  involvement?: string;
  expectedImpact?: string;
}

const { timeline, involvement = "Minimal", expectedImpact } = Astro.props;
---

<div class="bg-accent-green/10 border border-accent-green/30 rounded-xl p-6 sm:p-8 mb-8 sm:mb-12">
  <h3 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 flex items-center text-primary transition-colors">
    <Icon name="mdi:information" class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green transition-colors mr-2 sm:mr-3 flex-shrink-0" />
    What This Means for Your Business
  </h3>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
    {timeline && (
      <div class="flex items-start gap-3">
        <div class="w-10 h-10 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0">
          <Icon name="mdi:clock" class="w-5 h-5 text-accent-green transition-colors" />
        </div>
        <div>
          <div class="text-sm font-semibold text-secondary mb-1 transition-colors">Typical Timeline</div>
          <div class="text-lg font-bold text-primary transition-colors">{timeline}</div>
        </div>
      </div>
    )}
    <div class="flex items-start gap-3">
      <div class="w-10 h-10 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0">
        <Icon name="mdi:account-group" class="w-5 h-5 text-accent-green transition-colors" />
      </div>
      <div>
        <div class="text-sm font-semibold text-secondary mb-1 transition-colors">Your Involvement</div>
        <div class="text-lg font-bold text-primary transition-colors">{involvement}</div>
      </div>
    </div>
    {expectedImpact && (
      <div class="flex items-start gap-3">
        <div class="w-10 h-10 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0">
          <Icon name="mdi:trending-up" class="w-5 h-5 text-accent-green transition-colors" />
        </div>
        <div>
          <div class="text-sm font-semibold text-secondary mb-1 transition-colors">Expected Impact</div>
          <div class="text-sm text-primary transition-colors leading-relaxed">{expectedImpact}</div>
        </div>
      </div>
    )}
  </div>
</div>

