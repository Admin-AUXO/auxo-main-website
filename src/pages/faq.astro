---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageContainer from "../components/layouts/PageContainer.astro";
import ContentWrapper from "../components/layouts/ContentWrapper.astro";
import { Icon } from "astro-icon/components";
import { faqData } from "../data/collections/faq";

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Frequently Asked Questions | AUXO Data Labs"
  description="Have questions about working with a startup consultancy? Find answers about our services, pricing, process, and the advantages of working with AUXO Data Labs."
>
  <PageContainer maxWidth="7xl" paddingTop="pt-24" paddingBottom="pb-16">
      <!-- Hero Section -->
      <ContentWrapper maxWidth="4xl" class="text-center mb-12">
        <div
          class="inline-block px-3 py-1 bg-accent-green/10 border border-accent-green/20 rounded-full mb-4"
        >
          <span
            class="text-accent-green transition-colors text-xs font-semibold uppercase tracking-wide"
            >FAQ</span
          >
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Frequently Asked Questions
        </h1>
        <p class="text-xl text-secondary transition-colors leading-relaxed mb-8">
          Find answers to common questions about our data analytics services,
          pricing, and how we can help transform your business.
        </p>
        
        {/* Search Bar */}
        <div class="max-w-2xl mx-auto mb-6">
          <div class="relative">
            <Icon name="mdi:search" class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-secondary" />
            <input
              type="text"
              id="faq-search"
              placeholder="Search FAQs (e.g., pricing, services, timeline)..."
              class="w-full pl-12 pr-4 py-3 bg-card border-2 border-theme rounded-lg focus:border-accent-green focus:outline-none text-primary transition-colors min-h-[44px]"
            />
            <button
              id="clear-search"
              class="absolute right-4 top-1/2 transform -translate-y-1/2 hidden text-secondary hover:text-accent-green transition-colors"
              aria-label="Clear search"
            >
              <Icon name="mdi:close" class="w-5 h-5" />
            </button>
          </div>
          <p class="text-xs text-secondary mt-2 text-left">
            Press <kbd class="px-2 py-1 bg-surface border border-theme rounded text-xs">/</kbd> to focus search
          </p>
        </div>
        
        {/* Popular Questions */}
        <div class="max-w-4xl mx-auto mb-8">
          <h2 class="text-lg font-bold mb-4 text-primary transition-colors flex items-center justify-center gap-2">
            <Icon name="mdi:star" class="w-5 h-5 text-accent-green" />
            Popular Questions
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <a
              href="#faq-general-0"
              class="p-3 bg-card border border-theme rounded-lg hover:border-accent-green hover:bg-surface transition-all text-left group min-h-[44px]"
              data-popular-question
            >
              <div class="flex items-start gap-2">
                <Icon name="mdi:help-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <span class="text-sm text-primary transition-colors group-hover:text-accent-green">
                  Why should I work with a startup instead of a big consultancy?
                </span>
              </div>
            </a>
            <a
              href="#faq-pricing-0"
              class="p-3 bg-card border border-theme rounded-lg hover:border-accent-green hover:bg-surface transition-all text-left group min-h-[44px]"
              data-popular-question
            >
              <div class="flex items-start gap-2">
                <Icon name="mdi:help-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <span class="text-sm text-primary transition-colors group-hover:text-accent-green">
                  How do you price your services?
                </span>
              </div>
            </a>
            <a
              href="#faq-general-5"
              class="p-3 bg-card border border-theme rounded-lg hover:border-accent-green hover:bg-surface transition-all text-left group min-h-[44px]"
              data-popular-question
            >
              <div class="flex items-start gap-2">
                <Icon name="mdi:help-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <span class="text-sm text-primary transition-colors group-hover:text-accent-green">
                  You're newâ€”how do I know you can deliver?
                </span>
              </div>
            </a>
            <a
              href="#faq-pricing-1"
              class="p-3 bg-card border border-theme rounded-lg hover:border-accent-green hover:bg-surface transition-all text-left group min-h-[44px]"
              data-popular-question
            >
              <div class="flex items-start gap-2">
                <Icon name="mdi:help-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <span class="text-sm text-primary transition-colors group-hover:text-accent-green">
                  What is your typical project timeline?
                </span>
              </div>
            </a>
          </div>
        </div>
      </ContentWrapper>

      <!-- FAQ Content -->
      <ContentWrapper maxWidth="7xl">
        <!-- Category Tabs -->
        <div class="mb-12">
          <div class="flex flex-wrap gap-3 justify-center">
            {
              faqData.map((category, index) => (
                <button
                  data-category={category.category}
                  class={`category-tab px-6 py-3 rounded-lg font-semibold transition-all flex items-center gap-2 min-h-[44px] touch-manipulation ${
                    index === 0
                      ? "bg-accent-green category-tab-active"
                      : "bg-card text-secondary hover:bg-surface hover:text-accent-green border border-theme"
                  }`}
                >
                  <Icon name={category.icon} class="w-5 h-5" />
                  <span>{category.category}</span>
                  <span class="ml-1 px-2 py-0.5 bg-primary/20 dark:bg-primary/10 rounded-full text-xs font-medium">
                    {category.questions.length}
                  </span>
                </button>
              ))
            }
          </div>
        </div>
        
        {/* Expand/Collapse All */}
        <div class="mb-6 flex justify-center gap-3">
          <button
            id="expand-all"
            class="px-4 py-2 bg-surface border border-theme rounded-lg text-sm font-medium text-secondary hover:text-accent-green hover:border-accent-green transition-colors min-h-[44px] touch-manipulation"
          >
            <Icon name="mdi:chevron-down" class="w-4 h-4 inline mr-2" />
            Expand All
          </button>
          <button
            id="collapse-all"
            class="px-4 py-2 bg-surface border border-theme rounded-lg text-sm font-medium text-secondary hover:text-accent-green hover:border-accent-green transition-colors min-h-[44px] touch-manipulation"
          >
            <Icon name="mdi:chevron-up" class="w-4 h-4 inline mr-2" />
            Collapse All
          </button>
        </div>

        <!-- FAQ Categories -->
        {
          faqData.map((category, categoryIndex) => (
            <div
              data-category-content={category.category}
              class={`category-content ${categoryIndex === 0 ? "" : "hidden"}`}
            >
              <div class="space-y-4 sm:space-y-5">
                {category.questions.map((item, itemIndex) => {
                  // Check if answer has a short version (first sentence before period)
                  const shortAnswer = item.a.includes('.') ? item.a.split('.')[0] + '.' : null;
                  const hasShortAnswer = shortAnswer && shortAnswer.length < 150 && item.a.length > shortAnswer.length;
                  
                  return (
                    <div 
                      class="faq-item bg-card border border-theme rounded-xl overflow-hidden hover:border-accent-green/30 transition-all duration-200 hover:shadow-lg" 
                      data-faq-index={itemIndex}
                      data-category={category.category.toLowerCase().replace(/\s+/g, '-')}
                      id={`faq-${category.category.toLowerCase().replace(/\s+/g, '-')}-${itemIndex}`}
                    >
                      <button class="faq-question w-full text-left px-6 py-5 flex items-center justify-between hover:bg-surface transition-colors min-h-[44px] touch-manipulation group" aria-expanded="false">
                        <span class="font-semibold text-lg text-primary pr-4 transition-colors">
                          {item.q}
                        </span>
                        <Icon
                          name="mdi:chevron-down"
                          class="faq-chevron w-6 h-6 text-accent-green transition-all flex-shrink-0"
                        />
                      </button>
                      <div class="faq-answer max-h-0 overflow-hidden transition-all duration-300">
                        <div class="px-6 pb-5 text-secondary transition-colors leading-relaxed">
                          {hasShortAnswer ? (
                            <div>
                              <p class="mb-2 font-medium">{shortAnswer}</p>
                              <p class="text-sm">{item.a.substring(shortAnswer.length).trim()}</p>
                            </div>
                          ) : (
                            <p>{item.a}</p>
                          )}
                          {/* Still Have Questions CTA */}
                          <div class="mt-4 pt-4 border-t border-theme">
                            <p class="text-sm text-secondary mb-2">Still have questions?</p>
                            <a
                              href={`${base}contact/`}
                              class="inline-flex items-center gap-2 text-sm text-accent-green hover:underline font-medium"
                            >
                              <Icon name="mdi:message" class="w-4 h-4" />
                              Contact us
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  );
                })}
              </div>
            </div>
          ))
        }
      </ContentWrapper>

      <!-- CTA Section -->
      <ContentWrapper maxWidth="4xl" class="mt-16">
        <div
          class="bg-gradient-to-r from-accent-green/10 to-accent-green/20 border-2 border-accent-green/20 rounded-2xl p-8 text-center"
        >
          <h3 class="text-2xl font-bold mb-4 text-primary transition-colors">Still Have Questions? Let's Talk</h3>
          <p class="text-primary transition-colors mb-6">
            Our team is here to help. Get in touch and we'll answer any
            questions you have about our services.
          </p>
          
          <!-- Common Next Steps -->
          <div class="bg-card/50 border border-theme rounded-lg p-6 mb-6 text-left max-w-2xl mx-auto">
            <h4 class="font-semibold mb-3 text-primary transition-colors">What happens next:</h4>
            <div class="space-y-2">
              <div class="flex items-start gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <span class="text-sm text-secondary transition-colors">We'll answer your questions</span>
              </div>
              <div class="flex items-start gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <span class="text-sm text-secondary transition-colors">Schedule a free consultation (if you want)</span>
              </div>
              <div class="flex items-start gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <span class="text-sm text-secondary transition-colors">No pressure, just honest advice</span>
              </div>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={`${base}contact/`}
              class="inline-flex items-center justify-center px-8 py-3 bg-accent-green font-bold rounded-lg hover:bg-accent-green/90 transition-colors min-h-[44px] touch-manipulation"
            >
              Let's Talk
              <Icon name="mdi:arrow-right" class="w-5 h-5 ml-2" />
            </a>
            <a
              href={`${base}tools/maturity-calculator/`}
              class="inline-flex items-center justify-center px-8 py-3 bg-surface text-primary font-bold rounded-lg hover:bg-surface/80 transition-colors border border-theme min-h-[44px] touch-manipulation"
            >
              <Icon name="mdi:calculator" class="w-5 h-5 mr-2" />
              Try Maturity Calculator
            </a>
          </div>
        </div>
      </ContentWrapper>
  </PageContainer>
</BaseLayout>

<script>
  // Search functionality
  const searchInput = document.getElementById("faq-search") as HTMLInputElement;
  const clearSearchBtn = document.getElementById("clear-search") as HTMLButtonElement;
  const faqItems = document.querySelectorAll(".faq-item");
  
  if (searchInput) {
    searchInput.addEventListener("input", (e) => {
      const query = (e.target as HTMLInputElement).value.toLowerCase().trim();
      
      if (query) {
        clearSearchBtn?.classList.remove("hidden");
        
        faqItems.forEach((item) => {
          const question = item.querySelector(".faq-question span")?.textContent?.toLowerCase() || "";
          const answer = item.querySelector(".faq-answer")?.textContent?.toLowerCase() || "";
          const matches = question.includes(query) || answer.includes(query);
          
          if (matches) {
            (item as HTMLElement).classList.remove("hidden");
            // Highlight search term (simple approach)
            const questionEl = item.querySelector(".faq-question span");
            if (questionEl && question.includes(query)) {
              questionEl.innerHTML = questionEl.textContent?.replace(
                new RegExp(query, "gi"),
                (match) => `<mark class="bg-accent-green/30">${match}</mark>`
              ) || "";
            }
          } else {
            (item as HTMLElement).classList.add("hidden");
          }
        });
      } else {
        clearSearchBtn?.classList.add("hidden");
        faqItems.forEach((item) => {
          (item as HTMLElement).classList.remove("hidden");
          // Remove highlights
          const questionEl = item.querySelector(".faq-question span");
          if (questionEl) {
            questionEl.innerHTML = questionEl.textContent || "";
          }
        });
      }
    });
    
    clearSearchBtn?.addEventListener("click", () => {
      searchInput.value = "";
      searchInput.dispatchEvent(new Event("input"));
      searchInput.focus();
    });
    
    // Keyboard shortcut: / to focus search
    document.addEventListener("keydown", (e) => {
      if (e.key === "/" && document.activeElement?.tagName !== "INPUT") {
        e.preventDefault();
        searchInput.focus();
      }
    });
  }
  
  // Expand/Collapse All
  const expandAllBtn = document.getElementById("expand-all");
  const collapseAllBtn = document.getElementById("collapse-all");
  
  expandAllBtn?.addEventListener("click", () => {
    document.querySelectorAll(".faq-answer").forEach((answer) => {
      const answerEl = answer as HTMLElement;
      const question = answer.previousElementSibling as HTMLElement;
      const chevron = question?.querySelector(".faq-chevron");
      
      answerEl.style.maxHeight = answerEl.scrollHeight + "px";
      chevron?.classList.add("rotate-180");
      question?.setAttribute("aria-expanded", "true");
    });
  });
  
  collapseAllBtn?.addEventListener("click", () => {
    document.querySelectorAll(".faq-answer").forEach((answer) => {
      const answerEl = answer as HTMLElement;
      const question = answer.previousElementSibling as HTMLElement;
      const chevron = question?.querySelector(".faq-chevron");
      
      answerEl.style.maxHeight = "0";
      chevron?.classList.remove("rotate-180");
      question?.setAttribute("aria-expanded", "false");
    });
  });
  
  // Category switching
  const categoryTabs = document.querySelectorAll(".category-tab");
  const categoryContents = document.querySelectorAll(".category-content");

  categoryTabs.forEach((tab) => {
    tab.addEventListener("click", () => {
      const category = tab.getAttribute("data-category");

      // Update active tab
      categoryTabs.forEach((t) => {
        if (t.getAttribute("data-category") === category) {
          t.classList.remove(
            "bg-card",
            "text-secondary",
            "border",
            "border-theme",
            "hover:bg-surface",
            "hover:text-accent-green",
          );
          t.classList.add("bg-accent-green", "category-tab-active");
        } else {
          t.classList.remove("bg-accent-green", "category-tab-active");
          t.classList.add(
            "bg-card",
            "text-secondary",
            "border",
            "border-theme",
            "hover:bg-surface",
            "hover:text-accent-green",
          );
        }
      });

      // Show/hide content with smooth transition
      categoryContents.forEach((content) => {
        const contentEl = content as HTMLElement;
        if (content.getAttribute("data-category-content") === category) {
          contentEl.classList.remove("hidden");
          // Smooth fade-in animation
          contentEl.style.opacity = "0";
          setTimeout(() => {
            contentEl.style.transition = "opacity 0.3s ease-in";
            contentEl.style.opacity = "1";
          }, 10);
        } else {
          contentEl.style.opacity = "0";
          setTimeout(() => {
            contentEl.classList.add("hidden");
            contentEl.style.opacity = "";
            contentEl.style.transition = "";
          }, 300);
        }
      });

      // Close all expanded FAQs when switching categories
      document.querySelectorAll(".faq-answer").forEach((answer) => {
        const answerEl = answer as HTMLElement;
        answerEl.style.maxHeight = "0";
      });
      document.querySelectorAll(".faq-chevron").forEach((chevron) => {
        chevron.classList.remove("rotate-180");
      });
      document.querySelectorAll(".faq-question").forEach((question) => {
        question.setAttribute("aria-expanded", "false");
      });
      
      // DO NOT scroll - keep current scroll position when switching categories
    });
  });

  // FAQ accordion - ensure only one item opens at a time
  const faqQuestions = document.querySelectorAll(".faq-question");

  faqQuestions.forEach((question) => {
    question.addEventListener("click", (e) => {
      e.stopPropagation();
      const faqItem = question.parentElement;
      if (!faqItem) return;

      const answer = faqItem.querySelector(".faq-answer") as HTMLElement | null;
      const chevron = question.querySelector(
        ".faq-chevron",
      ) as HTMLElement | null;

      if (!answer || !chevron) return;

      const isOpen = answer.style.maxHeight && answer.style.maxHeight !== "0px";

      if (isOpen) {
        // Close this item
        answer.style.maxHeight = "0";
        chevron.classList.remove("rotate-180");
        question.setAttribute("aria-expanded", "false");
      } else {
        // Close all other items first to prevent layout issues
        document.querySelectorAll(".faq-answer").forEach((otherAnswer) => {
          if (otherAnswer !== answer) {
            const otherEl = otherAnswer as HTMLElement;
            otherEl.style.maxHeight = "0";
          }
        });
        document.querySelectorAll(".faq-chevron").forEach((otherChevron) => {
          if (otherChevron !== chevron) {
            otherChevron.classList.remove("rotate-180");
          }
        });
        document.querySelectorAll(".faq-question").forEach((otherQuestion) => {
          if (otherQuestion !== question) {
            otherQuestion.setAttribute("aria-expanded", "false");
          }
        });
        
        // Then open this item
        // Use scrollHeight to get accurate height
        answer.style.maxHeight = answer.scrollHeight + "px";
        chevron.classList.add("rotate-180");
        question.setAttribute("aria-expanded", "true");
        
        // Smooth scroll to expanded item
        setTimeout(() => {
          faqItem.scrollIntoView({ behavior: "smooth", block: "nearest" });
        }, 100);
      }
    });
    
    // Keyboard navigation
    question.addEventListener("keydown", (e) => {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        (question as HTMLElement).click();
      } else if (e.key === "ArrowDown") {
        e.preventDefault();
        const nextItem = faqItem?.nextElementSibling?.querySelector(".faq-question") as HTMLElement;
        if (nextItem) {
          nextItem.focus();
        }
      } else if (e.key === "ArrowUp") {
        e.preventDefault();
        const prevItem = faqItem?.previousElementSibling?.querySelector(".faq-question") as HTMLElement;
        if (prevItem) {
          prevItem.focus();
        } else {
          searchInput?.focus();
        }
      } else if (e.key === "Escape") {
        const answer = faqItem?.querySelector(".faq-answer") as HTMLElement;
        const chevron = question.querySelector(".faq-chevron");
        if (answer && answer.style.maxHeight && answer.style.maxHeight !== "0px") {
          answer.style.maxHeight = "0";
          chevron?.classList.remove("rotate-180");
          question.setAttribute("aria-expanded", "false");
        }
      }
    });
  });
  
  // Handle popular question links
  document.querySelectorAll('[data-popular-question]').forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();
      const href = (link as HTMLAnchorElement).getAttribute("href");
      if (href) {
        const targetId = href.substring(1); // Remove #
        const targetItem = document.getElementById(targetId);
        if (targetItem) {
          // Switch to correct category if needed
          const category = targetItem.getAttribute("data-category");
          if (category) {
            const categoryTab = Array.from(categoryTabs).find(
              (tab) => tab.getAttribute("data-category")?.toLowerCase().replace(/\s+/g, "-") === category
            );
            categoryTab?.click();
          }
          
          // Open the FAQ item
          setTimeout(() => {
            const question = targetItem.querySelector(".faq-question") as HTMLElement;
            question?.click();
            targetItem.scrollIntoView({ behavior: "smooth", block: "center" });
          }, 300);
        }
      }
    });
  });
</script>

<style>
  .faq-chevron {
    transition: transform 0.3s ease;
  }

  .category-tab {
    white-space: nowrap;
  }
  
  /* Active category tab styling - theme-aware */
  .category-tab-active {
    color: var(--text-on-accent) !important;
  }
  
  .category-tab-active svg {
    color: var(--text-on-accent) !important;
  }

  /* FAQ item hover effects */
  .faq-item {
    transition: all 0.2s ease;
  }
  
  .faq-item:hover {
    transform: translateY(-2px);
  }
  
  /* Category content transitions */
  .category-content {
    transition: opacity 0.3s ease-in;
  }
  
  .category-content.hidden {
    display: none !important;
  }
  
  /* FAQ answer smooth expansion - prevent layout shifts */
  .faq-answer {
    transition: max-height 0.3s ease-out, padding 0.3s ease-out;
    box-sizing: border-box;
  }
  
  /* Active FAQ item styling */
  .faq-item[aria-expanded="true"] .faq-question {
    background-color: var(--bg-surface);
    border-bottom: 1px solid var(--border-color);
  }
  
  .faq-item[aria-expanded="true"] {
    border-color: var(--accent-green);
  }
  
  /* Prevent FAQ items from affecting each other's layout */
  .faq-item {
    align-self: flex-start;
    width: 100%;
  }
  
  /* Ensure FAQ container maintains stable height */
  .category-content > div {
    display: flex;
    flex-direction: column;
  }

  @media (max-width: 640px) {
    .category-tab {
      font-size: 0.875rem;
      padding: 0.625rem 1rem;
    }
  }
  
  /* FAQ search hidden state */
  .faq-item.hidden {
    display: none !important;
  }
  
  /* Search highlight */
  mark {
    background-color: rgba(var(--accent-green-rgb), 0.3);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
  }
</style>
