---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageContainer from '../components/layouts/PageContainer.astro';
import ContentWrapper from '../components/layouts/ContentWrapper.astro';
import { Icon } from 'astro-icon/components';
import { siteData } from '../data/config/site';
import { caseStudies, caseStudiesContent } from '../data/content/caseStudies';
import { createUrl } from '../utils/url';
---

<BaseLayout
  title="Case Studies - Success Stories | AUXO Data Labs"
  description="See the types of results our methodologies can deliver. Our team has extensive experience delivering similar outcomes for clients across the GCC, Europe, and international markets."
>
  <PageContainer maxWidth="7xl" paddingTop="pt-12 sm:pt-20 md:pt-24" paddingBottom="pb-16">
      <!-- Header -->
      <ContentWrapper maxWidth="3xl" class="text-center mb-10 sm:mb-16 px-4">
        <div class="inline-block px-4 sm:px-5 py-2 sm:py-2.5 bg-accent-green/10 border border-accent-green rounded-full backdrop-blur-sm mb-4 sm:mb-6">
          <span class="text-accent-green text-xs font-bold tracking-wider uppercase transition-colors" style="font-family: var(--font-body);">{caseStudiesContent.hero.badge}</span>
        </div>
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-extrabold mb-6 sm:mb-8 text-primary transition-colors leading-[1.3] tracking-tight px-2" style="font-family: var(--font-display);">
          {caseStudiesContent.hero.title} <span class="text-gradient-green block mt-2 pb-1">{caseStudiesContent.hero.titleHighlight}</span>
        </h1>
        <p class="text-sm sm:text-base md:text-lg lg:text-xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-normal px-2" style="font-family: var(--font-body);">
          {caseStudiesContent.hero.subtitle}
        </p>
      </ContentWrapper>

      <!-- Proven Methodology -->
      <ContentWrapper maxWidth="6xl" class="mb-10 sm:mb-16 md:mb-20">
        <div class="bg-accent-green/10 border border-accent-green/30 rounded-lg sm:rounded-xl p-4 sm:p-6 md:p-8">
          <div class="flex items-start gap-3 sm:gap-4">
            <div class="flex-shrink-0 w-8 h-8 sm:w-10 sm:h-10 bg-accent-green/20 rounded-lg flex items-center justify-center">
              <Icon name="mdi:certificate" class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green" />
            </div>
            <div>
              <h3 class="font-bold mb-1.5 sm:mb-2 text-sm sm:text-base md:text-lg text-primary transition-colors">
                {caseStudiesContent.hero.provenMethodology.title}
              </h3>
              <p class="text-xs sm:text-sm md:text-base text-secondary transition-colors leading-relaxed">
                {caseStudiesContent.hero.provenMethodology.description}
              </p>
            </div>
          </div>
        </div>
      </ContentWrapper>

      <!-- Stats Bar -->
      <ContentWrapper maxWidth="5xl" class="mb-12 sm:mb-16 md:mb-20">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-4 md:gap-6">
          <div class="bg-card border border-theme rounded-lg sm:rounded-xl p-4 sm:p-5 md:p-6 text-center hover:border-accent-green/50 hover:shadow-lg transition-all group cursor-help" data-stat="projects" data-tooltip="Combined projects delivered by founding team across previous organizations">
            <div class="text-xl sm:text-2xl md:text-3xl font-bold text-accent-green transition-colors mb-1 sm:mb-2 stat-value" data-target={siteData.stats.foundingClients.replace('+', '')}>{siteData.stats.foundingClients}</div>
            <p class="text-xs sm:text-sm text-secondary transition-colors">Projects Delivered</p>
          </div>
          <div class="bg-card border border-theme rounded-lg sm:rounded-xl p-4 sm:p-5 md:p-6 text-center hover:border-accent-green/50 hover:shadow-lg transition-all group cursor-help" data-stat="industries" data-tooltip="Industries where we've delivered successful analytics solutions">
            <div class="text-xl sm:text-2xl md:text-3xl font-bold text-accent-green transition-colors mb-1 sm:mb-2 stat-value" data-target={siteData.stats.industriesServed.replace('+', '')}>{siteData.stats.industriesServed}</div>
            <p class="text-xs sm:text-sm text-secondary transition-colors">Industries Served</p>
          </div>
          <div class="bg-card border border-theme rounded-lg sm:rounded-xl p-4 sm:p-5 md:p-6 text-center hover:border-accent-green/50 hover:shadow-lg transition-all group cursor-help" data-stat="experience" data-tooltip="Combined years of enterprise analytics experience">
            <div class="text-xl sm:text-2xl md:text-3xl font-bold text-accent-green transition-colors mb-1 sm:mb-2 stat-value" data-target={siteData.stats.yearsExperience.replace('+', '')}>{siteData.stats.yearsExperience}</div>
            <p class="text-xs sm:text-sm text-secondary transition-colors">Years Experience</p>
          </div>
          <div class="bg-card border border-theme rounded-lg sm:rounded-xl p-4 sm:p-5 md:p-6 text-center hover:border-accent-green/50 hover:shadow-lg transition-all group cursor-help" data-stat="technologies" data-tooltip="Technologies and platforms we've mastered and implemented">
            <div class="text-xl sm:text-2xl md:text-3xl font-bold text-accent-green transition-colors mb-1 sm:mb-2 stat-value" data-target={siteData.stats.technologiesMastered.replace('+', '')}>{siteData.stats.technologiesMastered}</div>
            <p class="text-xs sm:text-sm text-secondary transition-colors">Technologies Mastered</p>
          </div>
        </div>
      </ContentWrapper>

      <!-- Case Studies Grid -->
      <ContentWrapper maxWidth="6xl" class="space-y-8 sm:space-y-10 md:space-y-12 mb-12 sm:mb-16 md:mb-20">
        {caseStudies.map((study) => (
          <div class={`bg-card border-2 ${study.borderColor} rounded-xl sm:rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-normal`}>
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-0">
              <!-- Left: Icon & Basic Info -->
              <div class={`bg-gradient-to-br ${study.color} p-5 sm:p-6 md:p-8 flex flex-col justify-center items-center lg:items-start text-center lg:text-left font-sans`}>
                <div class="w-16 h-16 sm:w-20 sm:h-20 bg-primary/10 backdrop-blur-sm rounded-xl flex items-center justify-center mb-3 sm:mb-4">
                  <Icon name={study.icon} class="w-10 h-10 sm:w-12 sm:h-12 text-primary transition-colors" />
                </div>
                <h3 class="text-xl sm:text-2xl font-bold mb-2 text-primary transition-colors font-sans">{study.title}</h3>
                <p class="text-xs sm:text-sm text-primary transition-colors mb-3 sm:mb-4 font-sans">{study.client}</p>
                <div class="inline-block px-2.5 sm:px-3 py-1 bg-primary/20 backdrop-blur-sm rounded-full text-[10px] sm:text-xs text-primary transition-colors font-sans">
                  {study.industry}
                </div>
              </div>

              <!-- Right: Details -->
              <div class="lg:col-span-2 p-5 sm:p-6 md:p-8">
                <div class="space-y-6 font-sans">
                  {/* Key Achievement Badge */}
                  {study.keyAchievement && (
                    <div class="bg-accent-green/10 border border-accent-green/30 rounded-lg p-3 sm:p-4 mb-4">
                      <div class="flex items-start gap-2">
                        <Icon name="mdi:trophy" class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green flex-shrink-0 mt-0.5" />
                        <div>
                          <h4 class="text-[10px] sm:text-xs font-bold text-accent-green mb-1 uppercase tracking-wide font-sans">Key Achievement</h4>
                          <p class="text-xs sm:text-sm text-primary transition-colors font-sans leading-relaxed">{study.keyAchievement}</p>
                        </div>
                      </div>
                    </div>
                  )}

                  {/* Key Metrics */}
                  {study.keyMetrics && study.keyMetrics.length > 0 && (
                    <div class="bg-surface border border-theme rounded-lg p-3 sm:p-4">
                      <h4 class="text-[10px] sm:text-xs font-bold text-accent-green mb-2 sm:mb-3 uppercase tracking-wide flex items-center font-sans">
                        <Icon name="mdi:chart-bar" class="w-3.5 h-3.5 sm:w-4 sm:h-4 mr-2" />
                        Success Metrics
                      </h4>
                      <div class="grid grid-cols-2 gap-2 sm:gap-3">
                        {study.keyMetrics.map((metric) => (
                          <div class="text-center font-sans">
                            <div class="text-lg sm:text-xl md:text-2xl font-bold text-accent-green transition-colors font-sans">{metric.value}</div>
                            <div class="text-[10px] sm:text-xs text-secondary transition-colors mt-0.5 sm:mt-1 font-sans leading-tight">{metric.label}</div>
                            {metric.improvement && (
                              <div class="text-[10px] sm:text-xs text-accent-green/70 mt-0.5 font-sans">{metric.improvement}</div>
                            )}
                          </div>
                        ))}
                      </div>
                    </div>
                  )}

                  <!-- Challenge -->
                  <div>
                    <h4 class="text-xs sm:text-sm font-bold text-accent-green transition-colors mb-1.5 sm:mb-2 flex items-center uppercase tracking-wide font-sans">
                      <Icon name="mdi:alert-circle" class="w-3.5 h-3.5 sm:w-4 sm:h-4 mr-2" />
                      Challenge
                    </h4>
                    <p class="text-xs sm:text-sm text-primary transition-colors font-sans leading-relaxed">{study.challenge}</p>
                  </div>

                  <!-- Solution -->
                  <div>
                    <h4 class="text-xs sm:text-sm font-bold text-accent-green transition-colors mb-1.5 sm:mb-2 flex items-center uppercase tracking-wide font-sans">
                      <Icon name="mdi:lightbulb" class="w-3.5 h-3.5 sm:w-4 sm:h-4 mr-2" />
                      Solution
                    </h4>
                    <p class="text-xs sm:text-sm text-primary transition-colors font-sans leading-relaxed">{study.solution}</p>
                  </div>

                  <!-- Results -->
                  <div>
                    <h4 class="text-xs sm:text-sm font-bold text-accent-green transition-colors mb-2 sm:mb-3 flex items-center uppercase tracking-wide font-sans">
                      <Icon name="mdi:chart-line" class="w-3.5 h-3.5 sm:w-4 sm:h-4 mr-2" />
                      Results
                    </h4>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-3">
                      {study.results.map((result) => (
                        <div class="flex items-start font-sans">
                          <Icon name="mdi:check-circle" class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green transition-colors mr-2 flex-shrink-0 mt-0.5" />
                          <span class="text-xs sm:text-sm text-primary transition-colors font-normal font-sans leading-relaxed">{result}</span>
                        </div>
                      ))}
                    </div>
                  </div>

                  {/* Key Insights */}
                  {study.insights && study.insights.length > 0 && (
                    <div>
                      <h4 class="text-xs sm:text-sm font-bold text-accent-green transition-colors mb-2 flex items-center uppercase tracking-wide font-sans">
                        <Icon name="mdi:lightbulb" class="w-3.5 h-3.5 sm:w-4 sm:h-4 mr-2" />
                        Key Insights
                      </h4>
                      <ul class="space-y-1.5 sm:space-y-2">
                        {study.insights.map((insight) => (
                          <li class="flex items-start text-xs sm:text-sm text-secondary transition-colors font-sans">
                            <Icon name="mdi:chevron-right" class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-accent-green mr-2 flex-shrink-0 mt-0.5" />
                            <span class="font-normal font-sans leading-relaxed">{insight}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  {/* Challenges Overcome */}
                  {study.challengesOvercome && study.challengesOvercome.length > 0 && (
                    <div>
                      <h4 class="text-xs sm:text-sm font-bold text-accent-green transition-colors mb-2 flex items-center uppercase tracking-wide font-sans">
                        <Icon name="mdi:shield-check" class="w-3.5 h-3.5 sm:w-4 sm:h-4 mr-2" />
                        Challenges Overcome
                      </h4>
                      <ul class="space-y-1.5 sm:space-y-2">
                        {study.challengesOvercome.map((challenge) => (
                          <li class="flex items-start text-xs sm:text-sm text-secondary transition-colors font-sans">
                            <Icon name="mdi:check-circle" class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-accent-green mr-2 flex-shrink-0 mt-0.5" />
                            <span class="font-normal font-sans leading-relaxed">{challenge}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  <!-- Technologies -->
                  <div>
                    <h4 class="text-xs sm:text-sm font-bold text-accent-green transition-colors mb-2 uppercase tracking-wide font-sans">Technologies Used</h4>
                    <div class="flex flex-wrap gap-2">
                      {study.technologies.map((tech) => (
                        <span class="px-3 py-1 bg-surface border border-theme rounded text-xs text-secondary transition-colors font-sans">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </ContentWrapper>

      <!-- CTA Section -->
      <ContentWrapper maxWidth="4xl" class="mb-16 sm:mb-20">
        <div class="bg-gradient-to-r from-accent-green/10 to-accent-green/20 border-2 border-accent-green/20 rounded-2xl p-6 sm:p-8 md:p-12 text-center">
          <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4 sm:mb-6 text-primary transition-colors leading-[1.3] tracking-tight px-2" style="font-family: var(--font-display);">
            {caseStudiesContent.finalCta.title}
          </h2>
          <p class="text-sm sm:text-base md:text-lg text-secondary transition-colors mb-6 sm:mb-8 max-w-2xl mx-auto leading-relaxed font-normal px-4" style="font-family: var(--font-body);">
            {caseStudiesContent.finalCta.subtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={createUrl(caseStudiesContent.finalCta.primaryCta.href)}
              class="px-8 py-4 bg-accent-green text-on-accent font-bold rounded-lg hover:bg-accent-green/90 transition-colors inline-flex items-center justify-center min-h-[44px] touch-manipulation active:scale-95"
            >
              {caseStudiesContent.finalCta.primaryCta.text}
              <Icon name="mdi:arrow-right" class="w-5 h-5 ml-2" />
            </a>
            <a
              href={createUrl(caseStudiesContent.finalCta.secondaryCta.href)}
              class="px-8 py-4 bg-surface text-primary font-bold rounded-lg hover:bg-surface/80 transition-colors inline-flex items-center justify-center min-h-[44px] touch-manipulation border border-theme"
            >
              {caseStudiesContent.finalCta.secondaryCta.text}
            </a>
          </div>
        </div>
      </ContentWrapper>
  </PageContainer>
</BaseLayout>

<script>
  // Animated counters for stats
  function animateCounter(element: HTMLElement, target: number, duration = 2000) {
    const start = 0;
    const increment = target / (duration / 16);
    let current = start;
    
    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        element.textContent = target + '+';
        clearInterval(timer);
      } else {
        element.textContent = Math.floor(current) + '+';
      }
    }, 16);
  }

  // Tooltip functionality
  function setupTooltips() {
    const statCards = document.querySelectorAll('[data-tooltip]');
    statCards.forEach((card) => {
      const tooltip = card.getAttribute('data-tooltip');
      if (!tooltip) return;
      
      card.addEventListener('mouseenter', () => {
        const tooltipEl = document.createElement('div');
        tooltipEl.className = 'absolute z-tooltip bg-primary text-on-accent px-3 py-2 rounded-lg text-xs shadow-lg max-w-xs pointer-events-none';
        tooltipEl.textContent = tooltip;
        tooltipEl.style.bottom = '100%';
        tooltipEl.style.marginBottom = '8px';
        tooltipEl.style.left = '50%';
        tooltipEl.style.transform = 'translateX(-50%)';
        if (card instanceof HTMLElement) {
          card.style.position = 'relative';
        }
        card.appendChild(tooltipEl);
      });
      
      card.addEventListener('mouseleave', () => {
        const tooltipEl = card.querySelector('.absolute.z-tooltip');
        if (tooltipEl) tooltipEl.remove();
      });
    });
  }

  // Intersection Observer for animated counters
  const observerOptions = {
    threshold: 0.5,
    rootMargin: '0px',
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const statElement = entry.target.querySelector('.stat-value') as HTMLElement;
        if (statElement) {
          const target = parseInt(statElement.getAttribute('data-target') || '0');
          if (target > 0 && !statElement.dataset.animated) {
            statElement.dataset.animated = 'true';
            animateCounter(statElement, target);
          }
        }
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observe all stat cards
  document.addEventListener('DOMContentLoaded', () => {
    const statCards = document.querySelectorAll('[data-stat]');
    statCards.forEach((card) => observer.observe(card));
    setupTooltips();
  });
</script>
