---
import { servicesPageContent } from "../../data/content/services";

interface Props {
  content: typeof servicesPageContent.hero;
}

const { content } = Astro.props;
---

<div class="max-w-3xl mx-auto text-center mb-8 sm:mb-10 md:mb-16">
  <div
    class="inline-block px-3 py-1.5 md:px-4 md:py-2 bg-accent-green/10 border border-accent-green/20 rounded-full mb-3 md:mb-4"
  >
    <span
      class="text-accent-green text-xs md:text-sm font-semibold tracking-wide transition-colors"
      >{content.badge}</span
    >
  </div>
  <h1
    class="text-2xl sm:text-3xl md:text-5xl font-bold mb-3 md:mb-4 leading-tight text-primary transition-colors"
  >
    {content.title}
    <span class="text-accent-green transition-colors">
      {content.titleHighlight}</span
    >
  </h1>
  <p
    class="text-xs sm:text-sm md:text-xl text-secondary leading-relaxed hidden md:block transition-colors"
  >
    {content.subtitle}
  </p>
</div>

