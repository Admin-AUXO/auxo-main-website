---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import { Icon } from 'astro-icon/components';
import { services } from '../data/services';
import { siteData } from '../data/site';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

// Get latest blog posts
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);
---

<BaseLayout
  title="Data Analytics Consultancy Dubai, UAE | AUXO Data Labs"
  description={siteData.description}
  showNav={false}
>
  <Navigation />

  <!-- Hero Section with Animated Logo -->
  <section id="hero" class="relative min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-black via-zinc-950 to-black overflow-hidden pt-20 pb-20">
    <!-- Background Effects -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-lime-400/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-green-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    </div>

    <!-- Hero Content Container -->
    <div class="container mx-auto px-4 relative z-10 flex-1 flex flex-col items-center justify-center">
      <div class="w-full max-w-4xl mx-auto text-center">
        <!-- Logo Animation Container -->
        <div class="logo-reveal-container mb-6">
          <div class="logo-grid grid grid-cols-2 gap-2 w-32 md:w-40 mx-auto">
            <div class="logo-tile aspect-square" data-char="A"><span class="logo-char">A</span></div>
            <div class="logo-tile aspect-square" data-char="U"><span class="logo-char">U</span></div>
            <div class="logo-tile aspect-square" data-char="X"><span class="logo-char">X</span></div>
            <div class="logo-tile aspect-square" data-char="O"><span class="logo-char">O</span></div>
          </div>
        </div>

        <!-- Brand Text -->
        <div class="logo-caption mb-6">
          <h1 class="text-xl md:text-2xl font-semibold mb-1 text-white tracking-tight">
            Data Labs
          </h1>
          <p class="tagline text-sm md:text-base text-gray-400 font-light italic">Look Beyond Data</p>
        </div>

        <!-- Hero Content -->
        <div class="hero-content">
          <div class="inline-block mb-4 px-4 py-1.5 bg-lime-400/10 border border-lime-400/30 rounded-full">
            <span class="text-lime-400 text-xs md:text-sm font-semibold tracking-wide">Unlock Insights. Drive Decisions.</span>
          </div>

          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 leading-tight">
            Turn Information Into<br/>
            <span class="text-gradient-green">Actionable Intelligence</span>
          </h2>

          <p class="text-sm md:text-base text-gray-400 mb-6 max-w-2xl mx-auto leading-relaxed">
            Empowering UAE businesses with advanced analytics and AI solutions
          </p>

          <div class="flex flex-col sm:flex-row gap-3 justify-center mb-6">
            <a href={`${base}contact`} class="group bg-lime-400 text-black px-6 py-2.5 rounded-lg font-semibold hover:bg-lime-500 transition-all shadow-lg shadow-lime-400/20 hover:shadow-lime-400/40 hover:scale-105 text-sm">
              Schedule Free Consultation
              <Icon name="mdi:arrow-right" class="inline w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
            </a>
            <a href="#services" class="border-2 border-lime-400 text-lime-400 px-6 py-2.5 rounded-lg font-semibold hover:bg-lime-400 hover:text-black transition-all hover:scale-105 text-sm">
              Explore Services
            </a>
          </div>

          <div class="flex flex-wrap justify-center gap-4 md:gap-6 text-xs md:text-sm text-gray-500">
            <div class="flex items-center gap-1.5">
              <Icon name="mdi:check-circle" class="w-4 h-4 text-lime-400" />
              <span class="font-medium">Precision Analytics</span>
            </div>
            <div class="flex items-center gap-1.5">
              <Icon name="mdi:check-circle" class="w-4 h-4 text-lime-400" />
              <span class="font-medium">Globally Compliant</span>
            </div>
            <div class="flex items-center gap-1.5">
              <Icon name="mdi:check-circle" class="w-4 h-4 text-lime-400" />
              <span class="font-medium">Measurable Impact</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="relative z-10 pb-6 mt-8 animate-bounce">
      <a href="#services" class="flex flex-col items-center text-gray-500 hover:text-lime-400 transition-colors">
        <span class="text-xs mb-1">Scroll to explore</span>
        <Icon name="mdi:chevron-down" class="w-5 h-5" />
      </a>
    </div>
  </section>

  <div class="relative z-10 bg-black">

      <!-- Problem Statement Section -->
      <section class="py-20 bg-black border-t border-gray-800">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              Are You Struggling with <span class="text-lime-400">Analytics Challenges?</span>
            </h2>
            <p class="text-lg text-gray-400 leading-relaxed">
              Many UAE businesses face similar obstacles when trying to leverage their data effectively
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
            <div class="bg-zinc-900 border border-red-500/20 rounded-xl p-6 hover:border-red-500/40 transition-all">
              <div class="w-12 h-12 bg-red-500/10 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:alert-circle" class="w-6 h-6 text-red-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Siloed Data</h3>
              <p class="text-gray-400 leading-relaxed">
                Information scattered across spreadsheets, databases, and systems with no unified view
              </p>
            </div>

            <div class="bg-zinc-900 border border-red-500/20 rounded-xl p-6 hover:border-red-500/40 transition-all">
              <div class="w-12 h-12 bg-red-500/10 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:chart-line" class="w-6 h-6 text-red-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Slow Insights</h3>
              <p class="text-gray-400 leading-relaxed">
                Weeks or months to get answers to critical business questions when you need them now
              </p>
            </div>

            <div class="bg-zinc-900 border border-red-500/20 rounded-xl p-6 hover:border-red-500/40 transition-all">
              <div class="w-12 h-12 bg-red-500/10 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:account-group" class="w-6 h-6 text-red-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Skills Gap</h3>
              <p class="text-gray-400 leading-relaxed">
                Lack of in-house analytics expertise to turn raw information into strategic decisions
              </p>
            </div>

            <div class="bg-zinc-900 border border-red-500/20 rounded-xl p-6 hover:border-red-500/40 transition-all">
              <div class="w-12 h-12 bg-red-500/10 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:chart-bar" class="w-6 h-6 text-red-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Unclear ROI</h3>
              <p class="text-gray-400 leading-relaxed">
                Investing in tools and platforms without seeing measurable business impact or value
              </p>
            </div>

            <div class="bg-zinc-900 border border-red-500/20 rounded-xl p-6 hover:border-red-500/40 transition-all">
              <div class="w-12 h-12 bg-red-500/10 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:shield-check" class="w-6 h-6 text-red-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Compliance Concerns</h3>
              <p class="text-gray-400 leading-relaxed">
                Uncertainty about UAE PDPL, GDPR compliance and data governance requirements
              </p>
            </div>

            <div class="bg-zinc-900 border border-red-500/20 rounded-xl p-6 hover:border-red-500/40 transition-all">
              <div class="w-12 h-12 bg-red-500/10 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:chart-line" class="w-6 h-6 text-red-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Limited Scalability</h3>
              <p class="text-gray-400 leading-relaxed">
                Current analytics setup can't keep pace with your business growth and evolving needs
              </p>
            </div>
          </div>

          <div class="text-center mt-12">
            <p class="text-lg text-lime-400 font-semibold">
              We help you overcome these challenges with proven methodologies and cutting-edge solutions
            </p>
          </div>
        </div>
      </section>

      <section id="services" class="py-28 bg-zinc-950">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">Our <span class="text-lime-400">Services</span></h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.slice(0, 6).map(service => (
              <div class="bg-zinc-900 border border-gray-800 rounded-lg p-6 hover:border-lime-400/50 transition">
                <Icon name={service.icon} class="w-12 h-12 text-lime-400 mb-4" />
                <h3 class="text-xl font-bold mb-3">{service.title}</h3>
                <p class="text-gray-400 mb-4 leading-relaxed">{service.description}</p>
                <a href={`${base}services/${service.id}`} class="text-lime-400 hover:text-lime-500 text-sm font-semibold inline-flex items-center gap-1">
                  Learn more <span class="transition-transform group-hover:translate-x-1">→</span>
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- How We Work Section -->
      <section class="py-28 bg-black border-t border-gray-800">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              Our <span class="text-lime-400">Proven Methodology</span>
            </h2>
            <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed">
              A structured approach to turn your analytics vision into reality
            </p>
          </div>

          <div class="max-w-5xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
              <!-- Step 1 -->
              <div class="relative">
                <div class="bg-gradient-to-br from-zinc-900 to-zinc-950 border border-lime-400/30 rounded-xl p-6 hover:border-lime-400/50 transition-all">
                  <div class="absolute -top-4 -left-4 w-12 h-12 bg-lime-400 rounded-full flex items-center justify-center font-bold text-black text-xl shadow-lg shadow-lime-400/50">
                    1
                  </div>
                  <div class="w-14 h-14 bg-lime-400/10 rounded-lg flex items-center justify-center mb-4 mt-2">
                    <Icon name="mdi:eye" class="w-7 h-7 text-lime-400" />
                  </div>
                  <h3 class="text-xl font-bold mb-3">Discover</h3>
                  <p class="text-gray-400 leading-relaxed text-sm">
                    We assess your current state, understand your business goals, and identify key opportunities for impact
                  </p>
                </div>
                <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-gradient-to-r from-lime-400 to-transparent"></div>
              </div>

              <!-- Step 2 -->
              <div class="relative">
                <div class="bg-gradient-to-br from-zinc-900 to-zinc-950 border border-lime-400/30 rounded-xl p-6 hover:border-lime-400/50 transition-all">
                  <div class="absolute -top-4 -left-4 w-12 h-12 bg-lime-400 rounded-full flex items-center justify-center font-bold text-black text-xl shadow-lg shadow-lime-400/50">
                    2
                  </div>
                  <div class="w-14 h-14 bg-lime-400/10 rounded-lg flex items-center justify-center mb-4 mt-2">
                    <Icon name="mdi:lightbulb" class="w-7 h-7 text-lime-400" />
                  </div>
                  <h3 class="text-xl font-bold mb-3">Design</h3>
                  <p class="text-gray-400 leading-relaxed text-sm">
                    We create a tailored analytics roadmap with clear milestones, technology choices, and success metrics
                  </p>
                </div>
                <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-gradient-to-r from-lime-400 to-transparent"></div>
              </div>

              <!-- Step 3 -->
              <div class="relative">
                <div class="bg-gradient-to-br from-zinc-900 to-zinc-950 border border-lime-400/30 rounded-xl p-6 hover:border-lime-400/50 transition-all">
                  <div class="absolute -top-4 -left-4 w-12 h-12 bg-lime-400 rounded-full flex items-center justify-center font-bold text-black text-xl shadow-lg shadow-lime-400/50">
                    3
                  </div>
                  <div class="w-14 h-14 bg-lime-400/10 rounded-lg flex items-center justify-center mb-4 mt-2">
                    <Icon name="mdi:check-circle" class="w-7 h-7 text-lime-400" />
                  </div>
                  <h3 class="text-xl font-bold mb-3">Deploy</h3>
                  <p class="text-gray-400 leading-relaxed text-sm">
                    We implement solutions using agile sprints, ensuring rapid delivery and continuous feedback loops
                  </p>
                </div>
                <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-gradient-to-r from-lime-400 to-transparent"></div>
              </div>

              <!-- Step 4 -->
              <div class="relative">
                <div class="bg-gradient-to-br from-zinc-900 to-zinc-950 border border-lime-400/30 rounded-xl p-6 hover:border-lime-400/50 transition-all">
                  <div class="absolute -top-4 -left-4 w-12 h-12 bg-lime-400 rounded-full flex items-center justify-center font-bold text-black text-xl shadow-lg shadow-lime-400/50">
                    4
                  </div>
                  <div class="w-14 h-14 bg-lime-400/10 rounded-lg flex items-center justify-center mb-4 mt-2">
                    <Icon name="mdi:chart-box" class="w-7 h-7 text-lime-400" />
                  </div>
                  <h3 class="text-xl font-bold mb-3">Optimize</h3>
                  <p class="text-gray-400 leading-relaxed text-sm">
                    We monitor performance, refine models, and continuously improve to maximize your ROI and business value
                  </p>
                </div>
              </div>
            </div>

            <!-- Additional Value Props -->
            <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="text-center p-6 bg-zinc-900/50 rounded-xl border border-zinc-800">
                <div class="text-3xl font-bold text-lime-400 mb-2">2-4 Weeks</div>
                <p class="text-gray-400 text-sm">Time to First Insights</p>
              </div>
              <div class="text-center p-6 bg-zinc-900/50 rounded-xl border border-zinc-800">
                <div class="text-3xl font-bold text-lime-400 mb-2">Agile</div>
                <p class="text-gray-400 text-sm">Iterative Approach</p>
              </div>
              <div class="text-center p-6 bg-zinc-900/50 rounded-xl border border-zinc-800">
                <div class="text-3xl font-bold text-lime-400 mb-2">100%</div>
                <p class="text-gray-400 text-sm">Transparent Process</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="py-28 bg-zinc-950 border-t border-gray-800">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Why Choose <span class="text-lime-400">AUXO?</span></h2>
            <p class="text-gray-400 max-w-2xl mx-auto leading-relaxed"><em>Your trusted analytics partner</em> in the UAE</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-lime-400/10 rounded-full mb-4">
                <Icon name="mdi:map-marker" class="w-8 h-8 text-lime-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Dubai-Based Expertise</h3>
              <p class="text-gray-400 leading-relaxed">Local team with deep understanding of UAE market dynamics and regulatory requirements</p>
            </div>
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-lime-400/10 rounded-full mb-4">
                <Icon name="mdi:certificate" class="w-8 h-8 text-lime-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Proven Track Record</h3>
              <p class="text-gray-400 leading-relaxed">Delivering <span class="font-semibold text-gray-300">measurable results</span> through strategic insights and cutting-edge analytics</p>
            </div>
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-lime-400/10 rounded-full mb-4">
                <Icon name="mdi:security" class="w-8 h-8 text-lime-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Security & Compliance</h3>
              <p class="text-gray-400 leading-relaxed">Full compliance with UAE PDPL, GDPR, and enterprise-grade security standards</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Technology Stack Section -->
      <section class="py-28 bg-black border-t border-gray-800">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              Powered by <span class="text-lime-400">Leading Technologies</span>
            </h2>
            <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed">
              We leverage cutting-edge tools and platforms to deliver enterprise-grade analytics solutions
            </p>
          </div>

          <div class="max-w-6xl mx-auto">
            <!-- Cloud & Infrastructure -->
            <div class="mb-12">
              <h3 class="text-xl font-bold mb-6 text-center text-gray-300">Cloud & Infrastructure</h3>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <svg class="w-full h-full" viewBox="0 0 24 24" fill="currentColor">
                      <path class="text-orange-500" d="M13.5 2c-2.28 0-4.37.82-6 2.18C5.87 2.82 3.78 2 1.5 2v9c0 4.97 3.43 9 8.5 9s8.5-4.03 8.5-9V2c-2.28 0-4.37.82-6 2.18V2h1.5z"/>
                    </svg>
                  </div>
                  <span class="font-semibold text-sm text-center">AWS</span>
                </div>

                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <svg class="w-full h-full" viewBox="0 0 24 24" fill="currentColor">
                      <path class="text-blue-500" d="M11.5 2L2 7l9.5 5L21 7l-9.5-5zM2 17l9.5 5 9.5-5M2 12l9.5 5 9.5-5"/>
                    </svg>
                  </div>
                  <span class="font-semibold text-sm text-center">Azure</span>
                </div>

                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <svg class="w-full h-full" viewBox="0 0 24 24" fill="currentColor">
                      <path class="text-red-500" d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                    </svg>
                  </div>
                  <span class="font-semibold text-sm text-center">GCP</span>
                </div>

                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <Icon name="mdi:docker" class="w-full h-full text-blue-400" />
                  </div>
                  <span class="font-semibold text-sm text-center">Docker</span>
                </div>
              </div>
            </div>

            <!-- Analytics & BI -->
            <div class="mb-12">
              <h3 class="text-xl font-bold mb-6 text-center text-gray-300">Analytics & Business Intelligence</h3>
              <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <Icon name="mdi:chart-box" class="w-full h-full text-orange-400" />
                  </div>
                  <span class="font-semibold text-sm text-center">Tableau</span>
                </div>

                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <Icon name="mdi:microsoft" class="w-full h-full text-yellow-400" />
                  </div>
                  <span class="font-semibold text-sm text-center">Power BI</span>
                </div>

                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <Icon name="mdi:google-analytics" class="w-full h-full text-orange-500" />
                  </div>
                  <span class="font-semibold text-sm text-center">Looker</span>
                </div>

                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <Icon name="mdi:chart-scatter-plot" class="w-full h-full text-purple-400" />
                  </div>
                  <span class="font-semibold text-sm text-center">Metabase</span>
                </div>

                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <Icon name="mdi:chart-line" class="w-full h-full text-pink-400" />
                  </div>
                  <span class="font-semibold text-sm text-center">Superset</span>
                </div>
              </div>
            </div>

            <!-- Data Engineering & ML -->
            <div>
              <h3 class="text-xl font-bold mb-6 text-center text-gray-300">Data Engineering & Machine Learning</h3>
              <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
                  <div class="w-16 h-16 mb-3 flex items-center justify-center">
                    <Icon name="mdi:language-python" class="w-full h-full text-blue-400" />
                  </div>
                  <span class="font-semibold text-sm text-center">Python</span>
                </div>

                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex flex-col items-center justify-center hover:border-lime-400/30 transition-all group">
