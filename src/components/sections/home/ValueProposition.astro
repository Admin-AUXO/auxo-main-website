---
import { Icon } from "astro-icon/components";
import {
  homepageContent,
  type HomepageContent,
} from "../../../data/content/homepage";
import Card from "../../ui/Card.astro";
import SectionContainer from "../../layouts/SectionContainer.astro";

const content: HomepageContent["problems"] = homepageContent.problems;
---

<SectionContainer id="value-proposition" padding="lg">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16 sm:mb-20 animate-fade-in">
        <div
          class="inline-block mb-6 px-5 py-2.5 bg-accent-green/10 border border-accent-green rounded-full backdrop-blur-sm"
        >
          <span
            class="text-accent-green text-xs font-bold tracking-wider uppercase"
            style="font-family: var(--font-body);"
            >{content.badge}</span
          >
        </div>
        <h2
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold mb-8 text-primary transition-colors leading-[1.1] tracking-tight"
          style="font-family: var(--font-display);"
        >
          {content.title} <span class="text-gradient-green block mt-2"
            >{content.titleHighlight}</span
          >
        </h2>
        <p
          class="text-lg sm:text-xl md:text-2xl text-secondary max-w-4xl mx-auto leading-relaxed transition-colors font-normal"
          style="font-family: var(--font-body);"
        >
          {content.subtitle}
        </p>
      </div>

      <!-- Value Props Grid -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8"
      >
        {
          content.challenges.map((value, index) => (
            <div
              class="animate-fade-in group"
              style={`animation-delay: ${index * 100}ms`}
            >
              <Card
                hoverEffect
                class="h-full border-2 hover:border-accent-green/50 transition-all duration-normal"
              >
                <div class="flex items-start gap-5">
                  <div class="w-14 h-14 bg-gradient-to-br from-accent-green/20 to-accent-green/10 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:from-accent-green/30 group-hover:to-accent-green/20 transition-all duration-normal shadow-lg shadow-accent-green/10">
                    <Icon
                      name={value.icon}
                      class="w-7 h-7 text-accent-green group-hover:scale-110 transition-transform"
                    />
                  </div>
                  <div class="flex-1 pt-1">
                    <h3
                      class="font-bold text-xl mb-3 text-primary transition-colors leading-tight"
                      style="font-family: var(--font-display);"
                    >
                      {value.title}
                    </h3>
                    <p class="text-sm text-secondary leading-relaxed transition-colors font-normal" style="font-family: var(--font-body);">
                      {value.description}
                    </p>
                  </div>
                </div>
              </Card>
            </div>
          ))
        }
      </div>

      <!-- Closing Statement -->
      {content.closing && (
        <div class="text-center mt-16 animate-fade-in">
          <p class="text-lg sm:text-xl text-secondary max-w-3xl mx-auto leading-relaxed transition-colors font-normal" style="font-family: var(--font-body);">
            {content.closing}
          </p>
        </div>
      )}
    </div>
  </div>
</SectionContainer>

