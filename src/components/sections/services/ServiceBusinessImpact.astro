---
import { Icon } from "astro-icon/components";

const { service } = Astro.props;

// Helper function to get appropriate icon for impact
const getImpactIcon = (impact: string): string => {
  const lowerImpact = impact.toLowerCase();
  if (lowerImpact.includes("decision") || lowerImpact.includes("insight"))
    return "mdi:target";
  if (
    lowerImpact.includes("time") ||
    lowerImpact.includes("reduce") ||
    lowerImpact.includes("efficiency")
  )
    return "mdi:clock";
  if (
    lowerImpact.includes("roi") ||
    lowerImpact.includes("cost") ||
    lowerImpact.includes("margin")
  )
    return "mdi:trending-up";
  if (
    lowerImpact.includes("compliance") ||
    lowerImpact.includes("risk") ||
    lowerImpact.includes("security")
  )
    return "mdi:shield-check";
  if (
    lowerImpact.includes("predict") ||
    lowerImpact.includes("forecast") ||
    lowerImpact.includes("trend")
  )
    return "mdi:chart-line";
  if (lowerImpact.includes("automate") || lowerImpact.includes("optimize"))
    return "mdi:lightning-bolt";
  if (lowerImpact.includes("growth") || lowerImpact.includes("opportunity"))
    return "mdi:rocket";
  if (
    lowerImpact.includes("quality") ||
    lowerImpact.includes("trust") ||
    lowerImpact.includes("confidence")
  )
    return "mdi:trophy";
  return "mdi:star";
};
---

<div class="bg-gradient-to-br from-accent-green/10 to-accent-green/20 border border-accent-green/30 rounded-2xl p-6 sm:p-8 mb-8 sm:mb-12">
  <h2 class="text-xl sm:text-2xl font-bold mb-5 sm:mb-6 flex items-center text-primary transition-colors">
    <Icon name="mdi:chart-line" class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green transition-colors mr-2 sm:mr-3 flex-shrink-0" />
    Business Outcomes You Can Expect
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
    {service.businessImpact.map((impact: string, index: number) => {
      // Check if impact contains percentage or improvement indicators
      const hasPercentage = /\d+%/.test(impact) || /\d+x/.test(impact) || /\d+\s*(times|fold)/i.test(impact);
      const isHighImpact = hasPercentage || index < 2; // First 2 impacts are typically high priority
      
      return (
        <div class={`flex items-start gap-3 p-3 sm:p-4 rounded-lg border transition-all duration-normal hover:scale-[1.02] ${
          isHighImpact 
            ? 'bg-card/70 border-accent-green/50 shadow-md' 
            : 'bg-card/50 border-theme/50 hover:border-accent-green/50'
        }`}>
          <div class={`w-10 h-10 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5 transition-colors ${
            isHighImpact ? 'bg-accent-green/30' : ''
          }`}>
            <Icon
              name={getImpactIcon(impact)}
              class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green transition-colors"
            />
          </div>
          <div class="flex-1">
            <div class="flex items-start gap-2 mb-1">
              <span class="text-sm sm:text-base text-primary transition-colors leading-relaxed flex-1">{impact}</span>
              {isHighImpact && (
                <span class="bg-accent-green/20 text-accent-green text-xs font-semibold px-2 py-0.5 rounded-full border border-accent-green/30 flex-shrink-0">
                  High Impact
                </span>
              )}
            </div>
            {hasPercentage && (
              <div class="mt-2 h-1.5 bg-surface rounded-full overflow-hidden">
                <div class="h-full bg-gradient-to-r from-accent-green to-accent-green/70 rounded-full" style="width: 75%"></div>
              </div>
            )}
          </div>
        </div>
      );
    })}
  </div>
</div>

