---
// Reusable page container with consistent spacing and max-width
export interface Props {
  class?: string;
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '4xl' | '5xl' | '6xl' | '7xl';
  paddingTop?: string;
  paddingBottom?: string;
}

const {
  class: className = '',
  maxWidth = '7xl',
  paddingTop = 'pt-24',
  paddingBottom = 'pb-16',
} = Astro.props;

const maxWidthClasses = {
  sm: 'max-w-sm',
  md: 'max-w-md',
  lg: 'max-w-lg',
  xl: 'max-w-xl',
  '2xl': 'max-w-2xl',
  '4xl': 'max-w-4xl',
  '5xl': 'max-w-5xl',
  '6xl': 'max-w-6xl',
  '7xl': 'max-w-7xl',
};
---

<div class={`${paddingTop} ${paddingBottom} ${className}`}>
  <div class={`container mx-auto px-4 sm:px-6 lg:px-8`}>
    <div class={`${maxWidthClasses[maxWidth]} mx-auto`}>
      <slot />
    </div>
  </div>
</div>

