---
import { aboutContent } from "../../../data/content/about";

interface Props {
  content: typeof aboutContent.hero;
}

const { content } = Astro.props;
---

<div class="max-w-4xl mx-auto mb-6 sm:mb-8 md:mb-12 lg:mb-20">
  <div class="text-center">
    <div
      class="inline-block px-3 py-1.5 sm:px-4 sm:py-2 bg-accent-green/10 border border-accent-green rounded-full mb-2 sm:mb-3 md:mb-4"
    >
      <span
        class="text-accent-green text-xs sm:text-sm font-semibold tracking-wide transition-colors"
        >{content.badge}</span
      >
    </div>
    <h1
      class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-2 sm:mb-3 md:mb-4 lg:mb-6 leading-tight text-primary transition-colors"
    >
      {content.title}
      <span class="text-accent-green transition-colors">
        {content.titleHighlight}</span
      >
    </h1>
    <p
      class="text-sm sm:text-base md:text-lg lg:text-xl text-secondary leading-relaxed transition-colors max-w-3xl mx-auto px-4 sm:px-0"
    >
      {content.subtitle}
    </p>
  </div>
</div>
