---
import { Icon } from "astro-icon/components";

interface ServiceTimelineProps {
  timeline: string; // e.g., "4-8 weeks"
}

const { timeline } = Astro.props;

// Parse timeline to determine phases and durations
function parseTimeline(timelineStr: string): { minWeeks: number; maxWeeks: number } {
  const match = timelineStr.match(/(\d+)-(\d+)\s*weeks?/i);
  if (match) {
    return { minWeeks: parseInt(match[1]), maxWeeks: parseInt(match[2]) };
  }
  // Fallback for single number or other formats
  const singleMatch = timelineStr.match(/(\d+)\s*weeks?/i);
  if (singleMatch) {
    const weeks = parseInt(singleMatch[1]);
    return { minWeeks: weeks, maxWeeks: weeks };
  }
  // Default fallback
  return { minWeeks: 8, maxWeeks: 12 };
}

const { minWeeks, maxWeeks } = parseTimeline(timeline);
const avgWeeks = Math.round((minWeeks + maxWeeks) / 2);

// Calculate phase durations based on timeline
// Phase 1: Discovery (20% of timeline)
// Phase 2: Design & Build (50% of timeline)
// Phase 3: Deploy (20% of timeline)
// Phase 4: Optimize (10% of timeline, optional)
const phase1Weeks = Math.max(1, Math.round(avgWeeks * 0.2));
const phase2Weeks = Math.max(2, Math.round(avgWeeks * 0.5));
const phase3Weeks = Math.max(1, Math.round(avgWeeks * 0.2));
const phase4Weeks = Math.max(1, Math.round(avgWeeks * 0.1));

const phase1End = phase1Weeks;
const phase2Start = phase1End + 1;
const phase2End = phase2Start + phase2Weeks - 1;
const phase3Start = phase2End + 1;
const phase3End = phase3Start + phase3Weeks - 1;
const phase4Start = phase3End + 1;

function formatPhaseRange(start: number, end: number): string {
  if (start === end) {
    return `Week ${start}`;
  }
  return `Week ${start}-${end}`;
}
