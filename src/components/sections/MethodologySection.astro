---
import { homepageContent, type HomepageContent } from "../../data/content/homepage";
import SectionContainer from "../layouts/SectionContainer.astro";
import { Icon } from "astro-icon/components";
import type { ProcessStep } from "../../data/content/homepage";

const content: HomepageContent["methodology"] = homepageContent.methodology;
---

<SectionContainer padding="md" background="default">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="text-center mb-12 sm:mb-16">
      <div
        class="inline-block mb-4 px-4 py-2 bg-accent-green/10 border border-accent-green/20 rounded-full"
      >
        <span class="text-accent-green text-sm font-semibold"
          >How We Work</span
        >
      </div>
      <h2
        class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 text-primary transition-colors"
      >
        {content.title}
        <span class="text-gradient-green"
          >{content.titleHighlight}</span
        >
      </h2>
      <p
        class="text-base sm:text-lg text-secondary max-w-2xl mx-auto transition-colors"
      >
        {content.subtitle}
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 mb-12 sm:mb-16"
      >
        {
          content.steps.map((step: ProcessStep, index: number) => (
            <div
              class="relative group animate-fade-in"
              data-animation-delay={index * 150}
            >
              <div class="bg-card border-2 border-accent-green/30 rounded-xl p-6 sm:p-8 hover:border-accent-green pulse-box transition-all duration-300 hover:shadow-xl hover:-translate-y-2 h-full relative overflow-hidden">
                <!-- Step Number Badge - More Prominent -->
                <div class="absolute top-4 left-4 w-12 h-12 sm:w-14 sm:h-14 bg-accent-green/20 border-2 border-accent-green rounded-full flex items-center justify-center z-10">
                  <span class="text-xl sm:text-2xl font-black text-accent-green leading-none">
                    {step.number}
                  </span>
                </div>
                <!-- Step X of 4 Indicator -->
                <div class="absolute top-4 right-4 text-xs sm:text-sm font-semibold text-secondary opacity-70">
                  Step {step.number} of {content.steps.length}
                </div>
                <!-- Large Number Background -->
                <div class="absolute top-0 right-0 w-24 h-24 sm:w-28 sm:h-28 flex items-center justify-end pr-4 sm:pr-6 opacity-10 group-hover:opacity-20 transition-opacity">
                  <span class="text-7xl sm:text-8xl font-black text-accent-green leading-none">
                    {step.number}
                  </span>
                </div>
                
                <!-- Title -->
                <div class="mb-4 text-right">
                  <h3 class="text-xl sm:text-2xl font-bold mb-2 text-primary transition-colors">
                    {step.title}
                  </h3>
                  <div class="w-12 h-1 bg-accent-green rounded-full ml-auto"></div>
                </div>
                
                <!-- Description -->
                <p class="text-secondary leading-relaxed text-sm sm:text-base transition-colors mb-4">
                  {step.description}
                </p>
                
                <!-- Progressive Disclosure: Detailed Methodology -->
                {step.details && step.details.length > 0 && (
                  <details class="progressive-disclosure">
                    <summary class="cursor-pointer flex items-center justify-between text-accent-green hover:text-accent-green/80 active:text-accent-green/70 transition-colors text-sm font-semibold min-h-[44px] py-2 px-1 rounded-md hover:bg-accent-green/5">
                      <span class="flex items-center gap-2">
                        <Icon name="mdi:information" class="w-4 h-4 flex-shrink-0" />
                        <span>How we do this</span>
                      </span>
                      <Icon name="mdi:chevron-down" class="w-5 h-5 flex-shrink-0 transition-transform duration-300 details-chevron" />
                    </summary>
                    <div class="mt-4 pt-4 border-t border-accent-green/20 transition-all duration-300">
                      <ul class="space-y-2.5">
                        {step.details.map((detail: string) => (
                          <li class="flex items-start gap-3 text-secondary text-sm transition-colors">
                            <Icon name="mdi:check-circle" class="w-4 h-4 text-accent-green flex-shrink-0 mt-0.5" />
                            <span class="leading-relaxed">{detail}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </details>
                )}
              </div>
              {index < content.steps.length - 1 && (
                <div class="hidden lg:flex absolute top-1/2 -right-4 items-center z-10">
                  <!-- Connector Line -->
                  <div class="w-8 h-0.5 bg-gradient-to-r from-accent-green via-accent-green/60 to-transparent"></div>
                  <!-- Connector Arrow -->
                  <div class="w-4 h-4 flex items-center justify-center -ml-1">
                    <Icon name="mdi:arrow-right" class="w-4 h-4 text-accent-green" />
                  </div>
                </div>
              )}
            </div>
          ))
        }
      </div>
    </div>

  </div>
</SectionContainer>
