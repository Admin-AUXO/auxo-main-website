---
import { Icon } from "astro-icon/components";
import { aboutContent } from "../../../data/content/about";

const { title, subtitle, items: credentials } = aboutContent.credentials;
---

<div class="max-w-5xl mx-auto mb-4 sm:mb-5 md:mb-6 lg:mb-8 px-4 sm:px-0">
  <div class="text-center mb-3 sm:mb-4 md:mb-5 lg:mb-6">
    <h2 class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-bold mb-1.5 sm:mb-2 md:mb-3 text-primary transition-colors">
      {title}
    </h2>
    <p class="text-xs sm:text-sm md:text-base text-secondary transition-colors">
      {subtitle}
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4 md:gap-6">
    {credentials.map((credential) => (
      <div class="bg-card border border-theme rounded-xl p-4 sm:p-5 md:p-6 text-center hover:border-accent-green transition-all group">
        <div class="w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 bg-accent-green/10 rounded-full flex items-center justify-center mx-auto mb-2 sm:mb-3 md:mb-4 group-hover:bg-accent-green/20 transition-colors">
          <Icon
            name={credential.icon}
            class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 text-accent-green transition-colors"
          />
        </div>
        <h3 class="font-bold mb-1.5 sm:mb-2 text-sm sm:text-base md:text-lg text-primary transition-colors">
          {credential.label}
        </h3>
        <p class="text-xs sm:text-sm text-secondary transition-colors leading-relaxed">
          {credential.description}
        </p>
      </div>
    ))}
  </div>
</div>

