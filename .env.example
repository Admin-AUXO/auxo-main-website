# AUXO Data Labs - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ======================
# Site Configuration
# ======================
# Base URL for the website (production)
PUBLIC_SITE_URL=https://auxodata.com

# ======================
# Analytics & Tracking
# ======================
# Google Analytics Measurement ID (format: G-XXXXXXXXXX)
PUBLIC_GOOGLE_ANALYTICS_ID=

# Google Tag Manager ID (format: GTM-XXXXXXX)
PUBLIC_GTM_ID=

# ======================
# API Endpoints
# ======================
# Contact form submission endpoint
PUBLIC_CONTACT_API_URL=/api/contact

# Newsletter subscription endpoint
PUBLIC_NEWSLETTER_API_URL=/api/newsletter

# ======================
# Email Configuration
# ======================
# SMTP settings for email notifications (if using server-side email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@auxodata.com
SMTP_TO_EMAIL=info@auxodata.com

# ======================
# Third-Party Services
# ======================
# Mailchimp API Key (for newsletter integration)
MAILCHIMP_API_KEY=
MAILCHIMP_LIST_ID=

# Brevo API Key (recommended email service - 300 emails/day free)
BREVO_API_KEY=
# Email to send FROM (must be verified in Brevo)
BREVO_FROM_EMAIL=noreply@auxodata.com
# Name to display as sender
BREVO_FROM_NAME=AUXO Data Labs
# Email to receive contact form submissions
CONTACT_EMAIL=hello@auxodata.com

# ======================
# Security
# ======================
# Secret key for signing cookies/sessions
SESSION_SECRET=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://auxodata.com

# ======================
# Feature Flags
# ======================
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_NEWSLETTER=true
ENABLE_CONTACT_FORM=true

# ======================
# Development
# ======================
# Set to 'development' or 'production'
NODE_ENV=production

# Enable debug logging
DEBUG=false
