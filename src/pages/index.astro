---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import { Icon } from 'astro-icon/components';
import { services } from '../data/services';
import { siteData } from '../data/site';

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title={`${siteData.name} | ${siteData.tagline}`}
  description={siteData.description}
  showNav={false}
>
  <Navigation />

  <!-- Hero Section with Animated Logo -->
  <section id="hero" class="relative min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-black via-zinc-950 to-black overflow-hidden pt-20 pb-20">
    <!-- Background Effects -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-lime-400/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-green-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    </div>

    <!-- Hero Content Container -->
    <div class="container mx-auto px-4 relative z-10 flex-1 flex flex-col items-center justify-center">
      <div class="w-full max-w-4xl mx-auto text-center">
        <!-- Logo Animation Container -->
        <div class="logo-reveal-container mb-6">
          <div class="logo-grid grid grid-cols-2 gap-2 w-32 md:w-40 mx-auto">
            <div class="logo-tile aspect-square" data-char="A"><span class="logo-char">A</span></div>
            <div class="logo-tile aspect-square" data-char="U"><span class="logo-char">U</span></div>
            <div class="logo-tile aspect-square" data-char="X"><span class="logo-char">X</span></div>
            <div class="logo-tile aspect-square" data-char="O"><span class="logo-char">O</span></div>
          </div>
        </div>

        <!-- Brand Text -->
        <div class="logo-caption mb-6">
          <h1 class="text-xl md:text-2xl font-semibold mb-1 text-white tracking-tight">
            Data Labs
          </h1>
          <p class="tagline text-sm md:text-base text-gray-400 font-light italic">Look Beyond Data</p>
        </div>

        <!-- Hero Content -->
        <div class="hero-content">
          <div class="inline-block mb-4 px-4 py-1.5 bg-lime-400/10 border border-lime-400/30 rounded-full">
            <span class="text-lime-400 text-xs md:text-sm font-semibold tracking-wide">Rethink Data. Rethink Decisions.</span>
          </div>

          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 leading-tight">
            Transform Data Into<br/>
            <span class="text-gradient-green">Actionable Insights</span>
          </h2>

          <p class="text-sm md:text-base text-gray-400 mb-6 max-w-2xl mx-auto leading-relaxed">
            Empowering UAE businesses with data-driven strategies and AI solutions
          </p>

          <div class="flex flex-col sm:flex-row gap-3 justify-center mb-6">
            <a href={`${base}contact`} class="group bg-lime-400 text-black px-6 py-2.5 rounded-lg font-semibold hover:bg-lime-500 transition-all shadow-lg shadow-lime-400/20 hover:shadow-lime-400/40 hover:scale-105 text-sm">
              Schedule Free Consultation
              <Icon name="mdi:arrow-right" class="inline w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
            </a>
            <a href="#services" class="border-2 border-lime-400 text-lime-400 px-6 py-2.5 rounded-lg font-semibold hover:bg-lime-400 hover:text-black transition-all hover:scale-105 text-sm">
              Explore Services
            </a>
          </div>

          <div class="flex flex-wrap justify-center gap-4 md:gap-6 text-xs md:text-sm text-gray-500">
            <div class="flex items-center gap-1.5">
              <Icon name="mdi:check-circle" class="w-4 h-4 text-lime-400" />
              <span class="font-medium">Precision Analytics</span>
            </div>
            <div class="flex items-center gap-1.5">
              <Icon name="mdi:check-circle" class="w-4 h-4 text-lime-400" />
              <span class="font-medium">Globally Compliant</span>
            </div>
            <div class="flex items-center gap-1.5">
              <Icon name="mdi:check-circle" class="w-4 h-4 text-lime-400" />
              <span class="font-medium">Measurable Impact</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="relative z-10 pb-6 mt-8 animate-bounce">
      <a href="#services" class="flex flex-col items-center text-gray-500 hover:text-lime-400 transition-colors">
        <span class="text-xs mb-1">Scroll to explore</span>
        <Icon name="mdi:chevron-down" class="w-5 h-5" />
      </a>
    </div>
  </section>

  <div class="relative z-10 bg-black">

      <section id="services" class="py-28 bg-zinc-950">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">Our <span class="text-lime-400">Services</span></h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.slice(0, 6).map(service => (
              <div class="bg-zinc-900 border border-gray-800 rounded-lg p-6 hover:border-lime-400/50 transition">
                <Icon name={service.icon} class="w-12 h-12 text-lime-400 mb-4" />
                <h3 class="text-xl font-bold mb-3">{service.title}</h3>
                <p class="text-gray-400 mb-4 leading-relaxed">{service.description}</p>
                <a href={`${base}services/${service.id}`} class="text-lime-400 hover:text-lime-500 text-sm font-semibold inline-flex items-center gap-1">
                  Learn more <span class="transition-transform group-hover:translate-x-1">â†’</span>
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section class="py-28 bg-black border-t border-gray-800">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Why Choose <span class="text-lime-400">AUXO?</span></h2>
            <p class="text-gray-400 max-w-2xl mx-auto leading-relaxed"><em>Your trusted analytics partner</em> in the UAE</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-lime-400/10 rounded-full mb-4">
                <Icon name="mdi:map-marker" class="w-8 h-8 text-lime-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Dubai-Based Expertise</h3>
              <p class="text-gray-400 leading-relaxed">Local team with deep understanding of UAE market dynamics and regulatory requirements</p>
            </div>
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-lime-400/10 rounded-full mb-4">
                <Icon name="mdi:certificate" class="w-8 h-8 text-lime-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Proven Track Record</h3>
              <p class="text-gray-400 leading-relaxed">Delivering <span class="font-semibold text-gray-300">measurable results</span> through data-driven strategies and cutting-edge analytics</p>
            </div>
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-lime-400/10 rounded-full mb-4">
                <Icon name="mdi:security" class="w-8 h-8 text-lime-400" />
              </div>
              <h3 class="text-xl font-bold mb-3">Security & Compliance</h3>
              <p class="text-gray-400 leading-relaxed">Full compliance with UAE PDPL, GDPR, and enterprise-grade security standards</p>
            </div>
          </div>
        </div>
      </section>

      <section class="py-28 bg-gradient-to-b from-black to-zinc-900">
        <div class="container mx-auto px-4 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Transform Your Data?</h2>
          <p class="text-lg text-gray-400 mb-10 max-w-2xl mx-auto leading-relaxed">
            Schedule a <span class="font-semibold text-gray-300">free consultation</span> to discuss your analytics needs and discover how we can help you achieve your goals
          </p>
          <a href={`${base}contact`} class="inline-block bg-lime-400 text-black px-12 py-4 rounded-lg font-bold hover:bg-lime-500 transition text-base shadow-lg shadow-lime-400/20 hover:shadow-lime-400/40">
            Get Started Today
          </a>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .logo-tile {
    background: linear-gradient(135deg, var(--accent-green) 0%, #86D12F 100%);
    display: grid;
    place-items: center;
    border-radius: 0;
    transform-origin: center center;
    box-shadow: 0 4px 12px rgba(163, 230, 53, 0.3);
    opacity: 0;
    transform: scale(0) rotate(-180deg);
    animation: tileReveal 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  .logo-tile:nth-child(1) { animation-delay: 0s; }
  .logo-tile:nth-child(2) { animation-delay: 0.1s; }
  .logo-tile:nth-child(3) { animation-delay: 0.2s; }
  .logo-tile:nth-child(4) { animation-delay: 0.3s; }

  .logo-char {
    font-family: var(--font-brand);
    font-weight: 900;
    font-size: clamp(2.5rem, 8vmin, 4rem);
    color: #000000;
    line-height: 1;
  }

  .logo-caption {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.4s forwards;
  }

  .hero-content {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 1s forwards;
  }

  @keyframes tileReveal {
    to {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reset animation on page navigation */
  .hero-animation-reset .logo-tile {
    animation: none;
    opacity: 0;
    transform: scale(0) rotate(-180deg);
  }

  .hero-animation-reset .logo-caption,
  .hero-animation-reset .hero-content {
    animation: none;
    opacity: 0;
  }

  /* Trigger animation */
  .hero-animate .logo-tile {
    animation: tileReveal 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  .hero-animate .logo-tile:nth-child(1) { animation-delay: 0s; }
  .hero-animate .logo-tile:nth-child(2) { animation-delay: 0.1s; }
  .hero-animate .logo-tile:nth-child(3) { animation-delay: 0.2s; }
  .hero-animate .logo-tile:nth-child(4) { animation-delay: 0.3s; }

  .hero-animate .logo-caption {
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.4s forwards;
  }

  .hero-animate .hero-content {
    animation: fadeInUp 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 1s forwards;
  }
</style>

<script>
  function runHeroAnimation() {
    const heroSection = document.getElementById('hero');

    if (!heroSection) {
      if (import.meta.env.DEV) {
        console.warn('Hero section not found');
      }
      return;
    }

    // Reset animation
    heroSection.classList.remove('hero-animate');
    heroSection.classList.add('hero-animation-reset');

    // Force reflow to restart animation
    void heroSection.offsetWidth;

    // Trigger animation
    heroSection.classList.remove('hero-animation-reset');
    heroSection.classList.add('hero-animate');
  }

  // Run animation on initial page load
  document.addEventListener('DOMContentLoaded', runHeroAnimation);

  // Run animation when navigating with Astro view transitions
  document.addEventListener('astro:page-load', runHeroAnimation);
</script>
</BaseLayout>
