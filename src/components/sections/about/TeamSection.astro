---
import { team } from "../../../data/collections/team";
import { aboutContent } from "../../../data/content/about";
import { Icon } from "astro-icon/components";

interface Props {
  team: typeof team;
  content: typeof aboutContent.team;
}

const { team: teamMembers, content } = Astro.props;
---

<div class="max-w-5xl mx-auto mb-4 sm:mb-5 md:mb-6 lg:mb-8 px-4 sm:px-0">
  <div class="text-center mb-3 sm:mb-4 md:mb-5 lg:mb-6">
    <h2
      class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-bold mb-1.5 sm:mb-2 md:mb-3 text-primary transition-colors"
    >
      {content.title}
    </h2>
    <p
      class="text-xs sm:text-sm md:text-base text-secondary hidden sm:block transition-colors"
    >
      {content.subtitle}
    </p>
  </div>

  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 md:gap-6 lg:gap-8"
  >
    {
      teamMembers.map((member) => (
        <div class="bg-card border border-theme rounded-xl p-4 sm:p-5 md:p-6 text-center hover:border-accent-green transition-all group hover:shadow-lg">
          <h3 class="font-bold text-sm sm:text-base md:text-lg mb-1 text-primary transition-colors">
            {member.name}
          </h3>
          <p class="text-accent-green text-xs sm:text-sm mb-2 sm:mb-3 transition-colors">
            {member.role}
          </p>

          {/* Expertise Badges */}
          {member.expertise && member.expertise.length > 0 && (
            <div class="mb-2 sm:mb-3 md:mb-4">
              <div class="flex flex-wrap gap-1.5 justify-center">
                {member.expertise.slice(0, 3).map((skill) => (
                  <span class="px-2 py-1 bg-accent-green/10 border border-accent-green rounded-full text-xs text-accent-green font-medium transition-colors group-hover:bg-accent-green/20">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          )}

          <p class="text-xs sm:text-sm text-secondary mb-2 sm:mb-3 md:mb-4 transition-colors leading-relaxed">
            {member.bio}
          </p>

          {/* Fun Fact */}
          {member.funFact && (
            <div class="mb-2 sm:mb-3 md:mb-4 p-2 bg-accent-green/5 border border-accent-green/10 rounded-lg">
              <p class="text-xs text-secondary transition-colors italic leading-relaxed">
                ðŸ’¡ {member.funFact}
              </p>
            </div>
          )}

          {member.linkedin && (
            <a
              href={member.linkedin}
              class="inline-flex items-center justify-center text-sm text-secondary hover:text-accent-green transition-colors min-h-[44px] min-w-[100px]"
              aria-label={`Connect with ${member.name} on LinkedIn`}
            >
              <Icon name="mdi:linkedin" class="w-4 h-4 mr-1" />
              Connect
            </a>
          )}
        </div>
      ))
    }
  </div>
</div>
