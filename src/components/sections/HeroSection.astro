---
import { Icon } from "astro-icon/components";
import {
  homepageContent,
  type HomepageContent,
} from "../../data/content/homepage";
import CredibilityBar from "./CredibilityBar.astro";

const base = import.meta.env.BASE_URL;
const content: HomepageContent["hero"] = homepageContent.hero;
---

      <section
  id="hero"
  class="relative min-h-[85vh] sm:min-h-[90vh] flex flex-col items-center justify-center overflow-hidden pt-4 sm:pt-8 pb-12 sm:pb-16"
>
  <!-- Credibility Bar -->
  <CredibilityBar />
  <!-- Hero Content Container -->
  <div
    class="container mx-auto px-4 sm:px-6 relative z-10 flex-1 flex flex-col items-center justify-center"
  >
    <div class="w-full max-w-5xl mx-auto text-center">
      <!-- Logo Animation Container -->
      <div class="logo-reveal-container mb-8 sm:mb-10">
        <div class="logo-grid grid grid-cols-2 gap-3 w-32 md:w-40 mx-auto">
          <div class="logo-tile aspect-square" data-char="A">
            <span class="logo-char">A</span>
          </div>
          <div class="logo-tile aspect-square" data-char="U">
            <span class="logo-char">U</span>
          </div>
          <div class="logo-tile aspect-square" data-char="X">
            <span class="logo-char">X</span>
          </div>
          <div class="logo-tile aspect-square" data-char="O">
            <span class="logo-char">O</span>
          </div>
        </div>
      </div>

      <!-- Brand Text -->
      <div class="logo-caption mb-8">
        <h1
          class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2 text-primary tracking-tight transition-colors"
        >
          Data Labs
        </h1>
        <p
          class="tagline text-sm md:text-base text-secondary font-light italic transition-colors"
        >
          Look Beyond Data
        </p>
      </div>

      <!-- Hero Content -->
      <div
        class="hero-content hero-backdrop rounded-3xl p-6 sm:p-8 md:p-10 border border-theme/50 backdrop-blur-sm bg-card/80 dark:bg-card/90"
      >
        <div
          class="inline-block mb-6 px-4 py-2 bg-accent-green/10 border border-accent-green/30 rounded-full backdrop-blur-sm"
        >
          <span
            class="text-accent-green text-xs md:text-sm font-semibold tracking-wide transition-colors"
            >{content.badge}</span
          >
        </div>

        <h2
          class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold mb-4 md:mb-6 leading-tight text-primary transition-colors"
        >
          <span class="block">{content.title}</span>
          <span class="text-gradient-green block">{content.titleHighlight}</span
          >
        </h2>

        <p
          class="text-sm sm:text-base md:text-lg text-primary mb-3 md:mb-4 max-w-3xl mx-auto leading-relaxed px-4 transition-colors font-medium"
        >
          {content.subtitle}
        </p>

        {
          content.subheadline && (
            <p class="text-base sm:text-lg md:text-xl text-secondary mb-6 md:mb-8 max-w-3xl mx-auto leading-relaxed px-4 transition-colors">
              {content.subheadline}
            </p>
          )
        }

        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mb-4 px-4">
          <!-- Primary CTA - Enhanced with larger size, stronger shadow, and animation -->
          <a
            href={`${base}${content.primaryCta.href}`}
            class="group primary-cta bg-accent-green text-on-accent px-8 sm:px-10 py-4 sm:py-5 rounded-lg font-bold hover:bg-accent-green/90 active:bg-accent-green/80 transition-all hover:scale-105 active:scale-95 text-base sm:text-lg min-h-[52px] sm:min-h-[56px] flex items-center justify-center gap-2 shadow-lg shadow-accent-green/30 hover:shadow-xl hover:shadow-accent-green/40 relative overflow-hidden"
            aria-label={content.primaryCta.text}
          >
            <span class="relative z-10">{content.primaryCta.text}</span>
            <Icon
              name="mdi:arrow-right"
              class="w-5 h-5 sm:w-6 sm:h-6 group-hover:translate-x-1 transition-transform relative z-10"
            />
            <!-- Subtle glow effect on hover -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 -translate-x-full group-hover:translate-x-full"></div>
          </a>
          <!-- Secondary CTA - Reduced visual weight -->
          <a
            href={`${base}${content.secondaryCta.href}`}
            class="bg-card border border-accent-green/40 text-accent-green px-6 sm:px-8 py-3 sm:py-4 rounded-lg font-medium hover:bg-accent-green/10 hover:border-accent-green/60 active:bg-accent-green/20 active:border-accent-green/80 transition-all hover:scale-[1.02] active:scale-95 text-sm sm:text-base min-h-[44px] sm:min-h-[48px] flex items-center justify-center"
            aria-label={content.secondaryCta.text}
          >
            {content.secondaryCta.text}
          </a>
        </div>

        <!-- No Pressure Language -->
        <div class="flex items-center justify-center gap-2 mb-6 sm:mb-8 px-4">
          <Icon
            name="mdi:check-circle"
            class="w-4 h-4 text-accent-green flex-shrink-0"
          />
          <span class="text-xs sm:text-sm text-secondary transition-colors">
            No obligation. Just honest advice.
          </span>
        </div>

        <div
          class="flex flex-wrap justify-center gap-4 sm:gap-6 text-xs sm:text-sm text-secondary px-4 transition-colors mb-6 sm:mb-8"
        >
          {
            content.features.map((feature, index) => (
              <div
                class="flex items-center gap-2 animate-fade-in animate-delay-100"
                data-animation-delay={index}
              >
                <Icon
                  name="mdi:check-circle"
                  class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green flex-shrink-0"
                />
                <span class="font-medium">{feature}</span>
              </div>
            ))
          }
        </div>

        {
          content.startupAdvantage && (
            <div class="mt-4 sm:mt-6 px-4">
              <a
                href={`${base}${content.startupAdvantage.href}`}
                class="group inline-flex items-center gap-2 text-sm sm:text-base text-secondary hover:text-accent-green transition-colors duration-200"
              >
                <Icon
                  name="mdi:rocket"
                  class="w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform"
                />
                <span>{content.startupAdvantage.text} â†’</span>
              </a>
            </div>
          )
        }
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="relative z-10 pb-6 mt-8">
    <a
      href="#services"
      class="flex flex-col items-center text-secondary hover:text-accent-green transition-colors group"
      aria-label={content.scrollIndicator}
    >
      <span class="text-xs mb-2">{content.scrollIndicator}</span>
      <div class="animate-bounce">
        <Icon
          name="mdi:chevron-down"
          class="w-6 h-6 group-hover:scale-110 transition-transform"
        />
      </div>
    </a>
  </div>
</section>
