---
// Third-party
import { Icon } from "astro-icon/components";

// Data
import { legalContent } from "../../data/content/legal";

// Utils
import { getBaseUrl, createUrl } from "../../utils/url";

interface Props {
  title: string;
  lastUpdated: string;
  effectiveDate?: string;
  summary?: string;
}

const { title, lastUpdated, effectiveDate, summary } = Astro.props;
const base = getBaseUrl();

// Generate table of contents from slot content
const legalPages = legalContent.navigation.pages.map((page) => ({
  name: page.name,
  href: page.href === '' ? base : createUrl(page.href),
}));
---

<div class="max-w-7xl mx-auto">
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
    <!-- Sidebar Navigation -->
    <aside class="lg:col-span-1">
      <div class="sticky top-24 space-y-6">
        <!-- Legal Pages Navigation -->
        <div class="bg-card border border-theme rounded-xl p-6 transition-colors">
          <h3 class="font-bold text-primary mb-4 flex items-center gap-2 transition-colors">
            <Icon name="mdi:file-document" class="w-5 h-5 text-accent-green transition-colors" />
            {legalContent.navigation.title}
          </h3>
          <nav class="space-y-2">
            {
              legalPages.map((page) => (
                <a
                  href={page.href}
                  class={`block px-3 py-2 rounded-lg text-sm transition-all min-h-[44px] flex items-center ${
                    page.name === title
                      ? "bg-accent-green/10 text-accent-green font-semibold border border-accent-green"
                      : "text-secondary hover:text-accent-green hover:bg-accent-green/10"
                  }`}
                >
                  {page.name}
                </a>
              ))
            }
          </nav>
        </div>

        <!-- Quick Actions -->
        <div class="bg-card border border-theme rounded-xl p-6 transition-colors">
          <h3 class="font-bold text-primary mb-4 flex items-center gap-2 transition-colors">
            <Icon name="mdi:help-circle" class="w-5 h-5 text-accent-green transition-colors" />
            {legalContent.sidebar.needHelp.title}
          </h3>
          <div class="space-y-3 text-sm">
            <a
              href={createUrl('contact')}
              class="flex items-center gap-2 text-secondary hover:text-accent-green transition-colors min-h-[44px]"
            >
              <Icon name="mdi:email-outline" class="w-4 h-4" />
              {legalContent.sidebar.needHelp.contactUs}
            </a>
            <a
              href={`mailto:${legalContent.sidebar.needHelp.privacyEmail}`}
              class="flex items-center gap-2 text-secondary hover:text-accent-green transition-colors min-h-[44px]"
            >
              <Icon name="mdi:shield-check" class="w-4 h-4" />
              {legalContent.sidebar.needHelp.privacyTeam}
            </a>
          </div>
        </div>

        <!-- Print/Download -->
        <button
          onclick="window.print()"
          class="w-full bg-surface border border-theme hover:bg-accent-green/10 hover:border-accent-green/30 text-primary px-4 py-3 rounded-lg text-sm font-semibold transition-all flex items-center justify-center gap-2 min-h-[44px]"
        >
          <Icon name="mdi:download" class="w-4 h-4" />
          {legalContent.sidebar.printSave}
        </button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="lg:col-span-3">
      <!-- Header -->
      <div class="mb-8">
        <div
          class="inline-block px-3 py-1 bg-accent-green/10 border border-accent-green rounded-full mb-4 transition-colors"
        >
          <span
            class="text-accent-green text-xs font-semibold uppercase tracking-wide transition-colors"
            >Legal Document</span
          >
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-primary transition-colors">{title}</h1>
        <div class="flex flex-wrap items-center gap-4 text-sm text-secondary transition-colors">
          <span class="flex items-center gap-2">
            <Icon name="mdi:calendar-clock" class="w-4 h-4 text-accent-green transition-colors" />
            Last Updated: <strong class="text-primary transition-colors">{lastUpdated}</strong>
          </span>
          {
            effectiveDate && (
              <span class="flex items-center gap-2">
                <Icon name="mdi:calendar-check" class="w-4 h-4 text-accent-green transition-colors" />
                Effective: <strong class="text-primary transition-colors">{effectiveDate}</strong>
              </span>
            )
          }
        </div>

        {
          summary && (
            <div class="mt-6 p-4 bg-accent-green/5 border-l-4 border-accent-green rounded-r-lg transition-colors">
              <p class="text-primary leading-relaxed transition-colors">
                <strong class="text-primary transition-colors">Summary:</strong> {summary}
              </p>
            </div>
          )
        }
      </div>

      <!-- Content -->
      <div class="prose prose-invert prose-lime max-w-none">
        <div class="bg-card border border-theme rounded-2xl p-8 md:p-12 transition-colors">
          <slot />
        </div>
      </div>

      <!-- Footer CTA -->
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-6 bg-accent-green/10 border border-accent-green/20 rounded-xl transition-colors">
          <Icon name="mdi:email-outline" class="w-8 h-8 text-accent-green mb-3 transition-colors" />
          <h3 class="font-bold text-primary mb-2 transition-colors">
            {legalContent.footer.questions.title}
          </h3>
          <p class="text-sm text-secondary mb-4 transition-colors">
            {legalContent.footer.questions.description}
          </p>
          <a
            href={createUrl('contact')}
            class="inline-flex items-center text-accent-green hover:text-accent-green/80 font-semibold text-sm transition-colors min-h-[44px]"
          >
            {legalContent.footer.questions.cta}
            <Icon name="mdi:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>

        <div class="p-6 bg-surface border border-theme rounded-xl transition-colors">
          <Icon name="mdi:shield-check" class="w-8 h-8 text-accent-green mb-3 transition-colors" />
          <h3 class="font-bold text-primary mb-2 transition-colors">
            {legalContent.footer.dataProtection.title}
          </h3>
          <p class="text-sm text-secondary mb-4 transition-colors">
            {legalContent.footer.dataProtection.description}
          </p>
          <a
            href={`mailto:${legalContent.footer.dataProtection.email}`}
            class="inline-flex items-center text-accent-green hover:text-accent-green/80 font-semibold text-sm transition-colors min-h-[44px]"
          >
            {legalContent.footer.dataProtection.email}
            <Icon name="mdi:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>
      </div>
    </main>
  </div>
</div>

<style is:global>
  /* Base prose styling - Theme-aware */
  .prose {
    color: var(--text-secondary);
  }

  /* H2 Headings - Main sections */
  .prose h2 {
    color: var(--accent-green);
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .prose h2:first-child {
    margin-top: 0;
  }

  /* H3 Headings - Subsections */
  .prose h3 {
    color: var(--text-primary);
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  /* Paragraphs - with indentation */
  .prose p {
    color: var(--text-secondary);
    line-height: 1.75;
    margin-bottom: 1.25rem;
    text-indent: 2rem !important;
  }

  /* Lists */
  .prose ul,
  .prose ol {
    margin-top: 0.75rem;
    margin-bottom: 1.25rem;
    margin-left: 2rem;
    padding-left: 1.5rem;
  }

  .prose ul {
    list-style-type: disc !important;
  }

  .prose ol {
    list-style-type: decimal !important;
  }

  .prose li {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }

  .prose li::marker {
    color: var(--accent-green);
  }

  /* Strong text */
  .prose strong {
    color: var(--text-primary);
    font-weight: 600;
  }

  /* Links */
  .prose a {
    color: var(--accent-green);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: var(--accent-green);
    opacity: 0.8;
  }
</style>
