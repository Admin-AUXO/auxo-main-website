---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import { Icon } from 'astro-icon/components';
import { services } from '../data/collections/services';
import { siteData } from '../data/config/site';
import { homepageContent } from '../data/content/homepage';
import { commonText } from '../data/shared/common';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

// Helper function to calculate read time
function calculateReadTime(content: string): number {
  const wordsPerMinute = 200;
  const wordCount = content.trim().split(/\s+/).length;
  return Math.ceil(wordCount / wordsPerMinute);
}

// Get latest blog posts
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .filter((post) => !post.data.draft)
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);
---

<BaseLayout
  title="Data Analytics Consultancy Dubai, UAE | AUXO Data Labs"
  description={siteData.description}
  showNav={false}
>
  <Navigation />

  <!-- Hero Section with Animated Logo -->
  <section id="hero" class="relative min-h-[85vh] sm:min-h-screen flex flex-col items-center justify-center overflow-hidden pt-20 sm:pt-32 pb-12 sm:pb-20">

    <!-- Hero Content Container -->
    <div class="container mx-auto px-4 sm:px-6 relative z-10 flex-1 flex flex-col items-center justify-center">
      <div class="w-full max-w-4xl mx-auto text-center">
        <!-- Logo Animation Container -->
        <div class="logo-reveal-container mb-6">
          <div class="logo-grid grid grid-cols-2 gap-2 w-32 md:w-40 mx-auto">
            <div class="logo-tile aspect-square" data-char="A"><span class="logo-char">A</span></div>
            <div class="logo-tile aspect-square" data-char="U"><span class="logo-char">U</span></div>
            <div class="logo-tile aspect-square" data-char="X"><span class="logo-char">X</span></div>
            <div class="logo-tile aspect-square" data-char="O"><span class="logo-char">O</span></div>
          </div>
        </div>

        <!-- Brand Text -->
        <div class="logo-caption mb-6">
          <h1 class="text-xl md:text-2xl font-semibold mb-1 text-white tracking-tight">
            Data Labs
          </h1>
          <p class="tagline text-sm md:text-base text-gray-400 font-light italic">Look Beyond Data</p>
        </div>

        <!-- Hero Content -->
        <div class="hero-content">
          <div class="inline-block mb-4 px-4 py-1.5 bg-lime-400/10 border border-lime-400/30 rounded-full">
            <span class="text-lime-400 text-xs md:text-sm font-semibold tracking-wide">{homepageContent.hero.badge}</span>
          </div>

          <h2 class="text-xl md:text-3xl lg:text-4xl font-bold mb-3 md:mb-4 leading-tight">
            {homepageContent.hero.title}<br/>
            <span class="text-gradient-green">{homepageContent.hero.titleHighlight}</span>
          </h2>

          <p class="text-xs md:text-base text-gray-400 mb-4 md:mb-6 max-w-2xl mx-auto leading-relaxed px-2">
            {homepageContent.hero.subtitle}
          </p>

          <div class="flex flex-col sm:flex-row gap-3 justify-center mb-4 sm:mb-6 px-4">
            <a href={`${base}${homepageContent.hero.primaryCta.href}`} class="group bg-lime-400 text-black px-6 py-2.5 rounded-lg font-semibold hover:bg-lime-500 transition-all shadow-lg shadow-lime-400/20 hover:shadow-lime-400/40 hover:scale-105 text-sm min-h-[44px] flex items-center justify-center">
              {homepageContent.hero.primaryCta.text}
              <Icon name="mdi:arrow-right" class="inline w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
            </a>
            <a href={`${base}${homepageContent.hero.secondaryCta.href}`} class="border-2 border-lime-400 text-lime-400 px-6 py-2.5 rounded-lg font-semibold hover:bg-lime-400 hover:text-black transition-all hover:scale-105 text-sm min-h-[44px] flex items-center justify-center">
              {homepageContent.hero.secondaryCta.text}
            </a>
          </div>

          <div class="flex flex-wrap justify-center gap-3 sm:gap-4 md:gap-6 text-xs text-gray-500 px-4 hidden sm:flex">
            {homepageContent.hero.features.map((feature) => (
              <div class="flex items-center gap-1.5">
                <Icon name="mdi:check-circle" class="w-4 h-4 text-lime-400" />
                <span class="font-medium">{feature}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="relative z-10 pb-6 mt-8 animate-bounce">
      <a href="#services" class="flex flex-col items-center text-gray-500 hover:text-lime-400 transition-colors">
        <span class="text-xs mb-1">{homepageContent.hero.scrollIndicator}</span>
        <Icon name="mdi:chevron-down" class="w-5 h-5" />
      </a>
    </div>
  </section>

  <div class="relative z-10">

      <section id="services" class="py-12 sm:py-16 md:py-28">
        <div class="container mx-auto px-4 sm:px-6">
          <h2 class="text-xl sm:text-2xl md:text-4xl font-bold text-center mb-6 sm:mb-8 md:mb-16">Our <span class="text-lime-400">Services</span></h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8 max-w-6xl mx-auto">
            {services.slice(0, 6).map((service, index) => (
              <div class={`bg-zinc-900 border border-gray-800 rounded-lg p-4 md:p-6 hover:border-lime-400/50 transition ${index >= 2 ? 'hidden md:block' : ''}`}>
                <Icon name={service.icon} class="w-10 h-10 md:w-12 md:h-12 text-lime-400 mb-3 md:mb-4" />
                <h3 class="text-base sm:text-lg md:text-xl font-bold mb-2 md:mb-3">{service.title}</h3>
                <p class="text-xs sm:text-sm md:text-base text-gray-400 mb-3 md:mb-4 leading-relaxed line-clamp-2 md:line-clamp-none">{service.description}</p>
                <a href={`${base}services/${service.id}/`} class="text-lime-400 hover:text-lime-500 text-xs sm:text-sm font-semibold inline-flex items-center gap-1">
                  Learn more <span class="transition-transform group-hover:translate-x-1">â†’</span>
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- How We Work Section -->
      <section class="py-16 md:py-28 hidden md:block">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              {homepageContent.methodology.title} <span class="text-lime-400">{homepageContent.methodology.titleHighlight}</span>
            </h2>
            <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed">
              {homepageContent.methodology.subtitle}
            </p>
          </div>

          <div class="max-w-5xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
              {homepageContent.methodology.steps.map((step, index) => (
                <div class="relative flex">
                  <div class="bg-gradient-to-br from-zinc-900 to-zinc-950 border border-lime-400/30 rounded-xl p-6 hover:border-lime-400/50 transition-all flex flex-col h-full w-full">
                    <div class="absolute -top-4 -left-4 w-12 h-12 bg-lime-400 rounded-full flex items-center justify-center font-bold text-black text-xl shadow-lg shadow-lime-400/50">
                      {step.number}
                    </div>
                    <div class="w-14 h-14 bg-lime-400/10 rounded-lg flex items-center justify-center mb-4 mt-2">
                      <Icon name={step.icon} class="w-7 h-7 text-lime-400" />
                    </div>
                    <h3 class="text-xl font-bold mb-3">{step.title}</h3>
                    <p class="text-gray-400 leading-relaxed text-sm">
                      {step.description}
                    </p>
                  </div>
                  {index < homepageContent.methodology.steps.length - 1 && (
                    <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-gradient-to-r from-lime-400 to-transparent"></div>
                  )}
                </div>
              ))}
            </div>

            <!-- Additional Value Props -->
            <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
              {homepageContent.methodology.valueProps.map((prop) => (
                <div class="text-center p-6 bg-zinc-900/50 rounded-xl border border-zinc-800">
                  <div class="text-3xl font-bold text-lime-400 mb-2">{prop.label}</div>
                  <p class="text-gray-400 text-sm">{prop.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      <section class="py-16 md:py-28 hidden md:block">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">{homepageContent.whyChoose.title} <span class="text-lime-400">{homepageContent.whyChoose.titleHighlight}</span></h2>
            <p class="text-gray-400 max-w-2xl mx-auto leading-relaxed"><em>{homepageContent.whyChoose.subtitle}</em></p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            {homepageContent.whyChoose.items.map((item) => (
              <div class="text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-lime-400/10 rounded-full mb-4">
                  <Icon name={item.icon} class="w-8 h-8 text-lime-400" />
                </div>
                <h3 class="text-xl font-bold mb-3">{item.title}</h3>
                <p class="text-gray-400 leading-relaxed">{item.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Maturity Assessment Section - Simplified on mobile -->
      <section class="py-12 sm:py-16 md:py-28">
        <div class="container mx-auto px-4 sm:px-6">
          <div class="max-w-5xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 md:gap-12 items-center">
              <!-- Left: Content -->
              <div>
                <div class="inline-block px-3 py-1.5 md:px-4 md:py-2 bg-lime-400/10 border border-lime-400/20 rounded-full mb-3 md:mb-4">
                  <span class="text-lime-400 text-xs md:text-sm font-semibold">{homepageContent.maturityCalculator.badge}</span>
                </div>
                <h2 class="text-xl sm:text-2xl md:text-4xl font-bold mb-3 md:mb-4">
                  {homepageContent.maturityCalculator.title}<br class="hidden md:block"/>
                  <span class="text-lime-400">{homepageContent.maturityCalculator.titleHighlight}</span>
                </h2>
                <p class="text-xs sm:text-sm md:text-lg text-gray-400 mb-4 md:mb-6 leading-relaxed">
                  {homepageContent.maturityCalculator.subtitle}
                </p>

                <div class="space-y-2 md:space-y-3 mb-4 sm:mb-6 md:mb-8 hidden md:block">
                  {homepageContent.maturityCalculator.benefits.map((benefit) => (
                    <div class="flex items-start gap-3">
                      <Icon name="mdi:check-circle" class="w-6 h-6 text-lime-400 flex-shrink-0 mt-0.5" />
                      <div>
                        <p class="font-semibold text-white">{benefit.title}</p>
                        <p class="text-sm text-gray-400">{benefit.description}</p>
                      </div>
                    </div>
                  ))}
                </div>

                <a href={`${base}${homepageContent.maturityCalculator.cta.href}`} class="inline-flex items-center gap-2 bg-lime-400 text-black px-6 py-3 md:px-8 md:py-3.5 rounded-lg font-bold hover:bg-lime-500 transition-all shadow-lg shadow-lime-400/20 hover:shadow-lime-400/40 hover:scale-105 text-sm md:text-base">
                  {homepageContent.maturityCalculator.cta.text}
                  <Icon name="mdi:arrow-right" class="w-5 h-5" />
                </a>
              </div>

              <!-- Right: Visual -->
              <div class="relative hidden lg:block">
                <div class="bg-gradient-to-br from-zinc-800 to-zinc-900 border border-lime-400/20 rounded-2xl p-8 shadow-2xl">
                  <h3 class="text-xl font-bold mb-6 text-center">Assessment Dimensions</h3>
                  <div class="space-y-4">
                    {homepageContent.maturityCalculator.dimensions.map((dimension) => (
                      <div class="bg-zinc-800/50 rounded-lg p-4">
                        <div class="flex items-center justify-between mb-2">
                          <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-lime-400/20 rounded-lg flex items-center justify-center">
                              <Icon name={dimension.name === 'Infrastructure' ? 'mdi:database' : dimension.name === 'Analytics' ? 'mdi:chart-bar' : 'mdi:account-group'} class="w-5 h-5 text-lime-400" />
                            </div>
                            <span class="font-medium">{dimension.name}</span>
                          </div>
                          <span class="text-lime-400 font-bold">{dimension.score}</span>
                        </div>
                        <div class="h-2 bg-zinc-700 rounded-full overflow-hidden">
                          <div class="h-full bg-gradient-to-r from-lime-400 to-green-500" style={`width: ${dimension.percentage}%`}></div>
                        </div>
                      </div>
                    ))}

                    <div class="text-center mt-6 pt-6 border-t border-zinc-700">
                      <p class="text-2xl font-bold text-lime-400 mb-1">{homepageContent.maturityCalculator.resultLabel}</p>
                      <p class="text-sm text-gray-400">{homepageContent.maturityCalculator.resultSubtext}</p>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Blog Preview Section - Show only 1 on mobile -->
      <section class="py-12 sm:py-16 md:py-28">
        <div class="container mx-auto px-4 sm:px-6">
          <div class="text-center mb-6 sm:mb-8 md:mb-16">
            <h2 class="text-xl sm:text-2xl md:text-4xl font-bold mb-3 sm:mb-4 md:mb-6">
              {homepageContent.blog.title} <span class="text-lime-400">{homepageContent.blog.titleHighlight}</span>
            </h2>
            <p class="text-xs sm:text-sm md:text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed hidden md:block">
              {homepageContent.blog.subtitle}
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6 md:gap-8 max-w-6xl mx-auto mb-6 sm:mb-8 md:mb-12">
            {latestPosts.map((post, index) => (
              <article class={`bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden hover:border-lime-400/30 transition-all group ${index >= 1 ? 'hidden md:block' : ''}`}>
                <div class="p-4 md:p-6">
                  <!-- Category Badge -->
                  {post.data.tags[0] && (
                    <div class="inline-block px-2 py-0.5 md:px-3 md:py-1 bg-lime-400/10 border border-lime-400/20 rounded-full mb-3 md:mb-4">
                      <span class="text-lime-400 text-xs font-semibold uppercase tracking-wide">
                        {post.data.tags[0]}
                      </span>
                    </div>
                  )}

                  <!-- Title -->
                  <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3 group-hover:text-lime-400 transition-colors line-clamp-2">
                    {post.data.title}
                  </h3>

                  <!-- Description -->
                  <p class="text-gray-400 mb-3 md:mb-4 leading-relaxed line-clamp-2 md:line-clamp-3 text-xs md:text-sm">
                    {post.data.description}
                  </p>

                  <!-- Meta -->
                  <div class="flex items-center justify-between text-xs md:text-sm text-gray-500 mb-3 md:mb-4">
                    <span>{new Date(post.data.publishDate).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' })}</span>
                    <span>{calculateReadTime(post.body || '')} min read</span>
                  </div>

                  <!-- Read More Link -->
                  <a
                    href={`${base}blog/${post.id}`}
                    class="inline-flex items-center gap-2 text-lime-400 hover:text-lime-300 font-semibold text-xs md:text-sm group-hover:gap-3 transition-all"
                  >
                    {commonText.buttons.viewArticle}
                    <Icon name="mdi:arrow-right" class="w-4 h-4" />
                  </a>
                </div>
              </article>
            ))}
          </div>

          <div class="text-center">
            <a
              href={`${base}blog/`}
              class="inline-flex items-center gap-2 px-8 py-3 bg-zinc-800 border border-zinc-700 text-white rounded-lg hover:border-lime-400/50 hover:bg-zinc-700 transition-all font-semibold"
            >
              {homepageContent.blog.viewAllText}
              <Icon name="mdi:arrow-right" class="w-5 h-5" />
            </a>
          </div>
        </div>
      </section>

      <!-- Launch Offer Section -->
      <section class="py-16 md:py-28 relative overflow-hidden hidden md:block">

        <div class="container mx-auto px-4 relative z-10">
          <div class="max-w-4xl mx-auto">
            <div class="bg-gradient-to-br from-zinc-900 to-black border-2 border-lime-400/40 rounded-2xl p-8 md:p-12 shadow-2xl shadow-lime-400/20">
              <!-- Badge -->
              <div class="flex justify-center mb-6">
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-lime-400 text-black rounded-full font-bold text-sm">
                  <Icon name="mdi:check-circle" class="w-5 h-5" />
                  <span>{homepageContent.launchOffer.badge}</span>
                  <Icon name="mdi:check-circle" class="w-5 h-5" />
                </div>
              </div>

              <h2 class="text-3xl md:text-4xl font-bold mb-4 text-center">
                {homepageContent.launchOffer.title} <span class="text-lime-400">{homepageContent.launchOffer.titleHighlight}</span>
              </h2>

              <p class="text-lg text-gray-300 mb-8 text-center max-w-2xl mx-auto leading-relaxed">
                {homepageContent.launchOffer.subtitle}
              </p>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                {homepageContent.launchOffer.benefits.map((benefit) => (
                  <div class="bg-zinc-800/50 border border-lime-400/20 rounded-xl p-6">
                    <div class="flex items-start gap-3 mb-3">
                      <div class="w-10 h-10 bg-lime-400/20 rounded-lg flex items-center justify-center flex-shrink-0">
                        <Icon name={benefit.icon} class="w-6 h-6 text-lime-400" />
                      </div>
                      <div>
                        <h3 class="font-bold text-xl mb-1">{benefit.title}</h3>
                        <p class="text-gray-400 text-sm">{benefit.description}</p>
                      </div>
                    </div>
                  </div>
                ))}
              </div>

              <div class="bg-gradient-to-r from-lime-400/10 to-green-500/10 border border-lime-400/30 rounded-xl p-6 mb-8">
                <div class="flex items-center justify-center gap-3 mb-2">
                  <Icon name="mdi:alert-circle" class="w-6 h-6 text-lime-400" />
                  <span class="font-bold text-lg">{homepageContent.launchOffer.limitedTime.title}</span>
                </div>
                <p class="text-center text-gray-300">
                  {homepageContent.launchOffer.limitedTime.message} <span class="text-lime-400 font-bold">{homepageContent.launchOffer.limitedTime.count}</span> {homepageContent.launchOffer.limitedTime.highlight}
                </p>
              </div>

              <div class="text-center">
                <a href={`${base}${homepageContent.launchOffer.cta.href}`} class="inline-flex items-center gap-2 bg-lime-400 text-black px-10 py-4 rounded-lg font-bold hover:bg-lime-500 transition-all shadow-lg shadow-lime-400/30 hover:shadow-lime-400/50 hover:scale-105 text-lg">
                  {homepageContent.launchOffer.cta.text}
                  <Icon name="mdi:arrow-right" class="w-5 h-5" />
                </a>
                <p class="text-sm text-gray-500 mt-4">{homepageContent.launchOffer.disclaimer}</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-10 sm:py-12 md:py-28">
        <div class="container mx-auto px-4 sm:px-6 text-center">
          <h2 class="text-xl sm:text-2xl md:text-4xl font-bold mb-3 sm:mb-4 md:mb-6">{homepageContent.finalCta.title}</h2>
          <p class="text-xs sm:text-sm md:text-lg text-gray-400 mb-4 sm:mb-6 md:mb-10 max-w-2xl mx-auto leading-relaxed">
            {homepageContent.finalCta.subtitle}
          </p>
          <a href={`${base}${homepageContent.finalCta.ctaHref}`} class="inline-block bg-lime-400 text-black px-6 py-3 md:px-12 md:py-4 rounded-lg font-bold hover:bg-lime-500 transition text-sm md:text-base shadow-lg shadow-lime-400/20 hover:shadow-lime-400/40 hover:scale-105 min-h-[44px] flex items-center justify-center mx-auto max-w-xs sm:max-w-none">
            {homepageContent.finalCta.ctaText}
          </a>
        </div>
      </section>
    </div>

<style>
  .logo-tile {
    background: linear-gradient(135deg, var(--accent-green) 0%, #86D12F 100%);
    display: grid;
    place-items: center;
    border-radius: 0;
    transform-origin: center center;
    box-shadow: 0 4px 12px rgba(163, 230, 53, 0.3);
    opacity: 0;
    transform: scale(0) rotate(-180deg);
    animation: tileReveal 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  .logo-tile:nth-child(1) { animation-delay: 0s; }
  .logo-tile:nth-child(2) { animation-delay: 0.1s; }
  .logo-tile:nth-child(3) { animation-delay: 0.2s; }
  .logo-tile:nth-child(4) { animation-delay: 0.3s; }

  .logo-char {
    font-family: var(--font-brand);
    font-weight: 900;
    font-size: clamp(2.5rem, 8vmin, 4rem);
    color: #000000;
    line-height: 1;
  }

  .logo-caption {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.4s forwards;
  }

  .hero-content {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 1s forwards;
  }

  @keyframes tileReveal {
    to {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reset animation on page navigation */
  .hero-animation-reset .logo-tile {
    animation: none;
    opacity: 0;
    transform: scale(0) rotate(-180deg);
  }

  .hero-animation-reset .logo-caption,
  .hero-animation-reset .hero-content {
    animation: none;
    opacity: 0;
  }

  /* Trigger animation */
  .hero-animate .logo-tile {
    animation: tileReveal 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  .hero-animate .logo-tile:nth-child(1) { animation-delay: 0s; }
  .hero-animate .logo-tile:nth-child(2) { animation-delay: 0.1s; }
  .hero-animate .logo-tile:nth-child(3) { animation-delay: 0.2s; }
  .hero-animate .logo-tile:nth-child(4) { animation-delay: 0.3s; }

  .hero-animate .logo-caption {
    animation: fadeInUp 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.4s forwards;
  }

  .hero-animate .hero-content {
    animation: fadeInUp 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 1s forwards;
  }
</style>

<script>
  function runHeroAnimation() {
    const heroSection = document.getElementById('hero');

    if (!heroSection) {
      if (import.meta.env.DEV) {
        console.warn('Hero section not found');
      }
      return;
    }

    // Reset animation
    heroSection.classList.remove('hero-animate');
    heroSection.classList.add('hero-animation-reset');

    // Force reflow to restart animation
    void heroSection.offsetWidth;

    // Trigger animation
    heroSection.classList.remove('hero-animation-reset');
    heroSection.classList.add('hero-animate');
  }

  // Run animation on initial page load
  document.addEventListener('DOMContentLoaded', runHeroAnimation);

  // Run animation when navigating with Astro view transitions
  document.addEventListener('astro:page-load', runHeroAnimation);
</script>
