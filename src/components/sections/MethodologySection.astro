---
import { homepageContent, type HomepageContent } from "../../data/content/homepage";
import SectionContainer from "../layouts/SectionContainer.astro";
import ProjectTimeline from "./ProjectTimeline.astro";
import { Icon } from "astro-icon/components";

const content: HomepageContent["methodology"] = homepageContent.methodology;
---

<SectionContainer padding="md" background="default">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="text-center mb-12 sm:mb-16">
      <div
        class="inline-block mb-4 px-4 py-2 bg-accent-green/10 border border-accent-green/20 rounded-full"
      >
        <span class="text-accent-green text-sm font-semibold"
          >How We Work</span
        >
      </div>
      <h2
        class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 text-primary transition-colors"
      >
        {content.title}
        <span class="text-gradient-green"
          >{content.titleHighlight}</span
        >
      </h2>
      <p
        class="text-base sm:text-lg text-secondary max-w-2xl mx-auto transition-colors"
      >
        {content.subtitle}
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 mb-12 sm:mb-16"
      >
        {
          content.steps.map((step, index) => (
            <div
              class="relative group animate-fade-in"
              data-animation-delay={index * 150}
            >
              <div class="bg-card border-2 border-accent-green/30 rounded-xl p-6 sm:p-8 hover:border-accent-green pulse-box transition-all duration-300 hover:shadow-xl hover:-translate-y-2 h-full relative overflow-hidden">
                <!-- Large Number Background -->
                <div class="absolute top-0 right-0 w-24 h-24 sm:w-28 sm:h-28 flex items-center justify-end pr-4 sm:pr-6 opacity-10 group-hover:opacity-20 transition-opacity">
                  <span class="text-7xl sm:text-8xl font-black text-accent-green leading-none">
                    {step.number}
                  </span>
                </div>
                
                <!-- Title -->
                <div class="mb-4 text-right">
                  <h3 class="text-xl sm:text-2xl font-bold mb-2 text-primary transition-colors">
                    {step.title}
                  </h3>
                  <div class="w-12 h-1 bg-accent-green rounded-full ml-auto"></div>
                </div>
                
                <!-- Description -->
                <p class="text-secondary leading-relaxed text-sm sm:text-base transition-colors">
                  {step.description}
                </p>
              </div>
              {index < content.steps.length - 1 && (
                <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-gradient-to-r from-accent-green to-transparent z-10" />
              )}
            </div>
          ))
        }
      </div>
    </div>

    <!-- Project Timeline -->
    <div class="mb-12 sm:mb-16">
      <ProjectTimeline />
    </div>

    <!-- Transparency Promise Box -->
    <div class="max-w-4xl mx-auto">
      <div class="bg-accent-green/10 border border-accent-green/30 rounded-xl p-6 sm:p-8">
        <div class="flex items-start gap-4 mb-4">
          <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-accent-green/20 rounded-lg flex items-center justify-center">
            <Icon name="mdi:shield-check" class="w-5 h-5 sm:w-6 sm:h-6 text-accent-green" />
          </div>
          <div class="flex-1">
            <h3 class="text-lg sm:text-xl font-bold mb-3 text-primary transition-colors">
              Transparency Promise
            </h3>
            <p class="text-sm sm:text-base text-secondary mb-4 leading-relaxed transition-colors">
              No surprises. Regular updates. You're always in the loop.
            </p>
            <div class="space-y-3">
              <div class="flex items-start gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <p class="text-sm text-secondary transition-colors">
                  Weekly progress updates with clear milestones
                </p>
              </div>
              <div class="flex items-start gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <p class="text-sm text-secondary transition-colors">
                  No hidden costs or surprise charges
                </p>
              </div>
              <div class="flex items-start gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <p class="text-sm text-secondary transition-colors">
                  Direct communication with founders, no layers
                </p>
              </div>
              <div class="flex items-start gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green flex-shrink-0 mt-0.5" />
                <p class="text-sm text-secondary transition-colors">
                  Full access to project documentation and reports
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>
